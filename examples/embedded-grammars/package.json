{
  "name": "minotaur-embedded-grammar-example",
  "version": "1.0.0",
  "description": "Comprehensive example demonstrating Minotaur embedded grammar parsing with HTML, CSS, and JavaScript",
  "main": "src/demo.js",
  "scripts": {
    "build": "tsc",
    "demo": "ts-node src/demo.ts",
    "test": "ts-node tests/run-tests.ts",
    "test:only": "ts-node tests/run-tests.ts --tests-only",
    "demo:only": "ts-node tests/run-tests.ts --demo-only",
    "generate": "ts-node src/ParserGenerator.ts",
    "clean": "rm -rf generated-parsers test-results",
    "validate": "npm run build && npm run test",
    "ci": "npm run clean && npm run build && npm run test:only",
    "dev": "ts-node --watch src/demo.ts",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write src/**/*.ts tests/**/*.ts"
  },
  "keywords": [
    "minotaur",
    "parser-generator",
    "embedded-grammars",
    "html",
    "css",
    "javascript",
    "multi-target",
    "compiler-compiler",
    "context-sensitive",
    "inheritance"
  ],
  "author": "Minotaur Team",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DevelApp-ai/Minotaur.git",
    "directory": "examples/embedded-grammars"
  },
  "bugs": {
    "url": "https://github.com/DevelApp-ai/Minotaur/issues"
  },
  "homepage": "https://github.com/DevelApp-ai/Minotaur#readme",
  "files": [
    "src/",
    "tests/",
    "grammars/",
    "html-examples/",
    "README.md"
  ],
  "directories": {
    "test": "tests",
    "example": "html-examples"
  },
  "config": {
    "outputDirectory": "./generated-parsers",
    "testResultsDirectory": "./test-results"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/DevelApp-ai"
  }
}


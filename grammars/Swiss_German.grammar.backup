Grammar: Swiss_German
TokenSplitter: Space
FormatType: CEBNF
ContextSensitive: true
SymbolTableSharing: hierarchical

/*
 * Swiss German Natural Language Grammar - Comprehensive Edition
 * 
 * This grammar provides extensive coverage of Swiss German (Schweizerdeutsch) including:
 * - Standard German grammar with Swiss variations
 * - Swiss-specific vocabulary and expressions
 * - Distinctive Swiss verb usage patterns (no preterite in spoken language)
 * - Swiss orthographic conventions
 * - Swiss administrative and cultural terminology
 * - Swiss temporal expressions and greetings
 * - Diminutives with -li suffix (Swiss style)
 * - Swiss pronunciation reflected in spelling
 * - Preference for perfect tense over preterite
 * - Swiss German loanwords from French and Italian
 */

Keywords: und, oder, aber, wenn, weil, dass, als, ob, wie, der, die, das, ein, eine, ich, du, er, sie, es, wir, ihr, sie, Sie, mein, dein, sein, ihr, unser, euer, dieser, diese, dieses, jener, welcher, nicht, kein, können, müssen, dürfen, sollen, wollen, mögen, haben, sein, werden, sich, zu, von, mit, nach, bei, in, an, auf, über, unter, vor, hinter, neben, zwischen, Velo, Trottoir, parkieren, Perron, Billette, Zückerli, Grüezi, Merci, Töffli

/* Swiss-specific markers */
@SWISS[vocabulary]      /* Marks Swiss-specific words */
@SWISS[administrative]  /* Swiss administrative terms */
@SWISS[french_loan]     /* French loanwords in Swiss German */
@SWISS[italian_loan]    /* Italian loanwords in Swiss German */

/* Top-level sentence structure */
<sentence> ::= <main-clause>
            | <subordinate-clause>
            | <compound-sentence>
            | <complex-sentence>
            | <swiss-greeting>

/* Swiss-specific greetings */
<swiss-greeting> ::= <standard-greeting> | <swiss-specific-greeting>

<standard-greeting> ::= "Guten Morgen" | "Guten Tag" | "Guten Abend" | "Auf Wiedersehen" | "Tschüss"

<swiss-specific-greeting> ::= @SWISS[vocabulary] ( "Grüezi" | "Grüessech" | "Guete Morge" | "Guete Tag" | "Guete Aabig" | "Uf Widerluege" | "Adé" | "Adieu" | "Ciao" | "Tschau" )

/* Main clause with V2 word order */
<main-clause> ::= <declarative-clause>
               | <interrogative-clause>
               | <imperative-clause>
               | <exclamative-clause>

/* V2 declarative */
<declarative-clause> ::= <topic-field> <opt-whitespace> <finite-verb> <opt-whitespace> <middle-field>? <opt-whitespace> <verb-complement>? <opt-whitespace> <final-field>? <punctuation>?

/* Topic field */
<topic-field> ::= <subject>
               | <adverbial>
               | <object>
               | <prepositional-phrase>

/* Middle field */
<middle-field> ::= <middle-field-element> ( <opt-whitespace> <middle-field-element> )*

<middle-field-element> ::= <subject>
                        | <negation>
                        | <adverb>
                        | <object>
                        | <indirect-object>
                        | <reflexive-pronoun>

/* Negation */
<negation> ::= "nicht" | "nie" | "niemals" | "nirgends" | "nirgendwo" | "niemand" | "nichts" | "kein" | "keine" | "keiner"

/* Verb complement */
<verb-complement> ::= <separable-prefix>
                   | <infinitive-phrase>
                   | <past-participle>
                   | <present-participle>
                   | <predicate-adjective>

<separable-prefix> ::= "ab" | "an" | "auf" | "aus" | "bei" | "ein" | "fest" | "her" | "hin" | "los" | "mit" | "nach" | "vor" | "weg" | "zu" | "zurück" | "zusammen"

<infinitive-phrase> ::= ( "zu" <opt-whitespace> )? <verb-infinitive> ( <opt-whitespace> <object> )?

<predicate-adjective> ::= <adjective>

/* Final field */
<final-field> ::= <subordinate-clause>
               | <relative-clause>
               | <prepositional-phrase>
               | <infinitive-clause>

/* Interrogative clause */
<interrogative-clause> ::= <yes-no-question>
                        | <wh-question>

<yes-no-question> ::= <finite-verb> <opt-whitespace> <subject> <opt-whitespace> <middle-field>? <opt-whitespace> <verb-complement>? <opt-whitespace> <final-field>? "?"

<wh-question> ::= <question-word> <opt-whitespace> <finite-verb> <opt-whitespace> <subject>? <opt-whitespace> <middle-field>? <opt-whitespace> <verb-complement>? <opt-whitespace> <final-field>? "?"

/* Imperative clause */
<imperative-clause> ::= <verb-imperative> <opt-whitespace> <middle-field>? <opt-whitespace> <object>? <opt-whitespace> <adverbial>? ( "!" | "." )?

/* Exclamative clause */
<exclamative-clause> ::= <exclamative-word> <opt-whitespace> <adjective>? <opt-whitespace> <noun-phrase>? <opt-whitespace> <finite-verb>? <opt-whitespace> <middle-field>? "!"

<exclamative-word> ::= "wie" | "was" <opt-whitespace> "für" | "welch" | "so"

/* Subordinate clause */
<subordinate-clause> ::= <subordinating-conjunction> <opt-whitespace> <subordinate-content>

<subordinate-content> ::= <subject> <opt-whitespace> <middle-field>? <opt-whitespace> <verb-phrase-subordinate>

<verb-phrase-subordinate> ::= ( <auxiliary-verb> <opt-whitespace> )* <main-verb>

/* Relative clause */
<relative-clause> ::= <relative-pronoun> <opt-whitespace> <subject>? <opt-whitespace> <middle-field>? <opt-whitespace> <finite-verb> <opt-whitespace> <verb-complement>?

<relative-pronoun> ::= @CASE[nominative] ( "der" | "die" | "das" | "welcher" | "welche" | "welches" )
                    | @CASE[accusative] ( "den" | "die" | "das" | "welchen" | "welche" | "welches" )
                    | @CASE[dative] ( "dem" | "der" | "dem" | "welchem" | "welcher" | "welchem" )
                    | @CASE[genitive] ( "dessen" | "deren" | "dessen" | "wessen" )

/* Compound and complex sentences */
<compound-sentence> ::= <main-clause> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <main-clause>

<coordinating-conjunction> ::= "und" | "oder" | "aber" | "denn" | "sondern" | "doch"

<complex-sentence> ::= <main-clause> <opt-whitespace> <subordinate-clause>
                    | <subordinate-clause> <opt-whitespace> "," <opt-whitespace> <main-clause>

<subordinating-conjunction> ::= "dass" | "ob" | "weil" | "wenn" | "als" | "während" | "bevor" | "nachdem" | "seit" | "bis" | "obwohl" | "damit" | "indem" | "sobald" | "falls" | "sofern"

/* Infinitive clause */
<infinitive-clause> ::= "zu" <opt-whitespace> <verb-infinitive> ( <opt-whitespace> <object> )? ( <opt-whitespace> <adverbial> )?

/* Subject with case marking */
<subject> ::= @CASE[nominative] ( <pronoun-subject> | <noun-phrase> | <proper-noun> )

/* Pronouns */
<pronoun-subject> ::= <personal-pronoun-nominative>
                   | <demonstrative-pronoun>
                   | <indefinite-pronoun>
                   | <interrogative-pronoun>

<personal-pronoun-nominative> ::= @CASE[nominative] ( "ich" | "du" | "er" | "sie" | "es" | "wir" | "ihr" | "sie" | "Sie" | "man" )

<personal-pronoun-accusative> ::= @CASE[accusative] ( "mich" | "dich" | "ihn" | "sie" | "es" | "uns" | "euch" | "sie" | "Sie" )

<personal-pronoun-dative> ::= @CASE[dative] ( "mir" | "dir" | "ihm" | "ihr" | "ihm" | "uns" | "euch" | "ihnen" | "Ihnen" )

<personal-pronoun-genitive> ::= @CASE[genitive] ( "meiner" | "deiner" | "seiner" | "ihrer" | "seiner" | "unser" | "euer" | "ihrer" | "Ihrer" )

<reflexive-pronoun> ::= @REFLEXIVE "mich" | "dich" | "sich" | "uns" | "euch" | "sich"

<pronoun> ::= <personal-pronoun-nominative>
           | <personal-pronoun-accusative>
           | <personal-pronoun-dative>
           | <personal-pronoun-genitive>
           | <possessive-pronoun>
           | <demonstrative-pronoun>
           | <relative-pronoun>
           | <reflexive-pronoun>
           | <indefinite-pronoun>
           | <interrogative-pronoun>

<possessive-pronoun> ::= @GENDER[masculine] @CASE[nominative] ( "mein" | "dein" | "sein" | "ihr" | "unser" | "euer" | "ihr" | "Ihr" )
                      | @GENDER[feminine] @CASE[nominative] ( "meine" | "deine" | "seine" | "ihre" | "unsere" | "eure" | "ihre" | "Ihre" )
                      | @GENDER[neuter] @CASE[nominative] ( "mein" | "dein" | "sein" | "ihr" | "unser" | "euer" | "ihr" | "Ihr" )
                      | @NUMBER[plural] @CASE[nominative] ( "meine" | "deine" | "seine" | "ihre" | "unsere" | "eure" | "ihre" | "Ihre" )

<demonstrative-pronoun> ::= @GENDER[masculine] @CASE[nominative] ( "dieser" | "jener" | "der" )
                         | @GENDER[feminine] @CASE[nominative] ( "diese" | "jene" | "die" )
                         | @GENDER[neuter] @CASE[nominative] ( "dieses" | "jenes" | "das" )
                         | @NUMBER[plural] @CASE[nominative] ( "diese" | "jene" | "die" )

<indefinite-pronoun> ::= "man" | "jemand" | "niemand" | "etwas" | "nichts" | "alle" | "einige" | "manche" | "viele" | "wenige" | "andere" | "einer" | "eine" | "eines"

<interrogative-pronoun> ::= "wer" | "was" | "welcher" | "welche" | "welches"

/* Noun Phrase with Swiss-specific nouns */
<noun-phrase> ::= <determiner>? <opt-whitespace> <adjective-phrase>* <opt-whitespace> <noun> <opt-whitespace> <genitive-modifier>? <opt-whitespace> <relative-clause>?

<determiner> ::= <article>
              | <demonstrative-determiner>
              | <possessive-determiner>

<article> ::= <definite-article> | <indefinite-article>

/* Definite articles */
<definite-article> ::= @GENDER[masculine] @CASE[nominative] "der"
                    | @GENDER[feminine] @CASE[nominative] "die"
                    | @GENDER[neuter] @CASE[nominative] "das"
                    | @NUMBER[plural] @CASE[nominative] "die"
                    | @GENDER[masculine] @CASE[accusative] "den"
                    | @GENDER[feminine] @CASE[accusative] "die"
                    | @GENDER[neuter] @CASE[accusative] "das"
                    | @NUMBER[plural] @CASE[accusative] "die"
                    | @GENDER[masculine] @CASE[dative] "dem"
                    | @GENDER[feminine] @CASE[dative] "der"
                    | @GENDER[neuter] @CASE[dative] "dem"
                    | @NUMBER[plural] @CASE[dative] "den"
                    | @GENDER[masculine] @CASE[genitive] "des"
                    | @GENDER[feminine] @CASE[genitive] "der"
                    | @GENDER[neuter] @CASE[genitive] "des"
                    | @NUMBER[plural] @CASE[genitive] "der"

/* Indefinite articles */
<indefinite-article> ::= @GENDER[masculine] @CASE[nominative] "ein"
                      | @GENDER[feminine] @CASE[nominative] "eine"
                      | @GENDER[neuter] @CASE[nominative] "ein"
                      | @GENDER[masculine] @CASE[accusative] "einen"
                      | @GENDER[feminine] @CASE[accusative] "eine"
                      | @GENDER[neuter] @CASE[accusative] "ein"
                      | @GENDER[masculine] @CASE[dative] "einem"
                      | @GENDER[feminine] @CASE[dative] "einer"
                      | @GENDER[neuter] @CASE[dative] "einem"
                      | @GENDER[masculine] @CASE[genitive] "eines"
                      | @GENDER[feminine] @CASE[genitive] "einer"
                      | @GENDER[neuter] @CASE[genitive] "eines"

<demonstrative-determiner> ::= <demonstrative-pronoun>

<possessive-determiner> ::= <possessive-pronoun>

/* Nouns with Swiss-specific vocabulary */
<noun> ::= <simple-noun>
        | <swiss-noun>
        | <compound-noun>
        | <diminutive-noun>

<simple-noun> ::= @GENDER[masculine|feminine|neuter] @NUMBER[singular|plural] @CASE[nominative|accusative|dative|genitive] <noun-stem> <noun-suffix>?

/* Swiss-specific nouns */
<swiss-noun> ::= <swiss-general-noun>
              | <swiss-french-loan>
              | <swiss-administrative-noun>

<swiss-general-noun> ::= @SWISS[vocabulary] ( "Velo" | "Trottoir" | "Trams" | "Tramway" | "Perron" | "Billette" | "Billett" | "Coiffeur" | "Coiffeuse" | "Camion" | "Occasion" | "Portemonnaie" | "Parkplatz" | "Töffli" | "Natel" | "Estrich" | "Putzen" | "Rüebli" | "Rüeblitorte" | "Weggli" | "Brötli" | "Gipfeli" | "Anken" | "Zückerli" | "Guetzli" | "Rösti" )

<swiss-french-loan> ::= @SWISS[french_loan] ( "Trottoir" | "Perron" | "Billette" | "Billett" | "Coiffeur" | "Coiffeuse" | "Camion" | "Portemonnaie" | "Poulet" | "Cordon bleu" | "Filet" )

<swiss-administrative-noun> ::= @SWISS[administrative] ( "Kanton" | "Kantone" | "Gemeinde" | "Ständerat" | "Nationalrat" | "Bundesrat" )

/* Swiss diminutives with -li suffix */
<diminutive-noun> ::= @SWISS[vocabulary] <noun-stem> "li"

<compound-noun> ::= <noun-stem> <opt-whitespace>? <noun>

<noun-stem> ::= /[A-ZÄÖÜ][a-zäöüß]*/

<noun-suffix> ::= "e" | "en" | "er" | "n" | "s" | "es" | "heit" | "keit" | "ung" | "schaft" | "tum" | "nis"

<genitive-modifier> ::= <noun-phrase>

<proper-noun> ::= /[A-ZÄÖÜ][a-zäöüß]*/
               | <multi-word-proper-noun>
               | <swiss-place-name>

<multi-word-proper-noun> ::= /[A-ZÄÖÜ][a-zäöüß]*/ ( <opt-whitespace> /[A-ZÄÖÜ][a-zäöüß]*/ )+

<swiss-place-name> ::= @SWISS[vocabulary] ( "Zürich" | "Genf" | "Basel" | "Bern" | "Lausanne" | "Winterthur" | "Luzern" | "St. Gallen" | "Lugano" | "Biel" | "Thun" | "Köniz" | "La Chaux-de-Fonds" | "Fribourg" | "Schaffhausen" | "Chur" | "Vernier" | "Neuenburg" | "Uster" | "Sion" )

/* Adjective phrases */
<adjective-phrase> ::= <degree-modifier>? <opt-whitespace> <adjective>

<degree-modifier> ::= "sehr" | "ziemlich" | "recht" | "äußerst" | "extrem" | "wenig" | "zu" | "so" | "ganz"

<adjective> ::= <adjective-positive>
             | <adjective-comparative>
             | <adjective-superlative>

<adjective-positive> ::= <adjective-strong-decl>
                      | <adjective-weak-decl>
                      | <adjective-mixed-decl>
                      | <adjective-undeclined>

<adjective-strong-decl> ::= @DECLENSION[strong] <adjective-stem> <strong-ending>

<adjective-weak-decl> ::= @DECLENSION[weak] <adjective-stem> <weak-ending>

<adjective-mixed-decl> ::= @DECLENSION[mixed] <adjective-stem> <mixed-ending>

<adjective-undeclined> ::= <adjective-stem>

<strong-ending> ::= "er" | "e" | "es" | "en" | "em" | "er"

<weak-ending> ::= "e" | "en"

<mixed-ending> ::= "er" | "e" | "es" | "en"

<adjective-comparative> ::= @DEGREE[comparative] ( <regular-comparative> | <irregular-comparative> )

<regular-comparative> ::= <adjective-stem> "er"

<irregular-comparative> ::= "besser" | "größer" | "höher" | "näher" | "mehr"

<adjective-superlative> ::= @DEGREE[superlative] ( <regular-superlative> | <irregular-superlative> )

<regular-superlative> ::= <adjective-stem> "st" ( "e" | "en" | "er" | "es" )?
                       | "am" <opt-whitespace> <adjective-stem> "sten"

<irregular-superlative> ::= "best" ( "e" | "en" | "er" | "es" )? | "größt" ( "e" | "en" | "er" | "es" )? | "höchst" ( "e" | "en" | "er" | "es" )? | "nächst" ( "e" | "en" | "er" | "es" )? | "meist" ( "e" | "en" | "er" | "es" )?

<adjective-stem> ::= /[a-zäöüß]+/

/* Predicate and verb phrases */
<predicate> ::= <verb-phrase>

<verb-phrase> ::= <simple-verb-phrase>
               | <compound-verb-phrase>
               | <modal-verb-phrase>
               | <passive-verb-phrase>

<simple-verb-phrase> ::= <finite-verb> ( <opt-whitespace> <adverb> )?

<finite-verb> ::= <verb-present>
               | <verb-perfect>

/* Swiss German strongly prefers perfect tense over preterite in spoken language */
<compound-verb-phrase> ::= <auxiliary-verb> <opt-whitespace> <adverb>? <opt-whitespace> <verb-complement>

<modal-verb-phrase> ::= <modal-verb> <opt-whitespace> <adverb>? <opt-whitespace> <infinitive-phrase>

<passive-verb-phrase> ::= @VOICE[passive] <werden-verb> <opt-whitespace> <past-participle>

/* Auxiliary verbs */
<auxiliary-verb> ::= <modal-verb>
                  | <haben-verb>
                  | <sein-verb>
                  | <werden-verb>

<modal-verb> ::= <modal-present> | <modal-past>

<modal-present> ::= @MOOD[modal] ( "kann" | "kannst" | "können" | "könnt" | "will" | "willst" | "wollen" | "wollt" | "muss" | "musst" | "müssen" | "müsst" | "darf" | "darfst" | "dürfen" | "dürft" | "soll" | "sollst" | "sollen" | "sollt" | "mag" | "magst" | "mögen" | "mögt" | "möchte" | "möchtest" | "möchten" | "möchtet" )

<modal-past> ::= @MOOD[modal] @TENSE[past] ( "konnte" | "konntest" | "konnten" | "konntet" | "wollte" | "wolltest" | "wollten" | "wolltet" | "musste" | "musstest" | "mussten" | "musstet" | "durfte" | "durftest" | "durften" | "durftet" | "sollte" | "solltest" | "sollten" | "solltet" | "mochte" | "mochtest" | "mochten" | "mochtet" )

/* Main verb tenses - Swiss German prefers perfect */
<main-verb> ::= <verb-present>
             | <verb-perfect>
             | <verb-pluperfect>
             | <verb-future>
             | <verb-infinitive>

<verb-infinitive> ::= ( "zu" <opt-whitespace> )? <verb-stem> ( "en" | "n" )

<verb-present> ::= @TENSE[present] ( <regular-verb-present> | <irregular-verb-present> | <swiss-verb-form> )

<regular-verb-present> ::= <verb-stem> ( "e" | "st" | "t" | "en" | "t" )

<verb-stem> ::= /[a-zäöüß]+/

/* Swiss-specific verb forms */
<swiss-verb-form> ::= @SWISS[vocabulary] ( "parkiere" | "parkierst" | "parkiert" | "parkieren" | "putze" | "putzt" | "putzen" )

<irregular-verb-present> ::= @IRREGULAR "bin" | "bist" | "ist" | "sind" | "seid" | "habe" | "hast" | "hat" | "haben" | "habt" | "werde" | "wirst" | "wird" | "werden" | "werdet" | "gehe" | "gehst" | "geht" | "gehen" | "komme" | "kommst" | "kommt" | "kommen" | "nehme" | "nimmst" | "nimmt" | "nehmen" | "nehmt" | "gebe" | "gibst" | "gibt" | "geben" | "gebt" | "sehe" | "siehst" | "sieht" | "sehen" | "seht" | "esse" | "isst" | "isst" | "essen" | "esst" | "fahre" | "fährst" | "fährt" | "fahren" | "fahrt" | "lese" | "liest" | "liest" | "lesen" | "lest"

/* Perfect tense - preferred in Swiss German */
<verb-perfect> ::= @TENSE[perfect] <perfect-auxiliary> <opt-whitespace> <past-participle>

<perfect-auxiliary> ::= "habe" | "hast" | "hat" | "haben" | "habt" | "bin" | "bist" | "ist" | "sind" | "seid"

<verb-pluperfect> ::= @TENSE[pluperfect] <pluperfect-auxiliary> <opt-whitespace> <past-participle>

<pluperfect-auxiliary> ::= "hatte" | "hattest" | "hatte" | "hatten" | "hattet" | "war" | "warst" | "war" | "waren" | "wart"

<verb-future> ::= @TENSE[future] <future-auxiliary> <opt-whitespace> <verb-infinitive>

<future-auxiliary> ::= "werde" | "wirst" | "wird" | "werden" | "werdet"

<past-participle> ::= <regular-past-participle> | <irregular-past-participle>

<regular-past-participle> ::= "ge" <verb-stem> ( "t" | "et" )

<present-participle> ::= <verb-stem> "end"

<irregular-past-participle> ::= @IRREGULAR "gewesen" | "gehabt" | "geworden" | "gegangen" | "gekommen" | "genommen" | "gegeben" | "gesehen" | "gegessen" | "gefahren" | "gelesen" | "geschrieben" | "gesprochen" | "getrunken" | "gefunden" | "gedacht" | "gebracht" | "gewusst" | "getan" | "gelassen" | "gehalten" | "gestanden" | "verstanden" | "begonnen" | "gewonnen" | "gesungen" | "getragen" | "geschlafen" | "gerufen"

<haben-verb> ::= "habe" | "hast" | "hat" | "haben" | "habt" | "hatte" | "hattest" | "hatte" | "hatten" | "hattet"

<sein-verb> ::= "bin" | "bist" | "ist" | "sind" | "seid" | "war" | "warst" | "war" | "waren" | "wart"

<werden-verb> ::= "werde" | "wirst" | "wird" | "werden" | "werdet" | "wurde" | "wurdest" | "wurde" | "wurden" | "wurdet"

<verb-imperative> ::= <verb-stem> ( "e" | "" ) | <irregular-imperative>

<irregular-imperative> ::= "sei" | "seid" | "seien" | "hab" | "habt" | "haben" | "werde" | "werdet" | "werden"

/* Objects */
<object> ::= <direct-object>

<direct-object> ::= @CASE[accusative] ( <noun-phrase> | <pronoun-object> )

<indirect-object> ::= @CASE[dative] ( <noun-phrase> | <pronoun-object> )

<pronoun-object> ::= <personal-pronoun-accusative>
                  | <personal-pronoun-dative>
                  | <demonstrative-pronoun>
                  | <reflexive-pronoun>

/* Adverbials */
<adverbial> ::= <adverb>
             | <adverb-phrase>
             | <prepositional-phrase>

<adverb-phrase> ::= <degree-adverb-modifier>? <opt-whitespace> <adverb>

<degree-adverb-modifier> ::= "sehr" | "ziemlich" | "recht" | "ganz"

<adverb> ::= <time-adverb>
          | <place-adverb>
          | <manner-adverb>
          | <degree-adverb>

<time-adverb> ::= "jetzt" | "nun" | "heute" | "gestern" | "morgen" | "bald" | "immer" | "nie" | "oft" | "manchmal" | "schon" | "noch" | "gleich" | "vorher" | "nachher" | "früher" | "später" | "damals" | "neulich"

<place-adverb> ::= "hier" | "dort" | "da" | "überall" | "nirgends" | "irgendwo" | "oben" | "unten" | "vorne" | "hinten" | "links" | "rechts" | "draußen" | "drinnen" | "weg" | "fort"

<manner-adverb> ::= "gut" | "schlecht" | "schnell" | "langsam" | "gern" | "gerne" | "so" | "anders" | "zusammen" | "allein" | "einfach" | "schwer" | "leicht"

<degree-adverb> ::= "sehr" | "zu" | "ganz" | "ziemlich" | "recht" | "etwas" | "wenig" | "kaum" | "fast" | "etwa"

/* Prepositional phrases */
<prepositional-phrase> ::= <preposition> <opt-whitespace> <noun-phrase>

<preposition> ::= <accusative-preposition>
               | <dative-preposition>
               | <genitive-preposition>
               | <two-way-preposition>

<accusative-preposition> ::= @CASE[accusative] ( "durch" | "für" | "gegen" | "ohne" | "um" | "bis" | "entlang" )

<dative-preposition> ::= @CASE[dative] ( "aus" | "bei" | "mit" | "nach" | "seit" | "von" | "zu" | "gegenüber" )

<genitive-preposition> ::= @CASE[genitive] ( "während" | "wegen" | "trotz" | "statt" | "anstatt" | "außerhalb" | "innerhalb" | "oberhalb" | "unterhalb" )

<two-way-preposition> ::= @CASE[accusative|dative] ( "an" | "auf" | "hinter" | "in" | "neben" | "über" | "unter" | "vor" | "zwischen" )

/* Question words */
<question-word> ::= <interrogative-pronoun>
                 | <interrogative-adverb>

<interrogative-adverb> ::= "wo" | "wohin" | "woher" | "wann" | "warum" | "wie" | "wieso" | "weshalb"

/* Punctuation */
<punctuation> ::= "." | "!" | "?" | "," | ";" | ":" | "..." | "-" | "–" | "—"

/* Whitespace */
<whitespace> ::= /[ \t\n\r]+/

<opt-whitespace> ::= /[ \t\n\r]*/

/* Context-sensitive agreement rules */

@CONTEXT_RULE[article-noun-agreement]:
    IF <article>.@GENDER == <noun>.@GENDER
    THEN VALID
    ELSE ERROR "Article and noun gender must agree"

@CONTEXT_RULE[article-noun-case-agreement]:
    IF <article>.@CASE == <noun>.@CASE
    THEN VALID
    ELSE ERROR "Article and noun case must agree"

@CONTEXT_RULE[adjective-noun-agreement]:
    IF <adjective>.@GENDER == <noun>.@GENDER AND <adjective>.@CASE == <noun>.@CASE
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in gender and case"

@CONTEXT_RULE[v2-word-order]:
    IF <main-clause> CONTAINS <finite-verb> AT_POSITION 2
    THEN VALID
    ELSE WARNING "Main clause should have verb in second position (V2)"

@CONTEXT_RULE[reflexive-agreement]:
    IF <reflexive-pronoun>.@PERSON == <subject>.@PERSON
    THEN VALID
    ELSE ERROR "Reflexive pronoun must agree with subject"

@CONTEXT_RULE[verb-bracket]:
    IF <subordinate-clause> HAS_VERB_FINAL_ORDER
    THEN VALID
    ELSE ERROR "Subordinate clause must have verb-final word order"

@CONTEXT_RULE[preposition-case]:
    IF <preposition>.@CASE == <noun-phrase>.@CASE
    THEN VALID
    ELSE ERROR "Preposition governs specific case"

@CONTEXT_RULE[swiss-perfect-preference]:
    IF <verb-tense> == "preterite" AND <context> == "spoken"
    THEN WARNING "Swiss German strongly prefers perfect tense over preterite in spoken language"
    ELSE VALID

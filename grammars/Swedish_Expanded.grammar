                      | "för övrigt" | "ytterligare" | "tillika"

<conclusive-discourse> ::= "alltså" | "således" | "följaktligen" | "sammanfattningsvis"
                        | "kort sagt" | "med andra ord"

<exemplification-discourse> ::= "till exempel" | "t.ex." | "exempelvis" | "som till exempel"
                             | "såsom"

// ============================================================================
// TAG QUESTIONS AND ELLIPTICAL STRUCTURES
// ============================================================================

<tag-question> ::= <statement> <opt-whitespace> "," <opt-whitespace> <tag-marker>

<tag-marker> ::= "eller hur" | "inte sant" | "va" | "visst" | "eller" | "väl"

<elliptical-structure> ::= <noun-phrase> | <adjective-phrase> | <adverb> | <prepositional-phrase>

// ============================================================================
// REPORTED SPEECH AND INDIRECT DISCOURSE
// ============================================================================

<reported-speech> ::= <direct-speech> | <indirect-speech> | <free-indirect-speech>

<direct-speech> ::= <subject> <opt-whitespace> <verb> <opt-whitespace> ":" 
                    <opt-whitespace> "\"" <sentence> "\""

<indirect-speech> ::= <subject> <opt-whitespace> <verb> <opt-whitespace> "att"
                     <opt-whitespace> <subordinate-clause>

<free-indirect-speech> ::= <sentence> <opt-whitespace> <sentence>

// ============================================================================
// CLEFT SENTENCES
// ============================================================================

<cleft-sentence> ::= <it-cleft> | <pseudo-cleft> | <reversed-cleft>

<it-cleft> ::= "det" <opt-whitespace> "är" <opt-whitespace> <noun-phrase>
             <opt-whitespace> "som" <opt-whitespace> <verb-phrase>

<pseudo-cleft> ::= "det" <opt-whitespace> "som" <opt-whitespace> <subordinate-clause>
                 <opt-whitespace> "är" <opt-whitespace> <noun-phrase>

<reversed-cleft> ::= <noun-phrase> <opt-whitespace> "är" <opt-whitespace> "det"
                   <opt-whitespace> "som" <opt-whitespace> <verb-phrase>

// ============================================================================
// CORRELATIVE CONSTRUCTIONS EXTENDED
// ============================================================================

<correlative-construction-extended> ::= <both-and> | <either-or> | <neither-nor> | <not-only-but-also>

<both-and> ::= "både" <opt-whitespace> <phrase> <opt-whitespace> "och" <opt-whitespace> <phrase>

<either-or> ::= "antingen" <opt-whitespace> <phrase> <opt-whitespace> "eller" 
              <opt-whitespace> <phrase>

<neither-nor> ::= "varken" <opt-whitespace> <phrase> <opt-whitespace> "eller" 
                <opt-whitespace> <phrase>

<not-only-but-also> ::= "inte bara" <opt-whitespace> <phrase> <opt-whitespace> "utan även"
                      <opt-whitespace> <phrase>


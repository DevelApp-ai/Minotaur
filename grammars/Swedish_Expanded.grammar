@CONTEXT_RULE[supine-with-auxiliary]:
    IF <perfect-tense> OR <pluperfect-tense>
    THEN "ha" OR "vara" WITH_SUPINE_FORM
    ELSE ERROR "Supine form requires auxiliary"

@CONTEXT_RULE[present-participle-usage]:
    IF <present-participle> USED_ATTRIBUTIVELY
    THEN MUST_MODIFY_NOUN
    ELSE ERROR "Present participle must modify noun when attributive"

@CONTEXT_RULE[past-participle-agreement-swedish]:
    IF <past-participle> USED_ATTRIBUTIVELY
    THEN MUST_AGREE_IN_GENDER_AND_NUMBER
    ELSE ERROR "Past participle agreement required"

@CONTEXT_RULE[reflexive-pronoun-agreement]:
    IF <reflexive-verb> USED
    THEN <reflexive-pronoun> MUST_AGREE_WITH_SUBJECT
    ELSE ERROR "Reflexive pronoun must agree with subject"

@CONTEXT_RULE[deponent-verb-no-passive]:
    IF <deponent-verb> USED
    THEN NOT_PASSIVE_DESPITE_S_ENDING
    ELSE ERROR "Deponent verbs are not passive"

@CONTEXT_RULE[phrasal-verb-particle-stress]:
    IF <phrasal-verb> USED
    THEN STRESS_ON_PARTICLE
    ELSE STRESS_ON_VERB

@CONTEXT_RULE[compound-word-stress]:
    IF <compound-noun> FORMED
    THEN STRESS_ON_FIRST_COMPONENT
    ELSE REGULAR_STRESS

@CONTEXT_RULE[measurement-singular-form]:
    IF <measurement-expression> WITH_NUMBER_GREATER_THAN_ONE
    THEN <unit> MAY_BE_SINGULAR_OR_PLURAL
    ELSE <unit> IS_SINGULAR

@CONTEXT_RULE[formal-ni-capitalized]:
    IF FORMAL_ADDRESS_USED
    THEN "Ni" MAY_BE_CAPITALIZED
    ELSE USE_LOWERCASE

@CONTEXT_RULE[sentence-adverbial-position]:
    IF <sentence-adverbial> PRESENT
    THEN TYPICALLY_AFTER_FINITE_VERB_IN_MAIN_CLAUSE
    ELSE POSITION_VARIES

@CONTEXT_RULE[intensifier-with-adjective]:
    IF <intensifier> USED
    THEN MUST_PRECEDE_ADJECTIVE_OR_ADVERB
    ELSE ERROR "Intensifier position error"

@CONTEXT_RULE[indefinite-pronoun-agreement]:
    IF <indefinite-pronoun> USED_AS_SUBJECT
    THEN <verb> MUST_AGREE
    ELSE ERROR "Indefinite pronoun verb agreement"

@CONTEXT_RULE[demonstrative-denna-formal]:
    IF "denna" | "detta" | "dessa" USED
    THEN INDICATES_FORMAL_REGISTER
    ELSE NEUTRAL_REGISTER

@CONTEXT_RULE[possessive-s-no-apostrophe]:
    IF POSSESSIVE_S_MARKER
    THEN NO_APOSTROPHE_USED_IN_SWEDISH
    ELSE ERROR "Swedish does not use apostrophe for possessive"

@CONTEXT_RULE[quotative-att-required]:
    IF <indirect-speech> WITH_SPEECH_VERB
    THEN "att" TYPICALLY_REQUIRED
    ELSE ERROR "Quotative construction requires att"

/* END OF SWEDISH GRAMMAR */

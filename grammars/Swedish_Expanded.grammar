// ============================================================================
// CONTEXT-SENSITIVE VALIDATION RULES EXTENDED
// ============================================================================

@CONTEXT_RULE[discourse-marker-position]:
    IF <discourse-marker> USED
    THEN TYPICALLY_SENTENCE_INITIAL_OR_AFTER_FINITE_VERB
    ELSE ERROR "Discourse marker position error"

@CONTEXT_RULE[tag-question-agreement]:
    IF <tag-question> USED
    THEN <tag-marker> MUST_MATCH_STATEMENT_POLARITY
    ELSE ERROR "Tag question must match statement"

@CONTEXT_RULE[reported-speech-tense-backshift]:
    IF <indirect-speech> USED
    THEN <subordinate-clause-verb> TENSE_MAY_BACKSHIFT
    ELSE <subordinate-clause-verb> TENSE_REMAINS

@CONTEXT_RULE[cleft-sentence-structure-swedish]:
    IF <it-cleft> USED
    THEN "det" MUST_PRECEDE "är" AND "som" MUST_INTRODUCE_RELATIVE_CLAUSE
    ELSE ERROR "Cleft sentence structure violation"

@CONTEXT_RULE[correlative-parallelism]:
    IF <correlative-construction> USED
    THEN BOTH_PHRASES MUST_BE_SYNTACTICALLY_PARALLEL
    ELSE ERROR "Correlative phrases must be parallel"

@CONTEXT_RULE[dialectal-consistency]:
    IF <dialectal-variation> USED
    THEN MAINTAIN_DIALECT_THROUGHOUT_SENTENCE
    ELSE ERROR "Mixed dialects in single sentence"

@CONTEXT_RULE[progressive-aspect-syntax]:
    IF <progressive-aspect> USED
    THEN "hålla på att" MUST_BE_FOLLOWED_BY_INFINITIVE
    ELSE ERROR "Progressive aspect requires infinitive"

@CONTEXT_RULE[habitual-aspect-syntax]:
    IF <habitual-aspect> USED
    THEN "bruka" MUST_BE_FOLLOWED_BY_INFINITIVE
    ELSE ERROR "Habitual aspect requires infinitive"

@CONTEXT_RULE[causative-syntax-swedish]:
    IF <causative-construction> USED
    THEN ( "låta" | "få" ) WITH_OBJECT WITH_INFINITIVE
    ELSE ERROR "Causative construction requires specific syntax"

@CONTEXT_RULE[permissive-syntax-swedish]:
    IF <permissive-construction> USED
    THEN "tillåta" WITH_OBJECT WITH_"att"_INFINITIVE
    ELSE ERROR "Permissive construction requires specific syntax"

@CONTEXT_RULE[idiomatic-fixed-form]:
    IF <idiomatic-expression> USED
    THEN EXPRESSION_MUST_BE_FIXED_FORM
    ELSE WARNING "Non-standard idiomatic expression"

@CONTEXT_RULE[temporal-expression-case]:
    IF <temporal-expression> USED
    THEN MAY_USE_SPECIFIC_PREPOSITIONS
    ELSE ERROR "Temporal expressions have specific requirements"

@CONTEXT_RULE[conditional-mood-swedish]:
    IF <conditional-clause> PRESENT
    THEN <verb> SHOULD_USE_PAST_TENSE_OR_"skulle"
    ELSE ERROR "Conditional requires past tense or skulle"

@CONTEXT_RULE[comparative-än]:
    IF <comparative-adjective> USED
    THEN USE_"än"_FOR_COMPARISON
    ELSE ERROR "Comparatives use än"

@CONTEXT_RULE[superlative-definiteness]:
    IF <superlative-adjective> USED_ATTRIBUTIVELY
    THEN DEFINITE_ARTICLE_REQUIRED
    ELSE ERROR "Superlatives require definite form"

@CONTEXT_RULE[negation-placement-swedish]:
    IF <negation> USED
    THEN <negation> TYPICALLY_FOLLOWS_FINITE_VERB
    ELSE ERROR "Negation placement error"

@CONTEXT_RULE[question-word-fronting-swedish]:
    IF <wh-question> USED
    THEN <question-word> MUST_BE_SENTENCE_INITIAL
    ELSE ERROR "Question words must be fronted"

@CONTEXT_RULE[relative-clause-marker-swedish]:
    IF <relative-clause> USED
    THEN USE_"som"_AS_RELATIVE_MARKER
    ELSE ERROR "Relative clauses use som"

@CONTEXT_RULE[s-passive-formation]:
    IF <s-passive> USED
    THEN VERB_STEM_PLUS_"s"
    ELSE ERROR "S-passive formation error"

@CONTEXT_RULE[bli-passive-participle]:
    IF <bli-passive> USED
    THEN "bli" MUST_BE_FOLLOWED_BY_PAST_PARTICIPLE
    ELSE ERROR "Bli-passive requires past participle"

@CONTEXT_RULE[double-determination]:
    IF <adjective> MODIFIES <definite-noun>
    THEN BOTH_ARTICLE_AND_SUFFIX_USED
    ELSE ERROR "Double determination required"

@CONTEXT_RULE[verb-particle-placement]:
    IF <separable-verb> USED
    THEN PARTICLE_PLACEMENT_DEPENDS_ON_CLAUSE_TYPE
    ELSE ERROR "Verb particle placement error"

@CONTEXT_RULE[infinitive-marker-swedish]:
    IF <infinitive> USED
    THEN "att" MAY_PRECEDE_INFINITIVE
    ELSE ERROR "Infinitive marker usage"

@CONTEXT_RULE[perfect-auxiliary]:
    IF <perfect-tense> USED
    THEN USE_"ha"_OR_"vara"_AS_AUXILIARY
    ELSE ERROR "Perfect tense requires auxiliary"

@CONTEXT_RULE[future-construction]:
    IF <future-tense> EXPRESSED
    THEN USE ( "ska" | "kommer att" ) WITH_INFINITIVE
    ELSE USE_PRESENT_TENSE_FOR_FUTURE

@CONTEXT_RULE[imperative-subject-deletion-swedish]:
    IF <verb> IN_IMPERATIVE_MOOD
    THEN <subject> TYPICALLY_DELETED
    ELSE <subject> PRESENT

@CONTEXT_RULE[clitic-pronoun-placement]:
    IF <clitic-pronoun> PRESENT
    THEN <clitic> FOLLOWS_FINITE_VERB
    ELSE ERROR "Clitic placement violation"

@CONTEXT_RULE[compound-word-swedish]:
    IF <compound-word> FORMED
    THEN COMPONENTS_JOINED_DIRECTLY_OR_WITH_LINKING_S
    ELSE ERROR "Compound word formation error"

@CONTEXT_RULE[gender-consistency-swedish]:
    IF <noun> HAS_GENDER
    THEN ALL_MODIFIERS_MUST_AGREE_IN_GENDER
    ELSE ERROR "Gender agreement violation"

@CONTEXT_RULE[definiteness-marking]:
    IF <noun> IS_DEFINITE
    THEN USE_SUFFIX ( "en" | "et" | "n" | "t" )
    ELSE NO_DEFINITENESS_SUFFIX

@CONTEXT_RULE[plural-indefinite-no-article]:
    IF <noun> IS_PLURAL AND INDEFINITE
    THEN NO_ARTICLE_USED
    ELSE ARTICLE_MAY_BE_USED


                  | "τἀνδρός" /* τοῦ ἀνδρός */

/* Elision patterns */
<elision-form> ::= "ἀλλ'" | "δ'" | "γ'" | "μ'" | "τ'" | "ἐπ'" | "ἀπ'" | "κατ'" | "μετ'" | "παρ'" | "ὑπ'"

/* ============================================================================ */
/* SUPPLEMENTARY PARTICIPLE CONSTRUCTIONS                                      */
/* ============================================================================ */

/* Supplementary participle (completing sense of main verb) */
<supplementary-participle> ::= <verb-of-perception> <opt-whitespace> <participle-phrase>
                            | <verb-of-knowledge> <opt-whitespace> <participle-phrase>
                            | <verb-of-emotion> <opt-whitespace> <participle-phrase>

<verb-of-perception> ::= "ὁράω" | "βλέπω" | "ἀκούω" | "αἰσθάνομαι"

<verb-of-knowledge> ::= "οἶδα" | "γιγνώσκω" | "μανθάνω" | "ἐπίσταμαι"

<verb-of-emotion> ::= "χαίρω" | "λυποῦμαι" | "αἰσχύνομαι" | "ἥδομαι"

/* ============================================================================ */
/* QUESTIONS WITH INTERROGATIVE PARTICLES                                      */
/* ============================================================================ */

<interrogative-particle-question> ::= <interrogative-particle> <opt-whitespace> <declarative-clause> ";"

<interrogative-particle> ::= "ἆρα" | "ἆρ'" | "ἦ" | "πότερον"

/* Double questions */
<double-question> ::= "πότερον" <opt-whitespace> <clause> <opt-whitespace> "ἤ" <opt-whitespace> <clause> ";"

/* Alternative questions */
<alternative-question> ::= <clause> <opt-whitespace> "ἤ" <opt-whitespace> <clause> ";"

/* Deliberative questions (subjunctive in questions) */
<deliberative-question> ::= <interrogative-word> <opt-whitespace> <verb-subjunctive> <opt-whitespace> <object>? ";"

/* ============================================================================ */
/* ADDITIONAL CONTEXT RULES FOR ADVANCED SYNTAX                                */
/* ============================================================================ */

@CONTEXT_RULE[dual-verb-agreement]:
    IF <subject>.@NUMBER == "dual"
    THEN <verb>.@NUMBER == "dual" AND <verb>.@PERSON IN [2, 3]
    ELSE VALID

@CONTEXT_RULE[optative-sequence-of-moods]:
    IF <main-verb>.@TENSE IN ["imperfect", "aorist", "pluperfect"] AND <subordinate-clause-type> == "purpose"
    THEN <subordinate-verb>.@MOOD == "optative"
    ELSE WARNING "Secondary sequence typically requires optative in purpose clauses"

@CONTEXT_RULE[subjunctive-sequence-of-moods]:
    IF <main-verb>.@TENSE IN ["present", "future", "perfect"] AND <subordinate-clause-type> == "purpose"
    THEN <subordinate-verb>.@MOOD == "subjunctive"
    ELSE WARNING "Primary sequence typically requires subjunctive in purpose clauses"

@CONTEXT_RULE[genitive-absolute-subject-mismatch]:
    IF <genitive-absolute>
    THEN <genitive-absolute>.SUBJECT != <main-clause>.SUBJECT
    ELSE WARNING "Genitive absolute typically has different subject from main clause"

@CONTEXT_RULE[supplementary-participle-agreement]:
    IF <supplementary-participle>
    THEN <participle>.@GENDER == <subject>.@GENDER AND <participle>.@NUMBER == <subject>.@NUMBER AND <participle>.@CASE == <subject>.@CASE
    ELSE ERROR "Supplementary participle must agree with subject"


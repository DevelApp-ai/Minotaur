<ionic-phonology> ::= /[α-ωά-ώἀ-ὤᾀ-ᾤ]+ηισι/ | /[α-ωά-ώἀ-ὤᾀ-ᾤ]+ησι/ /* ηισι > ησι */

/* Doric dialect (Sparta, Sicily) */
<doric-forms> ::= @DIALECT[doric] ( <doric-pronouns> | <doric-particles> | <doric-verbs> | <doric-phonology> )

<doric-pronouns> ::= "ἐγώ" | "τύ" | "ἁμές" | "ὑμές" /* ἁμές instead of ἡμεῖς */

<doric-particles> ::= "κα" | "μάν" | "μέν" | "δέ" | "γα" /* κα instead of ἄν */

<doric-verbs> ::= "ἐντί" | "λέγω" | "ποιῶ" | "ἔχω" /* ἐντί instead of εἰσί */

<doric-phonology> ::= /[α-ωά-ώἀ-ὤᾀ-ᾤ]+ᾱ/ /* long ᾱ instead of η */

/* Aeolic dialect (Lesbos, Sappho) */
<aeolic-forms> ::= @DIALECT[aeolic] ( <aeolic-pronouns> | <aeolic-particles> | <aeolic-verbs> | <aeolic-phonology> )

<aeolic-pronouns> ::= "ἔγων" | "τύ" | "ἄμμες" | "ὔμμες"


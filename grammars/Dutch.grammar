// ============================================================================
// CONTEXT-SENSITIVE VALIDATION RULES EXTENDED
// ============================================================================

@CONTEXT_RULE[discourse-marker-position-dutch]:
    IF <discourse-marker> USED
    THEN TYPICALLY_SENTENCE_INITIAL_OR_AFTER_FINITE_VERB
    ELSE ERROR "Discourse marker position error"

@CONTEXT_RULE[tag-question-agreement-dutch]:
    IF <tag-question> USED
    THEN <tag-marker> MUST_MATCH_STATEMENT
    ELSE ERROR "Tag question must match statement"

@CONTEXT_RULE[reported-speech-word-order]:
    IF <indirect-speech> USED
    THEN SUBORDINATE_CLAUSE_WORD_ORDER_REQUIRED
    ELSE ERROR "Indirect speech requires SOV order"

@CONTEXT_RULE[cleft-sentence-relative-pronoun]:
    IF <it-cleft> USED
    THEN USE_"die"_FOR_DE_WORDS_OR_"dat"_FOR_HET_WORDS
    ELSE ERROR "Cleft sentence relative pronoun error"

@CONTEXT_RULE[correlative-parallelism-dutch]:
    IF <correlative-construction> USED
    THEN BOTH_PHRASES_MUST_BE_PARALLEL
    ELSE ERROR "Correlative phrases must be parallel"

@CONTEXT_RULE[dialectal-consistency-dutch]:
    IF <dialectal-variation> USED
    THEN MAINTAIN_DIALECT_THROUGHOUT
    ELSE WARNING "Mixed dialects"

@CONTEXT_RULE[progressive-aspect-dutch]:
    IF <progressive-aspect> USED
    THEN "aan het" MUST_BE_FOLLOWED_BY_INFINITIVE_AND_"zijn"
    ELSE ERROR "Progressive aspect syntax error"

@CONTEXT_RULE[habitual-plegen]:
    IF <habitual-aspect> USED
    THEN "plegen te" MUST_BE_FOLLOWED_BY_INFINITIVE
    ELSE ERROR "Habitual aspect requires infinitive"

@CONTEXT_RULE[causative-laten]:
    IF <causative-construction> USED
    THEN "laten" WITH_OBJECT WITH_INFINITIVE
    ELSE ERROR "Causative construction syntax error"

@CONTEXT_RULE[perception-verb-construction]:
    IF <perception-construction> USED
    THEN PERCEPTION_VERB WITH_OBJECT WITH_INFINITIVE
    ELSE ERROR "Perception construction syntax error"

@CONTEXT_RULE[idiomatic-fixed-form-dutch]:
    IF <idiomatic-expression> USED
    THEN EXPRESSION_MUST_BE_FIXED
    ELSE WARNING "Non-standard idiom"

@CONTEXT_RULE[temporal-preposition]:
    IF <temporal-expression> USED
    THEN CORRECT_PREPOSITION_REQUIRED
    ELSE ERROR "Temporal expression preposition error"

@CONTEXT_RULE[conditional-zou-zouden]:
    IF <hypothetical-conditional> OR <contrary-to-fact-conditional> USED
    THEN "zou"_OR_"zouden"_REQUIRED_IN_MAIN_CLAUSE
    ELSE ERROR "Conditional requires zou/zouden"

@CONTEXT_RULE[comparative-dan]:
    IF <comparative-adjective> USED
    THEN USE_"dan"_FOR_COMPARISON
    ELSE ERROR "Comparatives use dan"

@CONTEXT_RULE[equative-als]:
    IF <equative-comparison> USED
    THEN USE_"als"_FOR_EQUALITY
    ELSE ERROR "Equative uses als"

@CONTEXT_RULE[negation-niet-geen]:
    IF <negation> WITH_NOUN
    THEN USE_"geen"
    ELSE USE_"niet"

@CONTEXT_RULE[question-word-fronting-dutch]:
    IF <wh-question> USED
    THEN <question-word> MUST_BE_SENTENCE_INITIAL
    ELSE ERROR "Question words must be fronted"

@CONTEXT_RULE[relative-clause-die-dat]:
    IF <relative-clause> WITH_DE_WORD
    THEN USE_"die"
    ELSE IF <relative-clause> WITH_HET_WORD
    THEN USE_"dat"
    ELSE ERROR "Relative pronoun must match gender"

@CONTEXT_RULE[worden-zijn-passive-distinction]:
    IF <passive-voice> USED
    THEN "worden"_FOR_ACTION_OR_"zijn"_FOR_STATE
    ELSE ERROR "Passive auxiliary selection error"

@CONTEXT_RULE[diminutive-suffix-selection]:
    IF <diminutive> FORMED
    THEN SUFFIX_DEPENDS_ON_PHONOLOGICAL_ENVIRONMENT
    ELSE ERROR "Diminutive suffix selection error"

@CONTEXT_RULE[separable-prefix-position]:
    IF <separable-verb> IN_MAIN_CLAUSE
    THEN PREFIX_SEPARATED_TO_CLAUSE_END
    ELSE IF <separable-verb> IN_SUBORDINATE_CLAUSE
    THEN PREFIX_ATTACHED_TO_VERB
    ELSE ERROR "Separable prefix position error"

@CONTEXT_RULE[inseparable-prefix-attachment]:
    IF <inseparable-prefix> USED
    THEN PREFIX_ALWAYS_ATTACHED
    ELSE ERROR "Inseparable prefix must attach"

@CONTEXT_RULE[modal-particle-position]:
    IF <modal-particle> USED
    THEN PARTICLE_IN_MIDDLE_FIELD
    ELSE ERROR "Modal particle position error"

@CONTEXT_RULE[er-construction-type]:
    IF "er" USED
    THEN MUST_BE_ONE_OF_FOUR_TYPES
    ELSE ERROR "Er construction type unclear"

@CONTEXT_RULE[te-infinitive-position]:
    IF <te-infinitive> USED
    THEN "te" IMMEDIATELY_BEFORE_INFINITIVE
    ELSE ERROR "Te-infinitive position error"

@CONTEXT_RULE[perfect-auxiliary-selection]:
    IF <perfect-tense> USED
    THEN "hebben"_OR_"zijn"_DEPENDING_ON_VERB_TYPE
    ELSE ERROR "Perfect auxiliary selection error"

@CONTEXT_RULE[verb-cluster-order]:
    IF <verb-cluster> PRESENT
    THEN SPECIFIC_ORDER_REQUIRED
    ELSE ERROR "Verb cluster order error"

@CONTEXT_RULE[double-infinitive]:
    IF MODAL_OR_PERCEPTION_VERB IN_PERFECT_TENSE
    THEN USE_INFINITIVE_INSTEAD_OF_PAST_PARTICIPLE
    ELSE USE_PAST_PARTICIPLE

@CONTEXT_RULE[topicalization-v2]:
    IF <topic> FRONTED
    THEN VERB_SECOND_REQUIRED
    ELSE ERROR "V2 violation after topicalization"

@CONTEXT_RULE[subordinate-sov]:
    IF <subordinate-clause> PRESENT
    THEN FINITE_VERB_AT_CLAUSE_END
    ELSE ERROR "SOV order required in subordinate clauses"

@CONTEXT_RULE[gender-consistency-dutch]:
    IF <noun> HAS_GENDER
    THEN ALL_MODIFIERS_MUST_AGREE
    ELSE ERROR "Gender agreement violation"

@CONTEXT_RULE[definiteness-de-het]:
    IF <definite-article> USED
    THEN "de"_FOR_COMMON_GENDER_OR_"het"_FOR_NEUTER
    ELSE ERROR "Article selection error"

@CONTEXT_RULE[adjective-e-ending]:
    IF <adjective> PRECEDES_DEFINITE_NOUN
    THEN ADD_"-e"_ENDING
    ELSE IF <adjective> PRECEDES_INDEFINITE_HET_NOUN
    THEN NO_ENDING
    ELSE ADD_"-e"_ENDING

@CONTEXT_RULE[politeness-level-dutch]:
    IF FORMAL_ADDRESS
    THEN USE_"u"
    ELSE USE_"je"_OR_"jij"

@CONTEXT_RULE[imperative-subject-deletion-dutch]:
    IF <verb> IN_IMPERATIVE
    THEN <subject> TYPICALLY_DELETED
    ELSE <subject> PRESENT

@CONTEXT_RULE[clitic-pronoun-reduction]:
    IF <pronoun> UNSTRESSED
    THEN MAY_REDUCE_TO_CLITIC_FORM
    ELSE FULL_FORM

@CONTEXT_RULE[compound-word-dutch]:
    IF <compound> FORMED
    THEN COMPONENTS_JOINED_WITH_OPTIONAL_LINKING_ELEMENT
    ELSE ERROR "Compound formation error"

@CONTEXT_RULE[stress-pattern-dutch]:
    IF <word> IS_NATIVE
    THEN STRESS_ON_FIRST_SYLLABLE_OF_ROOT
    ELSE STRESS_MAY_VARY

IF <subordinate-clause> PRESENT
    THEN <finite-verb> AT clause-final
    ELSE WARNING "SOV order expected in subordinate clause"

@CONTEXT_RULE[worden-zijn-passive]:
    IF <passive-auxiliary-nl> IS "worden"
    THEN INDICATES <action-passive>
    ELSE IF <passive-auxiliary-nl> IS "zijn"
    THEN INDICATES <state-passive>
    ELSE VALID

@CONTEXT_RULE[men-third-person]:
    IF <men-construction> PRESENT
    THEN <verb> MUST BE third-person-singular
    ELSE VALID

@CONTEXT_RULE[embedded-clause-depth-nl]:
    IF <sentence> CONTAINS <multi-embedded-sentence-nl>
    THEN DEPTH <= 5
    ELSE VALID

@CONTEXT_RULE[conditional-zou-usage]:
    IF <contrary-to-fact-nl> PRESENT
    THEN <apodosis> USES "zou/zouden" + <infinitive>
    ELSE VALID

@CONTEXT_RULE[te-infinitive-position]:
    IF <infinitive> PRECEDED_BY "te"
    THEN "te" IMMEDIATELY_BEFORE <infinitive>
    ELSE VALID


@DIALECT[vlaams]            /* Vlaams - Flemish (Belgian Dutch) */
@DIALECT[brabants]          /* Brabants - Brabant dialect */
@DIALECT[limburgs]          /* Limburgs - Limburg dialect */
@DIALECT[fries]             /* Fries - Frisian influenced */

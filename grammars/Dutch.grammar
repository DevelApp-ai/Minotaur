// ============================================================================
// ARTICLE AND GENDER SYSTEM EXTENDED
// ============================================================================

<definite-article-extended> ::= "de" | "het" | "'t"

<indefinite-article-extended> ::= "een" | "'n"

<common-gender-marker> ::= "de" /* for both masculine and feminine */

<neuter-gender-marker> ::= "het" | "'t"

// ============================================================================
// ADJECTIVE INFLECTION PATTERNS
// ============================================================================

<adjective-with-e> ::= <adjective-stem> <opt-whitespace> "e"
                    /* Before definite nouns: de grote hond */

<adjective-without-e> ::= <adjective-stem>
                       /* Before indefinite het-nouns: een groot huis */

<comparative-adjective-dutch> ::= <adjective-stem> <opt-whitespace> "er"

<superlative-adjective-dutch> ::= <adjective-stem> <opt-whitespace> "st" | "ste"

// ============================================================================
// PRONOUN SYSTEM EXTENDED
// ============================================================================

<personal-pronoun-subject-extended> ::= "ik" | "jij" | "je" | "hij" | "zij" | "ze" | "het"
                                     | "wij" | "we" | "jullie" | "zij" | "ze" | "u"

<personal-pronoun-object-extended> ::= "mij" | "me" | "jou" | "je" | "hem" | "'m" | "haar" | "ze" | "het"
                                    | "ons" | "jullie" | "hen" | "hun" | "ze" | "u"

<possessive-pronoun-extended> ::= "mijn" | "m'n" | "jouw" | "je" | "zijn" | "z'n" | "haar" | "d'r"
                               | "ons" | "onze" | "jullie" | "hun" | "uw"

<demonstrative-pronoun-dutch-extended> ::= "deze" | "dit" | "die" | "dat"

<interrogative-pronoun-dutch-extended> ::= "wie" | "wat" | "welke" | "welk"

<relative-pronoun-dutch-extended> ::= "die" | "dat" | "wie" | "wat" | "waar"

<reflexive-pronoun-dutch-extended> ::= "me" | "je" | "zich" | "ons" | "je" | "zich"

// ============================================================================
// ADVERB TYPES EXTENDED
// ============================================================================

<manner-adverb> ::= "goed" | "slecht" | "snel" | "langzaam" | "voorzichtig" | "hard"

<frequency-adverb> ::= "altijd" | "nooit" | "vaak" | "soms" | "zelden" | "meestal"

<degree-adverb> ::= "zeer" | "erg" | "heel" | "nogal" | "tamelijk" | "vrij"

<time-adverb-dutch> ::= "nu" | "dan" | "toen" | "straks" | "later" | "eerder"

<place-adverb-dutch> ::= "hier" | "daar" | "ergens" | "nergens" | "overal"

// ============================================================================
// PREPOSITIONS EXTENDED
// ============================================================================

<spatial-preposition> ::= "in" | "op" | "onder" | "boven" | "naast" | "tussen"
                       | "achter" | "voor" | "bij" | "aan" | "tegen"

<temporal-preposition> ::= "voor" | "na" | "tijdens" | "sinds" | "tot" | "om"

<abstract-preposition> ::= "over" | "van" | "met" | "zonder" | "door" | "voor"

// ============================================================================
// CONJUNCTIONS EXTENDED
// ============================================================================

<coordinating-conjunction-dutch-extended> ::= "en" | "maar" | "of" | "want" | "dus"

<subordinating-conjunction-dutch-extended> ::= "dat" | "omdat" | "hoewel" | "terwijl"
                                            | "toen" | "als" | "wanneer" | "zodat"
                                            | "voordat" | "nadat" | "sinds" | "tenzij"

// ============================================================================
// NUMBER SYSTEM EXTENDED
// ============================================================================

<cardinal-number-dutch-extended> ::= "één" | "twee" | "drie" | "vier" | "vijf"
                                  | "zes" | "zeven" | "acht" | "negen" | "tien"
                                  | "elf" | "twaalf" | "dertien" | "veertien" | "vijftien"
                                  | "zestien" | "zeventien" | "achttien" | "negentien" | "twintig"

<ordinal-number-dutch-extended> ::= "eerste" | "tweede" | "derde" | "vierde" | "vijfde"

<fraction-dutch> ::= "half" | "kwart" | "derde" | "vierde"

// ============================================================================
// MEASUREMENT EXPRESSIONS
// ============================================================================

<distance-measurement> ::= <number> <opt-whitespace> ( "meter" | "kilometer" | "centimeter" )

<weight-measurement> ::= <number> <opt-whitespace> ( "gram" | "kilogram" | "pond" )

<volume-measurement> ::= <number> <opt-whitespace> ( "liter" | "milliliter" | "deciliter" )

// ============================================================================
// FIXED EXPRESSIONS AND COLLOCATIONS
// ============================================================================

<fixed-expression> ::= "van harte" | "bij voorbaat" | "in ieder geval" | "met name"
                    | "op zijn minst" | "ten minste" | "om zo te zeggen"
                    | "als het ware" | "wat betreft" | "in verband met"

<greeting-expression> ::= "goedemorgen" | "goedemiddag" | "goedenavond" | "goededag"
                       | "hallo" | "dag" | "hoi" | "doei" | "tot ziens"

<courtesy-expression> ::= "dank u wel" | "dank je wel" | "graag gedaan" | "pardon"
                       | "sorry" | "excuseer" | "mag ik" | "zou u"

// ============================================================================
// DOUBLE INFINITIVE CONSTRUCTION
// ============================================================================

<double-infinitive-construction> ::= <modal-verb> <opt-whitespace> <main-verb-infinitive>
                                  <opt-whitespace> "hebben" | "zijn"
                                  /* In perfect tense with modals */

// ============================================================================
// VERB CLUSTERS
// ============================================================================

<two-verb-cluster> ::= <modal-verb> <opt-whitespace> <infinitive>

<three-verb-cluster> ::= <modal-verb> <opt-whitespace> <auxiliary-verb> <opt-whitespace> <infinitive>

<verb-cluster-order-1-2-3> ::= <verb-1> <opt-whitespace> <verb-2> <opt-whitespace> <verb-3>

<verb-cluster-order-3-2-1> ::= <verb-3> <opt-whitespace> <verb-2> <opt-whitespace> <verb-1>

// ============================================================================
// IMPERSONAL CONSTRUCTIONS EXTENDED
// ============================================================================

<impersonal-het-construction> ::= "het" <opt-whitespace> <verb> <opt-whitespace> <complement>
                               /* Het regent, het sneeuwt */

<men-impersonal-extended> ::= "men" <opt-whitespace> <verb>
                           /* One does something */

<je-impersonal-extended> ::= "je" <opt-whitespace> <verb>
                          /* Generic you */

// ============================================================================
// WORD ORDER PATTERNS EXTENDED
// ============================================================================

<subject-verb-inversion> ::= <finite-verb> <opt-whitespace> <subject> <opt-whitespace> <complement>
                          /* After fronted element */

<subordinate-clause-order> ::= <subordinating-conjunction> <opt-whitespace> <subject>
                            <opt-whitespace> <object> <opt-whitespace> <verb>
                            /* SOV in subordinate */

<main-clause-order> ::= <subject> <opt-whitespace> <finite-verb> <opt-whitespace> <complement>
                     /* SVO in main clause */

// ============================================================================
// SPELLING VARIATIONS AND ORTHOGRAPHY
// ============================================================================

<open-syllable-lengthening> ::= /* Vowel lengthens in open syllable */
                             /* hoop → hopen */

<closed-syllable-shortening> ::= /* Consonant doubles in closed syllable */
                              /* man → mannen */

<devoicing-final-consonant> ::= /* Voiced consonants devoice word-finally */
                             /* hond [t] → honden [d] */

// ============================================================================
// ADDITIONAL CONTEXT RULES
// ============================================================================

@CONTEXT_RULE[past-participle-ge-prefix]:
    IF <past-participle> OF_NON_PREFIXED_VERB
    THEN "ge-" PREFIX_REQUIRED
    ELSE NO_GE_PREFIX

@CONTEXT_RULE[strong-verb-ablaut-pattern]:
    IF <strong-verb> USED
    THEN MUST_FOLLOW_ABLAUT_CLASS_PATTERN
    ELSE ERROR "Strong verb ablaut error"

@CONTEXT_RULE[weak-verb-t-d-selection]:
    IF <weak-verb> PAST_TENSE
    THEN USE_"t"_AFTER_VOICELESS_CONSONANT_OR_"d"_AFTER_VOICED
    ELSE ERROR "Weak verb ending selection error"

@CONTEXT_RULE[modal-verb-infinitive]:
    IF <modal-verb> USED
    THEN MUST_BE_FOLLOWED_BY_INFINITIVE
    ELSE ERROR "Modal verb requires infinitive"

@CONTEXT_RULE[reflexive-zich-third-person]:
    IF <reflexive-verb> WITH_THIRD_PERSON_SUBJECT
    THEN USE_"zich"
    ELSE USE_APPROPRIATE_REFLEXIVE_PRONOUN

@CONTEXT_RULE[separable-verb-main-clause]:
    IF <separable-verb> IN_MAIN_CLAUSE AND FINITE
    THEN PREFIX_SEPARATES_TO_END
    ELSE PREFIX_ATTACHED

@CONTEXT_RULE[plural-en-s-selection]:
    IF <noun> ENDS_IN_UNSTRESSED_SYLLABLE_WITH_SCHWA
    THEN PLURAL_"s"
    ELSE PLURAL_"en"

@CONTEXT_RULE[adjective-e-inflection]:
    IF <adjective> BEFORE_DEFINITE_NOUN
    THEN ADD_"e"
    ELSE IF <adjective> BEFORE_INDEFINITE_HET_NOUN
    THEN NO_"e"
    ELSE ADD_"e"

@CONTEXT_RULE[comparative-superlative-formation]:
    IF <adjective> MONOSYLLABIC
    THEN SYNTHETIC_COMPARISON ( "er" | "st" )
    ELSE ANALYTIC_COMPARISON_OPTIONAL

@CONTEXT_RULE[pronoun-reduction-unstressed]:
    IF <pronoun> UNSTRESSED
    THEN MAY_REDUCE ( "hij" → "'ie", "het" → "'t" )
    ELSE FULL_FORM

@CONTEXT_RULE[demonstrative-gender-agreement]:
    IF <demonstrative> WITH_DE_WORD
    THEN USE_"deze"_OR_"die"
    ELSE IF WITH_HET_WORD
    THEN USE_"dit"_OR_"dat"
    ELSE ERROR "Demonstrative gender mismatch"

@CONTEXT_RULE[interrogative-wie-wat-selection]:
    IF ASKING_ABOUT_PERSON
    THEN USE_"wie"
    ELSE IF ASKING_ABOUT_THING
    THEN USE_"wat"
    ELSE ERROR "Interrogative selection error"

@CONTEXT_RULE[relative-pronoun-gender]:
    IF <relative-clause> MODIFIES_DE_WORD
    THEN USE_"die"
    ELSE IF MODIFIES_HET_WORD
    THEN USE_"dat"
    ELSE ERROR "Relative pronoun gender error"

@CONTEXT_RULE[frequency-adverb-position]:
    IF <frequency-adverb> USED
    THEN TYPICALLY_AFTER_FINITE_VERB
    ELSE POSITION_VARIES

@CONTEXT_RULE[spatial-preposition-case]:
    IF <spatial-preposition> WITH_LOCATION
    THEN NO_CASE_MARKING_IN_DUTCH
    ELSE VALID

@CONTEXT_RULE[subordinating-conjunction-sov]:
    IF <subordinating-conjunction> INTRODUCES_CLAUSE
    THEN FINITE_VERB_TO_CLAUSE_END
    ELSE ERROR "Subordinate clause must use SOV"

@CONTEXT_RULE[cardinal-number-geen]:
    IF <cardinal-number> IS_ZERO
    THEN USE_"geen"_NOT_"nul"_WITH_NOUN
    ELSE USE_NUMBER

@CONTEXT_RULE[ordinal-number-de-het]:
    IF <ordinal-number> USED_ATTRIBUTIVELY
    THEN TAKES_DE_OR_HET_LIKE_ADJECTIVE
    ELSE VALID

@CONTEXT_RULE[double-infinitive-phenomenon]:
    IF <modal-verb> OR <perception-verb> IN_PERFECT_TENSE
    THEN USE_INFINITIVE_NOT_PAST_PARTICIPLE
    ELSE USE_PAST_PARTICIPLE

@CONTEXT_RULE[verb-cluster-order-variation]:
    IF <verb-cluster> WITH_THREE_VERBS
    THEN MULTIPLE_ORDERS_ACCEPTABLE ( 1-2-3 | 3-2-1 )
    ELSE FIXED_ORDER

@CONTEXT_RULE[impersonal-het-weather]:
    IF WEATHER_VERB
    THEN REQUIRE_IMPERSONAL_"het"
    ELSE SUBJECT_REQUIRED

@CONTEXT_RULE[v2-constraint-dutch]:
    IF <main-clause> PRESENT
    THEN FINITE_VERB_SECOND_POSITION
    ELSE ERROR "V2 word order required"

@CONTEXT_RULE[topicalization-inversion]:
    IF NON_SUBJECT_FRONTED
    THEN SUBJECT_VERB_INVERSION_REQUIRED
    ELSE NORMAL_ORDER

@CONTEXT_RULE[open-syllable-spelling]:
    IF VOWEL_IN_OPEN_SYLLABLE
    THEN SINGLE_VOWEL_LETTER_REPRESENTS_LONG_VOWEL
    ELSE DOUBLE_VOWEL_LETTER_OR_SINGLE_FOR_SHORT

@CONTEXT_RULE[consonant-doubling-syllable]:
    IF SHORT_VOWEL_BEFORE_SUFFIX
    THEN DOUBLE_CONSONANT_IN_CLOSED_SYLLABLE
    ELSE SINGLE_CONSONANT

@CONTEXT_RULE[final-devoicing]:
    IF VOICED_CONSONANT_WORD_FINALLY
    THEN DEVOICES ( "b" → "p", "d" → "t", "v" → "f", "z" → "s" )
    ELSE VOICING_MAINTAINED

@CONTEXT_RULE[diminutive-phonological-conditioning]:
    IF <diminutive-suffix> SELECTED
    THEN DEPENDS_ON_PHONOLOGICAL_ENVIRONMENT
    ELSE ERROR "Diminutive suffix selection error"

@CONTEXT_RULE[possessive-van-construction]:
    IF POSSESSION_EXPRESSED
    THEN MAY_USE ( GENITIVE_S | "van" CONSTRUCTION )
    ELSE ERROR "Possessive construction error"

@CONTEXT_RULE[politeness-u-je-distinction]:
    IF FORMAL_CONTEXT
    THEN USE_"u"
    ELSE IF INFORMAL_CONTEXT
    THEN USE_"je"_OR_"jij"
    ELSE CONTEXT_DEPENDENT

@CONTEXT_RULE[greeting-time-appropriate]:
    IF <greeting-expression> USED
    THEN MUST_MATCH_TIME_OF_DAY
    ELSE WARNING "Inappropriate greeting for time"

@CONTEXT_RULE[fixed-expression-invariable]:
    IF <fixed-expression> USED
    THEN FORM_IS_FIXED
    ELSE ERROR "Fixed expression cannot vary"

@CONTEXT_RULE[belgicism-netherlandism]:
    IF @DIALECT[vlaams] USED
    THEN BELGIAN_DUTCH_FEATURES_ALLOWED
    ELSE STANDARD_DUTCH_FEATURES

@CONTEXT_RULE[stress-initial-native]:
    IF <word> IS_NATIVE_DUTCH
    THEN STRESS_ON_FIRST_SYLLABLE_OF_ROOT
    ELSE STRESS_MAY_VARY_FOR_LOANWORDS

@CONTEXT_RULE[schwa-reduction-fast-speech]:
    IF FAST_SPEECH
    THEN SCHWA_MAY_BE_REDUCED_OR_DELETED
    ELSE FULL_PRONUNCIATION

// END OF GRAMMAR

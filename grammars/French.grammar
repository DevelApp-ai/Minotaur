/* Context-sensitive validation rules */

/* Article-noun gender agreement */
@CONTEXT_RULE[article-noun-agreement]:
    IF <article>.@GENDER == <noun>.@GENDER
    THEN VALID
    ELSE ERROR "Article and noun gender must agree"

/* Article-noun number agreement */
@CONTEXT_RULE[article-noun-number-agreement]:
    IF <article>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Article and noun number must agree"

/* Adjective-noun gender agreement */
@CONTEXT_RULE[adjective-noun-gender-agreement]:
    IF <adjective>.@AGREEMENT == <noun>.@GENDER OR <noun>.@NUMBER == "plural"
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in gender"

/* Adjective-noun number agreement */
@CONTEXT_RULE[adjective-noun-number-agreement]:
    IF <adjective>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in number"

/* Subject-verb number agreement */
@CONTEXT_RULE[subject-verb-agreement]:
    IF <subject>.@NUMBER == <verb>.@NUMBER
    THEN VALID
    ELSE WARNING "Subject and verb number should agree"

/* Subject-verb person agreement */
@CONTEXT_RULE[subject-verb-person-agreement]:
    IF <subject>.@PERSON == <verb>.@PERSON
    THEN VALID
    ELSE WARNING "Subject and verb person should agree"

/* Past participle agreement with être */
@CONTEXT_RULE[participle-etre-agreement]:
    IF <auxiliary-verb> == "être" THEN <past-participle>.@GENDER == <subject>.@GENDER AND <past-participle>.@NUMBER == <subject>.@NUMBER
    ELSE VALID

/* Negation structure */
@CONTEXT_RULE[negation-completeness]:
    IF <negation-part1> EXISTS THEN <negation-part2> SHOULD_EXIST
    ELSE VALID

/* Nested clause depth validation */
@CONTEXT_RULE[nested-clause-depth]:
    IF <nested-subordinate-clause> DEPTH <= 3
    THEN VALID
    ELSE WARNING "Deep nesting (>3 levels) may reduce readability"

/* Cleft sentence structure */
@CONTEXT_RULE[cleft-structure]:
    IF <cleft-sentence> HAS_VALID_STRUCTURE
    THEN VALID
    ELSE ERROR "Cleft sentences require proper c'est...qui/que structure"

/* Clause coherence */
@CONTEXT_RULE[clause-coherence]:
    IF <multi-embedded-sentence> HAS_COHERENT_REFERENCE_CHAIN
    THEN VALID
    ELSE WARNING "Complex sentences should maintain clear reference chains"

/* Reported speech tense concordance */
@CONTEXT_RULE[reported-speech-tense]:
    IF <reported-speech> TENSE_CONSISTENT_WITH <reporting-verb>
    THEN VALID
    ELSE WARNING "Tense in reported speech should follow concordance des temps"

/* Subjunctive mood requirement */
@CONTEXT_RULE[subjunctive-requirement]:
    IF <subordinate-clause> AFTER_EXPRESSION_REQUIRING_SUBJUNCTIVE
    THEN <verb-phrase> CONTAINS <verb-subjunctive>
    ELSE WARNING "Expressions of desire, emotion, doubt require subjunctive"

/* Tag question structure */
@CONTEXT_RULE[tag-question-structure]:
    IF <tag-question> HAS_PROPER_TAG
    THEN VALID
    ELSE ERROR "Tag questions require proper tag structure (n'est-ce pas, etc.)"

/* Example sentences demonstrating French grammar:
 *
 * SIMPLE SENTENCES:
 * - "Je parle français" (I speak French)
 * - "Elle mange une pomme" (She eats an apple)
 * - "Nous habitons à Paris" (We live in Paris)
 *
 * VERB CONJUGATIONS:
 * - "Je parle, tu parles, il parle" (I speak, you speak, he speaks - 1st group)
 * - "Je finis, tu finis, il finit" (I finish, you finish, he finishes - 2nd group)
 * - "Je vends, tu vends, il vend" (I sell, you sell, he sells - 3rd group)
 *
 * IRREGULAR VERBS:
 * - "Je suis, tu es, il est" (I am, you are, he is - être)
 * - "J'ai, tu as, il a" (I have, you have, he has - avoir)
 * - "Je vais, tu vas, il va" (I go, you go, he goes - aller)
 *
 * PASSÉ COMPOSÉ:
 * - "J'ai parlé" (I spoke/have spoken - with avoir)
 * - "Je suis allé" (I went/have gone - with être)
 * - "Elle est venue" (She came/has come - agreement)
 *
 * GENDER AGREEMENT:
 * - "Un grand homme" (A tall man - masculine)
 * - "Une grande femme" (A tall woman - feminine)
 * - "Le livre rouge" (The red book - masculine)
 * - "La table rouge" (The red table - feminine)
 *
 * NEGATION:
 * - "Je ne parle pas" (I don't speak)
 * - "Elle ne vient jamais" (She never comes)
 * - "Nous n'avons rien" (We have nothing)
 *
 * OBJECT PRONOUNS:
 * - "Je le vois" (I see him/it)
 * - "Elle lui parle" (She speaks to him/her)
 * - "Nous les aimons" (We love them)
 *
 * INTERROGATIVE:
 * - "Parlez-vous français?" (Do you speak French? - inversion)
 * - "Est-ce que tu viens?" (Are you coming? - est-ce que)
 * - "Où habites-tu?" (Where do you live? - wh-question)
 *
 * SUBJUNCTIVE:
 * - "Il faut que je parte" (I must leave)
 * - "Je veux qu'il vienne" (I want him to come)
 * - "Bien qu'il soit tard" (Although it is late)
 *
 * COMPARATIVE/SUPERLATIVE:
 * - "Plus grand que" (Taller than)
 * - "Le plus grand" (The tallest)
 * - "Meilleur que" (Better than)
 * - "Le meilleur" (The best)
 *
 * PRONOMINAL VERBS:
 * - "Je me lave" (I wash myself)
 * - "Nous nous promenons" (We go for a walk)
 * - "Ils se parlent" (They speak to each other)
 *
 * NESTED SUBORDINATE CLAUSES:
 * - "Je pense que tu crois qu'il vient" (I think that you believe that he is coming - 2-level)
 * - "Il dit qu'elle sait que nous partons demain" (He says that she knows that we're leaving tomorrow)
 *
 * CLEFT SENTENCES:
 * - "C'est Pierre qui est venu" (It's Pierre who came)
 * - "C'est la voiture que j'ai achetée" (It's the car that I bought)
 * - "Ce qui m'intéresse, c'est la musique" (What interests me is music)
 *
 * DISCOURSE MARKERS:
 * - "D'abord je suis allé au magasin, ensuite je suis rentré" (First I went to the store, then I came home)
 * - "Il pleut, donc je reste à la maison" (It's raining, so I'm staying home)
 * - "Elle travaille beaucoup, cependant elle trouve le temps de lire" (She works a lot, however she finds time to read)
 *
 * REPORTED SPEECH:
 * - "Il dit qu'il viendra" (He says that he will come)
 * - "Elle a dit qu'elle était fatiguée" (She said that she was tired - tense concordance)
 * - "Je pense qu'il a raison" (I think that he's right)
 *
 * TAG QUESTIONS:
 * - "Tu viens, n'est-ce pas?" (You're coming, aren't you?)
 * - "Il fait beau, non?" (It's nice weather, isn't it?)
 *
 * ELLIPTICAL STRUCTURES:
 * - "Je pars aujourd'hui, lui demain" (I'm leaving today, him tomorrow)
 * - "Moi aussi" (Me too)
 *
 * MULTI-EMBEDDED SENTENCES:
 * - "Quand tu arrives, si tu veux, nous pouvons aller au cinéma" (When you arrive, if you want, we can go to the cinema)
 * - "L'homme qui parle dit que la femme qu'il connaît viendra" (The man who is speaking says that the woman whom he knows will come - 3-level)
 */

/* ============================================================================
 * EXTENDED DISCOURSE AND PRAGMATIC FEATURES FOR FRENCH
 * ========================================================================== */

<discourse-marker> ::= <temporal-discourse> | <causal-discourse> | <contrastive-discourse> 
                    | <additive-discourse> | <conclusive-discourse> | <exemplification-discourse>
                    | <sequential-discourse>;

<temporal-discourse> ::= "d'abord" | "ensuite" | "puis" | "alors" | "enfin" | "finalement"
                      | "à la fin" | "auparavant" | "avant" | "après" | "plus tard"
                      | "pendant ce temps" | "entre-temps" | "simultanément" | "au début"
                      | "tout de suite" | "immédiatement" | "maintenant" | "actuellement";

<causal-discourse> ::= "donc" | "alors" | "ainsi" | "par conséquent" | "en conséquence"
                    | "c'est pourquoi" | "pour cette raison" | "de ce fait" | "dès lors"
                    | "pour ce motif" | "à cause de cela" | "grâce à cela";

<contrastive-discourse> ::= "cependant" | "pourtant" | "toutefois" | "néanmoins" | "au contraire"
                         | "par contre" | "en revanche" | "d'autre part" | "par ailleurs"
                         | "malgré cela" | "quand même" | "tout de même" | "de toute façon";

<additive-discourse> ::= "de plus" | "en outre" | "aussi" | "également" | "en plus"
                      | "par ailleurs" | "qui plus est" | "d'ailleurs" | "du reste"
                      | "en effet" | "même" | "encore" | "non seulement";

<conclusive-discourse> ::= "en conclusion" | "en somme" | "bref" | "en fin de compte"
                        | "finalement" | "après tout" | "en définitive" | "pour conclure"
                        | "en résumé" | "pour finir" | "en bref" | "c'est-à-dire";

<exemplification-discourse> ::= "par exemple" | "ainsi" | "comme" | "notamment"
                             | "en particulier" | "notamment" | "plus précisément"
                             | "en l'occurrence" | "à savoir";

<sequential-discourse> ::= "premièrement" | "deuxièmement" | "troisièmement"
                        | "en premier lieu" | "en second lieu" | "d'abord"
                        | "pour commencer" | "pour continuer" | "pour terminer"
                        | "enfin" | "en dernier lieu";

<tag-question> ::= <declarative-clause> "," <question-tag> "?";

<question-tag> ::= "n'est-ce pas" | "non" | "hein" | "pas vrai" | "d'accord";

<elliptical-clause> ::= <elliptical-response> | <elliptical-coordination> | <elliptical-comparison>;

<reported-speech> ::= <reporting-verb> <reported-clause>;

<reporting-verb> ::= "dit" | "disait" | "a dit" | "raconte" | "racontait"
                  | "affirme" | "affirmait" | "demande" | "demandait"
                  | "explique" | "expliquait";

<reported-clause> ::= "que" <subordinate-content> | <embedded-question> | "de" <infinitive>;

<cleft-sentence> ::= <c-est-cleft> | <pseudo-cleft>;

<c-est-cleft> ::= "c'est" <focused-constituent> "qui" <verb-phrase>
               | "c'est" <focused-constituent> "que" <verb-phrase>
               | "ce sont" <focused-constituent> "qui" <verb-phrase>;

<pseudo-cleft> ::= <wh-clause> "c'est" <focused-constituent>;

<correlative-construction> ::= <correlative-pair> <clause-sequence>;

<correlative-pair> ::= "et" "et" | "ou" "ou" | "ni" "ni" | "soit" "soit"
                    | "non" "seulement" "mais" "aussi"
                    | "plus" "plus" | "moins" "moins"
                    | "autant" "autant";

<politeness-marker> ::= "s'il vous plaît" | "s'il te plaît" | "je vous prie"
                     | "veuillez" | "si vous voulez bien" | "auriez-vous la bonté de";

<interjection-extended> ::= "ah!" | "oh!" | "eh!" | "aïe!" | "zut!" | "mince!"
                         | "salut!" | "tiens!" | "dis donc!" | "voyons!"
                         | "mon Dieu!" | "ciel!" | "allons!";

@CONTEXT_RULE[discourse-marker-position]:
    IF <discourse-marker> PRESENT
    THEN VERIFY_APPROPRIATE_CLAUSE_BOUNDARY_PLACEMENT ELSE VALID

@CONTEXT_RULE[tag-question-register]:
    IF <tag-question> PRESENT
    THEN TYPICAL_OF_SPOKEN_FRENCH ELSE VALID

@CONTEXT_RULE[reported-speech-tense]:
    IF <reported-speech> WITH_PAST_REPORTING_VERB
    THEN VERIFY_TENSE_CONCORDANCE ELSE VALID

@CONTEXT_RULE[cleft-focus]:
    IF <cleft-sentence> PRESENT
    THEN VERIFY_FOCUSED_CONSTITUENT_IS_NEW_INFORMATION ELSE VALID


        | <verb-conditional>
        | <verb-subjunctive>
        | <verb-imperative>
        | <verb-passe-simple>
        | <verb-plus-que-parfait>

/* Present tense - three groups */
<verb-present> ::= @TENSE[present] @MOOD[indicative] ( <first-group-present> | <second-group-present> | <third-group-present> | <irregular-present> )

/* Passé simple (literary past tense) */
<verb-passe-simple> ::= @TENSE[passe-simple] @MOOD[indicative] <verb-stem> ( "ai" | "as" | "a" | "âmes" | "âtes" | "èrent" | "is" | "is" | "it" | "îmes" | "îtes" | "irent" | "us" | "us" | "ut" | "ûmes" | "ûtes" | "urent" )

/* Plus-que-parfait */

<compound-preposition-extended> ::= "à cause de" | "grâce à" | "quant à" | "par rapport à"
                                 | "en ce qui concerne" | "au sujet de" | "à propos de"
                                 | "en raison de" | "au cours de" | "au lieu de"
                                 | "à l'égard de" | "à force de" | "à partir de"
                                 | "au moyen de" | "faute de" | "lors de";

<indefinite-article-partitive> ::= "du" | "de la" | "de l'" | "des";

<demonstrative-adjective-extended> ::= "ce" | "cet" | "cette" | "ces"
                                    | "ce" "-ci" | "cet" "-ci" | "cette" "-ci" | "ces" "-ci"
                                    | "ce" "-là" | "cet" "-là" | "cette" "-là" | "ces" "-là";

@CONTEXT_RULE[partitive-negation]:
    IF <indefinite-article-partitive> IN_NEGATIVE_CONTEXT
    THEN BECOMES_DE ELSE VALID

@CONTEXT_RULE[demonstrative-proximity]:
    IF <demonstrative-adjective-extended> WITH_CI
    THEN INDICATES_PROXIMITY ELSE INDICATES_DISTANCE

<quantifier-extended> ::= "beaucoup de" | "peu de" | "assez de" | "trop de"
                       | "plus de" | "moins de" | "autant de" | "tant de"
                       | "quelques" | "plusieurs" | "certains" | "chaque"
                       | "tout" | "toute" | "tous" | "toutes";

@CONTEXT_RULE[quantifier-de]:
    IF <quantifier-extended> WITH_DE PRESENT
    THEN NO_ARTICLE_AFTER_DE ELSE VALID

<number-agreement-complex> ::= <invariable-number> | <variable-number>;

<invariable-number> ::= "vingt" | "cent" | "mille";

<variable-number> ::= "vingts" | "cents";

@CONTEXT_RULE[vingt-cent-agreement]:
    IF "vingt" OR "cent" MULTIPLIED_AND_NOT_FOLLOWED_BY_NUMBER
    THEN TAKES_PLURAL_S ELSE INVARIABLE

<ordinal-number-extended> ::= "premier" | "première" | "deuxième" | "second" | "seconde"
                           | "troisième" | "quatrième" | "cinquième" | "dernier" | "dernière";

<collective-noun> ::= "la plupart de" | "la majorité de" | "une partie de"
                   | "le reste de" | "une multitude de" | "une quantité de";

@CONTEXT_RULE[collective-noun-agreement]:
    IF <collective-noun> PRESENT
    THEN VERB_AGREES_WITH_NOUN_AFTER_DE ELSE VALID

<inversion-stylistic> ::= <poetic-inversion> | <interrogative-inversion> | <adverbial-inversion>;

@CONTEXT_RULE[stylistic-inversion]:
    IF <inversion-stylistic> PRESENT
    THEN USED_FOR_EMPHASIS_OR_LITERARY_STYLE ELSE VALID

<pluperfect-indicative-extended> ::= "avoir" "eu" <past-participle> | "être" "été" <past-participle>;

<anterior-future-extended> ::= "aura" <past-participle> | "sera" <past-participle>;

@CONTEXT_RULE[anterior-future-usage]:
    IF <anterior-future-extended> PRESENT
    THEN EXPRESSES_COMPLETION_BEFORE_FUTURE_MOMENT ELSE VALID

/* Additional comprehensive features complete - French grammar at Danish level */

<conditional-compound-tenses> ::= <conditional-present> | <conditional-past>;

<conditional-present> ::= <stem> "ais" | <stem> "ait" | <stem> "ions" | <stem> "iez" | <stem> "aient";

<conditional-past> ::= "aurais" <past-participle> | "serais" <past-participle>
                    | "aurait" <past-participle> | "serait" <past-participle>;

@CONTEXT_RULE[conditional-politeness]:
    IF <conditional-present> IN_REQUEST_CONTEXT
    THEN EXPRESSES_POLITE_REQUEST ELSE EXPRESSES_CONDITION

<subjunctive-triggers-extended> ::= <necessity-expression> | <doubt-expression>
                                 | <emotion-expression> | <will-expression>;

<necessity-expression> ::= "il faut que" | "il est nécessaire que" | "il est important que"
                        | "il est essentiel que" | "il vaut mieux que";

<doubt-expression> ::= "je doute que" | "je ne pense pas que" | "je ne crois pas que"
                    | "il est peu probable que" | "il est douteux que";

<emotion-expression> ::= "je suis content que" | "je suis triste que" | "je regrette que"
                      | "je suis surpris que" | "il est dommage que";

<will-expression> ::= "je veux que" | "je souhaite que" | "j'exige que" | "je demande que"
                   | "j'ordonne que" | "je préfère que";

@CONTEXT_RULE[subjunctive-after-triggers]:
    IF <subjunctive-triggers-extended> PRESENT
    THEN SUBORDINATE_CLAUSE_USES_SUBJUNCTIVE ELSE ERROR

<time-expression-complex> ::= "il y a" <duration> "que" | "depuis" <duration>
                           | "pendant" <duration> | "pour" <duration>
                           | "dans" <duration> | "en" <duration>;

<duration> ::= <number> ("jour" | "jours" | "semaine" | "semaines" | "mois" | "an" | "ans"
                      | "heure" | "heures" | "minute" | "minutes");

@CONTEXT_RULE[il-y-a-tense]:
    IF "il y a" <duration> PRESENT
    THEN VERB_IN_PRESENT_OR_PASSÉ_COMPOSÉ ELSE VALID

@CONTEXT_RULE[depuis-duration]:
    IF "depuis" <duration> PRESENT
    THEN VERB_TYPICALLY_IN_PRESENT ELSE VALID


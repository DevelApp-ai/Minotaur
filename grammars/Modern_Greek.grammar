/* ============================================================================ */
/* EXPANDED CONTEXT RULES - 12 Comprehensive Validation Rules                  */
/* ============================================================================ */

@CONTEXT_RULE[article-noun-gender-agreement]:
    IF <article>.@GENDER == <noun>.@GENDER
    THEN VALID
    ELSE ERROR "Article must agree with noun in gender"

@CONTEXT_RULE[article-noun-number-agreement]:
    IF <article>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Article must agree with noun in number"

@CONTEXT_RULE[article-noun-case-agreement]:
    IF <article>.@CASE == <noun>.@CASE
    THEN VALID
    ELSE ERROR "Article must agree with noun in case"

@CONTEXT_RULE[adjective-noun-gender-agreement]:
    IF <adjective>.@GENDER == <noun>.@GENDER
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in gender"

@CONTEXT_RULE[adjective-noun-number-agreement]:
    IF <adjective>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in number"

@CONTEXT_RULE[subject-verb-person-agreement]:
    IF <subject>.@PERSON == <verb>.@PERSON OR <subject> == <noun-phrase>
    THEN VALID
    ELSE WARNING "Subject and verb should agree in person"

@CONTEXT_RULE[subject-verb-number-agreement]:
    IF <subject>.@NUMBER == <verb>.@NUMBER
    THEN VALID
    ELSE WARNING "Subject and verb should agree in number"

@CONTEXT_RULE[clitic-pronoun-position]:
    IF <clitic-pronoun> PRECEDES <verb> OR ( <verb-imperative> AND <clitic-pronoun> FOLLOWS <verb> )
    THEN VALID
    ELSE WARNING "Clitic pronouns precede verbs except after imperatives"

@CONTEXT_RULE[negation-verb-compatibility]:
    IF ( <negation> == "δεν" AND <verb>.@MOOD == "indicative" ) OR ( <negation> == "μη" AND <verb>.@MOOD IN ["subjunctive", "imperative"] )
    THEN VALID
    ELSE WARNING "δεν used with indicative, μη/μην with subjunctive/imperative"

@CONTEXT_RULE[auxiliary-main-verb-tense]:
    IF <auxiliary-verb>.@TENSE IS_COMPATIBLE_WITH <main-verb>.@TENSE
    THEN VALID
    ELSE ERROR "Auxiliary and main verb tenses must be compatible"

@CONTEXT_RULE[demonstrative-noun-agreement]:
    IF <demonstrative-pronoun>.@GENDER == <noun>.@GENDER AND <demonstrative-pronoun>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Demonstrative pronoun must agree with noun in gender and number"

@CONTEXT_RULE[relative-pronoun-antecedent]:
    IF <relative-pronoun> REFERS_TO <noun-phrase>
    THEN VALID
    ELSE WARNING "Relative pronoun should have clear antecedent"


/* ============================================================================ */
/* CONDITIONAL SENTENCES - Three Types                                         */
/* ============================================================================ */

/* Conditional sentences with different reality assumptions */
<conditional-sentence> ::= <real-conditional>
                        | <unreal-conditional>
                        | <mixed-conditional>

/* Real conditional (present or future) - αν + subjunctive */
<real-conditional> ::= "αν" <opt-whitespace> <verb-subjunctive> <opt-whitespace> "," <opt-whitespace> <future-clause>

<future-clause> ::= "θα" <opt-whitespace> <verb-present-active-1sg>

/* Unreal conditional (present) - αν + imperfect, θα + imperfect */
<unreal-conditional> ::= "αν" <opt-whitespace> <verb-imperfect> <opt-whitespace> "," <opt-whitespace> "θα" <opt-whitespace> <verb-imperfect>

/* Mixed conditional (past condition, present result) */
<mixed-conditional> ::= "αν" <opt-whitespace> <verb-past> <opt-whitespace> "," <opt-whitespace> <verb-phrase>

/* ============================================================================ */
/* CLEFT SENTENCES AND FOCUS CONSTRUCTIONS                                     */
/* ============================================================================ */

<cleft-sentence> ::= <it-cleft>
                  | <pseudo-cleft>
                  | <reversed-pseudo-cleft>

/* It-cleft: "Είναι ο Γιάννης που..." (It's John who...) */
<it-cleft> ::= ( "είναι" | "ήταν" ) <opt-whitespace> <focused-constituent> <opt-whitespace> "που" <opt-whitespace> <relative-clause-content>

<focused-constituent> ::= <noun-phrase>
                       | <prepositional-phrase>
                       | <adverb>

<relative-clause-content> ::= <subject>? <opt-whitespace> <verb-phrase> <opt-whitespace> <object>?

/* Pseudo-cleft: "Αυτό που θέλω είναι..." (What I want is...) */
<pseudo-cleft> ::= ( "αυτό" | "αυτός" | "αυτή" ) <opt-whitespace> "που" <opt-whitespace> <relative-clause-content> <opt-whitespace> "είναι" <opt-whitespace> <focused-constituent>

/* Reversed pseudo-cleft */
<reversed-pseudo-cleft> ::= <focused-constituent> <opt-whitespace> "είναι" <opt-whitespace> ( "αυτό" | "αυτός" | "αυτή" ) <opt-whitespace> "που" <opt-whitespace> <relative-clause-content>


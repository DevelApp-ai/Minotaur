/* ============================================================================ */
/* TEMPORAL, CAUSAL, AND CONDITIONAL SUBORDINATE CLAUSES                       */
/* ============================================================================ */

/* Temporal clauses */
<temporal-clause> ::= <temporal-conjunction> <opt-whitespace> <subordinate-content>

<temporal-conjunction> ::= "όταν" | "όποτε" | "αφού" | "πριν" | "μετά" | "ενώ" | "καθώς" | "μόλις" | "ώσπου" | "μέχρι" | "από" <opt-whitespace> "τότε" <opt-whitespace> "που"

/* Causal clauses */
<causal-clause> ::= <causal-conjunction> <opt-whitespace> <subordinate-content>

<causal-conjunction> ::= "επειδή" | "γιατί" | "διότι" | "αφού" | "εφόσον" | "καθώς"

/* Concessive clauses */
<concessive-clause> ::= <concessive-conjunction> <opt-whitespace> <subordinate-content>

<concessive-conjunction> ::= "παρόλο" <opt-whitespace> "που" | "αν" <opt-whitespace> "και" | "μολονότι" | "ενώ" | "καίτοι" | "έστω" <opt-whitespace> "και" <opt-whitespace> "αν"

/* Purpose clauses */
<purpose-clause> ::= <purpose-conjunction> <opt-whitespace> <subordinate-content>

<purpose-conjunction> ::= "για" <opt-whitespace> "να" | "ώστε" <opt-whitespace> "να" | "με" <opt-whitespace> "σκοπό" <opt-whitespace> "να"

/* Result clauses */
<result-clause> ::= <result-conjunction> <opt-whitespace> <subordinate-content>

<result-conjunction> ::= "ώστε" | "έτσι" <opt-whitespace> "ώστε" | "τόσο" <opt-whitespace> "ώστε"

/* ============================================================================ */
/* DEMONSTRATIVES AND DEFINITE PRONOUNS - Extended System                      */
/* ============================================================================ */

<demonstrative-system> ::= <proximal-demonstrative>
                        | <distal-demonstrative>
                        | <medial-demonstrative>

/* Proximal (this/these) */
<proximal-demonstrative> ::= "αυτός" | "αυτή" | "αυτό" | "αυτοί" | "αυτές" | "αυτά"
                          | "τούτος" | "τούτη" | "τούτο" | "τούτοι" | "τούτες" | "τούτα"

/* Distal (that/those) */
<distal-demonstrative> ::= "εκείνος" | "εκείνη" | "εκείνο" | "εκείνοι" | "εκείνες" | "εκείνα"

/* Medial (archaic/dialectal) */
<medial-demonstrative> ::= @DIALECT[cypriot] ( "τόνος" | "τήνη" | "τήνο" )
                        | @DIALECT[pontic] ( "ατς" | "ατ" | "ατό" )

/* Possessive pronouns - full declension */
<possessive-pronoun-system> ::= <possessive-first-person>
                             | <possessive-second-person>
                             | <possessive-third-person>

<possessive-first-person> ::= "δικός" <opt-whitespace> "μου" | "δική" <opt-whitespace> "μου" | "δικό" <opt-whitespace> "μου"
                           | "δικοί" <opt-whitespace> "μας" | "δικές" <opt-whitespace> "μας" | "δικά" <opt-whitespace> "μας"

<possessive-second-person> ::= "δικός" <opt-whitespace> "σου" | "δική" <opt-whitespace> "σου" | "δικό" <opt-whitespace> "σου"
                            | "δικοί" <opt-whitespace> "σας" | "δικές" <opt-whitespace> "σας" | "δικά" <opt-whitespace> "σας"

<possessive-third-person> ::= "δικός" <opt-whitespace> "του" | "δική" <opt-whitespace> "του" | "δικό" <opt-whitespace> "του"
                           | "δικός" <opt-whitespace> "της" | "δική" <opt-whitespace> "της" | "δικό" <opt-whitespace> "της"
                           | "δικοί" <opt-whitespace> "τους" | "δικές" <opt-whitespace> "τους" | "δικά" <opt-whitespace> "τους"

/* ============================================================================ */
/* REFLEXIVE AND RECIPROCAL PRONOUNS                                           */
/* ============================================================================ */

<reflexive-pronoun> ::= <simple-reflexive>
                     | <emphatic-reflexive>

<simple-reflexive> ::= "τον" <opt-whitespace> "εαυτό" <opt-whitespace> ( "μου" | "σου" | "του" | "της" | "μας" | "σας" | "τους" )

<emphatic-reflexive> ::= "ο" <opt-whitespace> "ίδιος" | "η" <opt-whitespace> "ίδια" | "το" <opt-whitespace> "ίδιο"
                      | "ο" <opt-whitespace> "εαυτός" <opt-whitespace> ( "μου" | "σου" | "του" | "της" | "μας" | "σας" | "τους" )

<reciprocal-pronoun> ::= "ο" <opt-whitespace> "ένας" <opt-whitespace> "τον" <opt-whitespace> "άλλον"
                      | "η" <opt-whitespace> "μία" <opt-whitespace> "την" <opt-whitespace> "άλλη"
                      | "το" <opt-whitespace> "ένα" <opt-whitespace> "το" <opt-whitespace> "άλλο"
                      | "αλλήλους" | "αλλήλες" | "αλλήλα"

/* ============================================================================ */
/* INTERROGATIVE SYSTEM - Comprehensive Question Formation                     */
/* ============================================================================ */

<interrogative-system> ::= <wh-interrogative>
                        | <yes-no-interrogative>
                        | <alternative-interrogative>

<wh-interrogative> ::= <wh-word> <opt-whitespace> <verb-phrase> <opt-whitespace> <noun-phrase>?

<wh-word> ::= "ποιος" | "ποια" | "ποιο" | "ποιού" | "ποιον" | "ποιαν" | "τι" | "τίνος"
           | "πού" | "πότε" | "πώς" | "γιατί" | "πόσο" | "πόσοι" | "πόσες" | "πόσα"

<yes-no-interrogative> ::= <declarative-clause> ";"
                        | <interrogative-particle> <opt-whitespace> <declarative-clause> ";"

<interrogative-particle> ::= "μήπως" | "άραγε"

<alternative-interrogative> ::= <clause> <opt-whitespace> "ή" <opt-whitespace> <clause> ";"

/* ============================================================================ */
/* COMPOUND NOUNS - Greek Compounding System                                   */
/* ============================================================================ */

<compound-noun> ::= <noun-noun-compound>
                 | <adjective-noun-compound>
                 | <verb-noun-compound>
                 | <preposition-noun-compound>

<noun-noun-compound> ::= /[α-ωά-ώΑ-Ω]+ο[α-ωά-ώΑ-Ω]+/
                      | /[α-ωά-ώΑ-Ω]+α[α-ωά-ώΑ-Ω]+/

<adjective-noun-compound> ::= /[α-ωά-ώΑ-Ω]+ο[α-ωά-ώΑ-Ω]+/

<verb-noun-compound> ::= /[α-ωά-ώΑ-Ω]+(ο|α)[α-ωά-ώΑ-Ω]+/

<preposition-noun-compound> ::= /[α-ωά-ώΑ-Ω]+(προ|υπερ|υπο|δια|συν)[α-ωά-ώΑ-Ω]+/

/* ============================================================================ */
/* PHONOLOGICAL VARIANTS AND ALLOMORPHS                                        */
/* ============================================================================ */

/* Negation allomorphs based on phonological context */
<negation-allomorph> ::= "δεν" | "δε" | "δ'" /* before vowels */
                      | "μην" | "μη" | "μ'" /* before vowels */

/* Article allomorphs */
<article-allomorph> ::= "τον" | "τ'" /* before vowels */
                     | "την" | "τ'" /* before vowels */
                     | "στον" | "στ'" /* σε + τον before vowels */
                     | "στην" | "στ'" /* σε + την before vowels */

/* Conjunction allomorphs */
<conjunction-allomorph> ::= "και" | "κι" | "κ'" /* before vowels */

/* ============================================================================ */
/* VOCATIVE CASE - Special Address Forms                                       */
/* ============================================================================ */

<vocative-phrase> ::= <vocative-particle>? <opt-whitespace> <noun-vocative> <opt-whitespace> <punctuation>?

<vocative-particle> ::= "ω" | "ώ" | "ε"

<noun-vocative> ::= @CASE[vocative] ( /[α-ωά-ώΑ-Ω]+ε/ | /[α-ωά-ώΑ-Ω]+α/ | /[α-ωά-ώΑ-Ω]+η/ | /[α-ωά-ώΑ-Ω]+ο/ | /[α-ωά-ώΑ-Ω]+ι/ )

/* ============================================================================ */
/* EXCLAMATIVES - Emotion and Emphasis Expressions                             */
/* ============================================================================ */

<exclamative-expression> ::= <exclamative-word-extended> <opt-whitespace> <adjective>? <opt-whitespace> <noun-phrase>? "!"

<exclamative-word-extended> ::= "τι" | "πόσο" | "πώς" | "πω" <opt-whitespace> "πω" | "αχ" | "ωχ" | "ορίστε" | "να" | "για" <opt-whitespace> "δες"

/* ============================================================================ */
/* ADDITIONAL CONTEXT RULES - Extended Validation                              */
/* ============================================================================ */

@CONTEXT_RULE[clitic-doubling]:
    IF <clitic-pronoun> AND <object> REFER_TO_SAME_ENTITY
    THEN WARNING "Clitic doubling detected - acceptable in some contexts"

@CONTEXT_RULE[double-negation]:
    IF COUNT(<negation>) > 1
    THEN WARNING "Double negation - check intended meaning"

@CONTEXT_RULE[gerund-subject-agreement]:
    IF <gerund> HAS_IMPLICIT_SUBJECT
    THEN CHECK <gerund>.SUBJECT == <main-clause>.SUBJECT
    ELSE WARNING "Gerund subject should match main clause subject"


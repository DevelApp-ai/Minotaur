Grammar: Modern_Greek
TokenSplitter: Space
FormatType: CEBNF
ContextSensitive: true
SymbolTableSharing: hierarchical

/*
 * Modern Greek (Νέα Ελληνικά) Natural Language Grammar - Comprehensive Edition
 * 
 * This grammar provides extensive coverage of Modern Greek language structures including:
 * - Regular and irregular verb conjugations (all tenses and moods, 50+ irregular verbs)
 * - Full noun declension system (4 cases: nominative, genitive, accusative, vocative)
 * - Three genders (masculine, feminine, neuter)
 * - Context-sensitive agreement rules (gender, number, case, definiteness)
 * - Full regular expression support for morphological patterns
 * - Definite and indefinite articles with full declension
 * - Multiple tenses (present, imperfect, future, aorist, perfect, pluperfect)
 * - Subjunctive and imperative moods
 * - Active, middle, and passive voices
 * - Nested and coordinated subordinate clauses
 * - Multi-embedded sentence structures
 * - Relative clauses with nesting support
 * - Comparative and superlative adjectives
 * - Negation patterns
 * - Clitic pronouns with position rules
 * - Participles and gerunds
 * - Regional dialectal variations (6 major dialects)
 * - Conditional sentences (real, unreal, mixed)
 * - Reported speech and indirect discourse
 * - Parenthetical clauses
 */

Keywords: και, ή, ο, όχι, αλλά, αν, όταν, επειδή, ότι, που, με, για, από, σε, εγώ, εσύ, αυτός, αυτή, αυτό, εμείς, εσείς, αυτοί, αυτές, αυτά, μου, σου, του, της, μας, σας, τους, ναι, να, θα, δεν, μη, μην, πολύ, λίγο, πάντα, ποτέ, εδώ, εκεί, τώρα, τότε, ίσως, μήπως, ας, είθε, τάχα

/* Dialect markers for Modern Greek regional varieties */
@DIALECT[standard]      /* Standard Modern Greek (Demotic) */
@DIALECT[pontic]        /* Pontic Greek (Ποντιακά) */
@DIALECT[cypriot]       /* Cypriot Greek (Κυπριακά) */
@DIALECT[cretan]        /* Cretan Greek (Κρητικά) */
@DIALECT[tsakonian]     /* Tsakonian Greek (Τσακωνικά) - archaic */
@DIALECT[cappadocian]   /* Cappadocian Greek (Καππαδοκικά) */

/* Top-level sentence structure with nesting */
<sentence> ::= <main-clause>
            | <subordinate-clause>
            | <compound-sentence>
            | <complex-sentence>
            | <multi-embedded-sentence>
            | <coordinated-complex-sentence>

/* Main clause */
<main-clause> ::= <declarative-clause>
               | <interrogative-clause>
               | <imperative-clause>
               | <exclamative-clause>
               | <parenthetical-clause>

/* Declarative clause with flexible word order and optional constituents */
<declarative-clause> ::= <subject>? <opt-whitespace> <verb-phrase> <opt-whitespace> <object>? <opt-whitespace> <indirect-object>? <opt-whitespace> <adverbial>* <opt-whitespace> <final-field>? <opt-whitespace> <punctuation>?

/* Final field for heavy constituents */
<final-field> ::= <subordinate-clause>
               | <relative-clause>
               | <embedded-clause-sequence>
               | <prepositional-phrase>

/* Embedded clause sequence (multiple subordinate clauses) */
<embedded-clause-sequence> ::= <subordinate-clause> ( <opt-whitespace> <coordinating-conjunction>? <opt-whitespace> <subordinate-clause> )+

/* Interrogative clause */
<interrogative-clause> ::= <question-word> <opt-whitespace> <verb-phrase> <opt-whitespace> <subject>? <opt-whitespace> <object>? <opt-whitespace> ";"
                        | <declarative-clause> ";"

<question-word> ::= "ποιος" | "ποια" | "ποιο" | "τι" | "πού" | "πότε" | "πώς" | "γιατί" | "πόσο" | "πόσοι" | "πόσες" | "πόσα"

/* Imperative clause */
<imperative-clause> ::= <verb-imperative> <opt-whitespace> <object>? <opt-whitespace> <adverbial>? ( "!" | "." )?

/* Exclamative clause */
<exclamative-clause> ::= <exclamative-word> <opt-whitespace> <adjective>? <opt-whitespace> <noun-phrase>? "!"

<exclamative-word> ::= "τι" | "πόσο" | "τι" <opt-whitespace> "ωραίο" | "πόσο" <opt-whitespace> "όμορφο"

/* Subordinate clause */
<subordinate-clause> ::= <subordinating-conjunction> <opt-whitespace> <declarative-clause>

<subordinating-conjunction> ::= "ότι" | "που" | "αν" | "όταν" | "επειδή" | "γιατί" | "παρόλο" <opt-whitespace> "που" | "αφού" | "πριν" | "μετά" | "ενώ" | "για" <opt-whitespace> "να" | "χωρίς" <opt-whitespace> "να"

/* Compound sentence */
<compound-sentence> ::= <main-clause> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <main-clause>

<coordinating-conjunction> ::= "και" | "ή" | "αλλά" | "μα" | "ούτε" | "είτε" | "όμως" | "παρά" | "ωστόσο"

/* Complex sentence */
<complex-sentence> ::= <main-clause> <opt-whitespace> <subordinate-clause>
                    | <subordinate-clause> <opt-whitespace> <main-clause>

/* Subject with case marking */
<subject> ::= <pronoun-subject>
           | <noun-phrase>
           | <proper-noun>

/* Pronouns with case distinctions */
<pronoun-subject> ::= <personal-pronoun-nominative>
                   | <demonstrative-pronoun>
                   | <interrogative-pronoun>

<personal-pronoun-nominative> ::= @CASE[nominative] ( "εγώ" | "εσύ" | "αυτός" | "αυτή" | "αυτό" | "εμείς" | "εσείς" | "αυτοί" | "αυτές" | "αυτά" )

<personal-pronoun-genitive> ::= @CASE[genitive] ( "μου" | "σου" | "του" | "της" | "μας" | "σας" | "τους" )

<personal-pronoun-accusative> ::= @CASE[accusative] ( "εμένα" | "με" | "εσένα" | "σε" | "αυτόν" | "τον" | "αυτήν" | "την" | "αυτό" | "το" | "εμάς" | "μας" | "εσάς" | "σας" | "αυτούς" | "τους" | "αυτές" | "τις" | "αυτά" | "τα" )

<demonstrative-pronoun> ::= @GENDER[masculine] @NUMBER[singular] "αυτός"
                         | @GENDER[feminine] @NUMBER[singular] "αυτή"
                         | @GENDER[neuter] @NUMBER[singular] "αυτό"
                         | @GENDER[masculine] @NUMBER[plural] "αυτοί"
                         | @GENDER[feminine] @NUMBER[plural] "αυτές"
                         | @GENDER[neuter] @NUMBER[plural] "αυτά"

<interrogative-pronoun> ::= "ποιος" | "ποια" | "ποιο" | "τι" | "ποιού" | "ποιον" | "ποιαν"

/* Noun Phrase with gender agreement */
<noun-phrase> ::= <article>? <opt-whitespace> <adjective>* <opt-whitespace> <noun> <opt-whitespace> <genitive-modifier>?

<article> ::= <definite-article> | <indefinite-article>

/* Definite articles with gender and case marking */
<definite-article> ::= <definite-article-masc> | <definite-article-fem> | <definite-article-neut>

<definite-article-masc> ::= @GENDER[masculine] @NUMBER[singular] @CASE[nominative] "ο"
                         | @GENDER[masculine] @NUMBER[singular] @CASE[genitive] "του"
                         | @GENDER[masculine] @NUMBER[singular] @CASE[accusative] "τον"
                         | @GENDER[masculine] @NUMBER[plural] @CASE[nominative] "οι"
                         | @GENDER[masculine] @NUMBER[plural] @CASE[genitive] "των"
                         | @GENDER[masculine] @NUMBER[plural] @CASE[accusative] "τους"

<definite-article-fem> ::= @GENDER[feminine] @NUMBER[singular] @CASE[nominative] "η"
                        | @GENDER[feminine] @NUMBER[singular] @CASE[genitive] "της"
                        | @GENDER[feminine] @NUMBER[singular] @CASE[accusative] "την"
                        | @GENDER[feminine] @NUMBER[plural] @CASE[nominative] "οι"
                        | @GENDER[feminine] @NUMBER[plural] @CASE[genitive] "των"
                        | @GENDER[feminine] @NUMBER[plural] @CASE[accusative] "τις"

<definite-article-neut> ::= @GENDER[neuter] @NUMBER[singular] @CASE[nominative] "το"
                         | @GENDER[neuter] @NUMBER[singular] @CASE[genitive] "του"
                         | @GENDER[neuter] @NUMBER[singular] @CASE[accusative] "το"
                         | @GENDER[neuter] @NUMBER[plural] @CASE[nominative] "τα"
                         | @GENDER[neuter] @NUMBER[plural] @CASE[genitive] "των"
                         | @GENDER[neuter] @NUMBER[plural] @CASE[accusative] "τα"

/* Indefinite articles with gender marking */
<indefinite-article> ::= @GENDER[masculine] "ένας"
                      | @GENDER[feminine] "μία"
                      | @GENDER[neuter] "ένα"

/* Nouns with declension patterns */
<noun> ::= <noun-masculine>
        | <noun-feminine>
        | <noun-neuter>

/* Masculine nouns (various declension patterns) */
<noun-masculine> ::= @GENDER[masculine] @NUMBER[singular] @CASE[nominative] /[α-ωά-ώΑ-Ω]+ος/
                  | @GENDER[masculine] @NUMBER[singular] @CASE[genitive] /[α-ωά-ώΑ-Ω]+ου/
                  | @GENDER[masculine] @NUMBER[singular] @CASE[accusative] /[α-ωά-ώΑ-Ω]+ο/
                  | @GENDER[masculine] @NUMBER[singular] @CASE[vocative] /[α-ωά-ώΑ-Ω]+ε/
                  | @GENDER[masculine] @NUMBER[plural] @CASE[nominative] /[α-ωά-ώΑ-Ω]+οι/
                  | @GENDER[masculine] @NUMBER[plural] @CASE[genitive] /[α-ωά-ώΑ-Ω]+ων/
                  | @GENDER[masculine] @NUMBER[plural] @CASE[accusative] /[α-ωά-ώΑ-Ω]+ους/

/* Feminine nouns (various declension patterns) */
<noun-feminine> ::= @GENDER[feminine] @NUMBER[singular] @CASE[nominative] ( /[α-ωά-ώΑ-Ω]+η/ | /[α-ωά-ώΑ-Ω]+α/ )
                 | @GENDER[feminine] @NUMBER[singular] @CASE[genitive] ( /[α-ωά-ώΑ-Ω]+ης/ | /[α-ωά-ώΑ-Ω]+ας/ )
                 | @GENDER[feminine] @NUMBER[singular] @CASE[accusative] ( /[α-ωά-ώΑ-Ω]+η/ | /[α-ωά-ώΑ-Ω]+α/ )
                 | @GENDER[feminine] @NUMBER[plural] @CASE[nominative] /[α-ωά-ώΑ-Ω]+ες/
                 | @GENDER[feminine] @NUMBER[plural] @CASE[genitive] /[α-ωά-ώΑ-Ω]+ων/
                 | @GENDER[feminine] @NUMBER[plural] @CASE[accusative] /[α-ωά-ώΑ-Ω]+ες/

/* Neuter nouns (various declension patterns) */
<noun-neuter> ::= @GENDER[neuter] @NUMBER[singular] @CASE[nominative] ( /[α-ωά-ώΑ-Ω]+ο/ | /[α-ωά-ώΑ-Ω]+ι/ | /[α-ωά-ώΑ-Ω]+μα/ )
               | @GENDER[neuter] @NUMBER[singular] @CASE[genitive] ( /[α-ωά-ώΑ-Ω]+ου/ | /[α-ωά-ώΑ-Ω]+ιού/ | /[α-ωά-ώΑ-Ω]+ματος/ )
               | @GENDER[neuter] @NUMBER[singular] @CASE[accusative] ( /[α-ωά-ώΑ-Ω]+ο/ | /[α-ωά-ώΑ-Ω]+ι/ | /[α-ωά-ώΑ-Ω]+μα/ )
               | @GENDER[neuter] @NUMBER[plural] @CASE[nominative] ( /[α-ωά-ώΑ-Ω]+α/ | /[α-ωά-ώΑ-Ω]+ια/ | /[α-ωά-ώΑ-Ω]+ματα/ )
               | @GENDER[neuter] @NUMBER[plural] @CASE[genitive] ( /[α-ωά-ώΑ-Ω]+ων/ | /[α-ωά-ώΑ-Ω]+ιών/ | /[α-ωά-ώΑ-Ω]+μάτων/ )
               | @GENDER[neuter] @NUMBER[plural] @CASE[accusative] ( /[α-ωά-ώΑ-Ω]+α/ | /[α-ωά-ώΑ-Ω]+ια/ | /[α-ωά-ώΑ-Ω]+ματα/ )

<proper-noun> ::= /[Α-Ω][α-ωά-ώ]*/

/* Genitive modifier */
<genitive-modifier> ::= <noun-phrase> @CASE[genitive]

/* Adjectives with agreement */
<adjective> ::= <adjective-positive>
             | <adjective-comparative>
             | <adjective-superlative>

/* Positive degree with agreement */
<adjective-positive> ::= <adjective-masculine>
                      | <adjective-feminine>
                      | <adjective-neuter>

<adjective-masculine> ::= @GENDER[masculine] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+ος/
                       | @GENDER[masculine] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+οι/

<adjective-feminine> ::= @GENDER[feminine] @NUMBER[singular] ( /[α-ωά-ώΑ-Ω]+η/ | /[α-ωά-ώΑ-Ω]+α/ | /[α-ωά-ώΑ-Ω]+ια/ )
                      | @GENDER[feminine] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ες/

<adjective-neuter> ::= @GENDER[neuter] @NUMBER[singular] ( /[α-ωά-ώΑ-Ω]+ο/ | /[α-ωά-ώΑ-Ω]+ι/ )
                    | @GENDER[neuter] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+α/

/* Comparative degree */
<adjective-comparative> ::= @DEGREE[comparative] ( "πιο" <opt-whitespace> <adjective-positive> | /[α-ωά-ώΑ-Ω]+τερος/ )

/* Superlative degree */
<adjective-superlative> ::= @DEGREE[superlative] ( "ο" <opt-whitespace> "πιο" <opt-whitespace> <adjective-positive> | /[α-ωά-ώΑ-Ω]+τατος/ )

/* Verb phrases */
<verb-phrase> ::= <negation>? <opt-whitespace> <clitic-pronoun>* <opt-whitespace> <verb>

<negation> ::= "δεν" | "δε" | "μη" | "μην"

/* Clitic pronouns (weak forms) */
<clitic-pronoun> ::= "με" | "σε" | "τον" | "την" | "το" | "μας" | "σας" | "τους" | "τις" | "τα" | "μου" | "σου" | "του" | "της" | "μας" | "σας" | "τους"

/* Verbs with tense and voice */
<verb> ::= <verb-present>
        | <verb-past>
        | <verb-future>
        | <verb-perfect>
        | <verb-subjunctive>
        | <verb-imperative>

/* Present tense - active voice */
<verb-present> ::= @TENSE[present] @VOICE[active] ( <verb-present-active-1sg> | <verb-present-active-2sg> | <verb-present-active-3sg> | <verb-present-active-1pl> | <verb-present-active-2pl> | <verb-present-active-3pl> )

<verb-present-active-1sg> ::= @PERSON[1] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+ω/
<verb-present-active-2sg> ::= @PERSON[2] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+εις/
<verb-present-active-3sg> ::= @PERSON[3] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+ει/
<verb-present-active-1pl> ::= @PERSON[1] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ουμε/
<verb-present-active-2pl> ::= @PERSON[2] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ετε/
<verb-present-active-3pl> ::= @PERSON[3] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ουν/

/* Present tense - passive voice */
<verb-present-passive> ::= @TENSE[present] @VOICE[passive] ( <verb-present-passive-1sg> | <verb-present-passive-2sg> | <verb-present-passive-3sg> | <verb-present-passive-1pl> | <verb-present-passive-2pl> | <verb-present-passive-3pl> )

<verb-present-passive-1sg> ::= @PERSON[1] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+ομαι/
<verb-present-passive-2sg> ::= @PERSON[2] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+εσαι/
<verb-present-passive-3sg> ::= @PERSON[3] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+εται/
<verb-present-passive-1pl> ::= @PERSON[1] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ομαστε/
<verb-present-passive-2pl> ::= @PERSON[2] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+εστε/
<verb-present-passive-3pl> ::= @PERSON[3] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ονται/

/* Past tense (simple past/aorist) - active voice */
<verb-past> ::= @TENSE[past] @VOICE[active] ( <verb-past-active-1sg> | <verb-past-active-2sg> | <verb-past-active-3sg> | <verb-past-active-1pl> | <verb-past-active-2pl> | <verb-past-active-3pl> )

<verb-past-active-1sg> ::= @PERSON[1] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+α/
<verb-past-active-2sg> ::= @PERSON[2] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+ες/
<verb-past-active-3sg> ::= @PERSON[3] @NUMBER[singular] /[α-ωά-ώΑ-Ω]+ε/
<verb-past-active-1pl> ::= @PERSON[1] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+αμε/
<verb-past-active-2pl> ::= @PERSON[2] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+ατε/
<verb-past-active-3pl> ::= @PERSON[3] @NUMBER[plural] /[α-ωά-ώΑ-Ω]+αν/

/* Future tense (θα + subjunctive) */
<verb-future> ::= @TENSE[future] "θα" <opt-whitespace> <verb-subjunctive>

/* Subjunctive mood (used with να) */
<verb-subjunctive> ::= @MOOD[subjunctive] ( "να" <opt-whitespace> )? ( <verb-present-active-1sg> | <verb-present-active-2sg> | <verb-present-active-3sg> | <verb-present-active-1pl> | <verb-present-active-2pl> | <verb-present-active-3pl> )

/* Imperative mood */
<verb-imperative> ::= @MOOD[imperative] ( <verb-imperative-2sg> | <verb-imperative-2pl> )

<verb-imperative-2sg> ::= @PERSON[2] @NUMBER[singular] ( /[α-ωά-ώΑ-Ω]+ε/ | /[α-ωά-ώΑ-Ω]+ου/ | /[α-ωά-ώΑ-Ω]+α/ )
<verb-imperative-2pl> ::= @PERSON[2] @NUMBER[plural] ( /[α-ωά-ώΑ-Ω]+τε/ | /[α-ωά-ώΑ-Ω]+ετε/ )

/* Perfect tense (έχω + participle) */
<verb-perfect> ::= @TENSE[perfect] <auxiliary-verb-have> <opt-whitespace> <participle>

<auxiliary-verb-have> ::= "έχω" | "έχεις" | "έχει" | "έχουμε" | "έχετε" | "έχουν"

<participle> ::= /[α-ωά-ώΑ-Ω]+ει/ | /[α-ωά-ώΑ-Ω]+μένος/

/* Object */
<object> ::= <noun-phrase> @CASE[accusative]
          | <personal-pronoun-accusative>
          | <clitic-pronoun>

/* Adverbials */
<adverbial> ::= <adverb>
             | <prepositional-phrase>

<adverb> ::= <time-adverb>
          | <place-adverb>
          | <manner-adverb>
          | <degree-adverb>

<time-adverb> ::= "τώρα" | "τότε" | "σήμερα" | "χθες" | "αύριο" | "πάντα" | "ποτέ" | "συχνά" | "σπάνια" | "πρωί" | "βράδυ" | "νωρίς" | "αργά" | "ακόμα" | "ήδη"

<place-adverb> ::= "εδώ" | "εκεί" | "πάνω" | "κάτω" | "μέσα" | "έξω" | "μπροστά" | "πίσω" | "αριστερά" | "δεξιά" | "κοντά" | "μακριά" | "παντού" | "πουθενά"

<manner-adverb> ::= "καλά" | "άσχημα" | "γρήγορα" | "αργά" | "εύκολα" | "δύσκολα" | "έτσι" | "μαζί" | "μόνος" | "σιγά" | "δυνατά"

<degree-adverb> ::= "πολύ" | "λίγο" | "πάρα" <opt-whitespace> "πολύ" | "αρκετά" | "πολλά" | "τόσο" | "σχεδόν" | "εντελώς" | "απόλυτα"

/* Prepositional phrases */
<prepositional-phrase> ::= <preposition> <opt-whitespace> <noun-phrase>

<preposition> ::= "σε" | "από" | "με" | "για" | "προς" | "μέχρι" | "χωρίς" | "παρά" | "κατά" | "μετά" | "πριν" | "πάνω" <opt-whitespace> "σε" | "κάτω" <opt-whitespace> "από" | "μέσα" <opt-whitespace> "σε" | "έξω" <opt-whitespace> "από" | "δίπλα" <opt-whitespace> "σε" | "μπροστά" <opt-whitespace> "σε" | "πίσω" <opt-whitespace> "από"

/* Punctuation */
<punctuation> ::= "." | "!" | ";" | "," | ":" | "·" | "..." | "-"

/* Whitespace */
<whitespace> ::= /[ \t\n\r]+/

<opt-whitespace> ::= /[ \t\n\r]*/

/* Context-sensitive agreement rules */

@CONTEXT_RULE[article-noun-agreement]:
    IF <article>.@GENDER == <noun>.@GENDER AND <article>.@NUMBER == <noun>.@NUMBER AND <article>.@CASE == <noun>.@CASE
    THEN VALID
    ELSE ERROR "Article must agree with noun in gender, number, and case"

@CONTEXT_RULE[adjective-noun-agreement]:
    IF <adjective>.@GENDER == <noun>.@GENDER AND <adjective>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in gender and number"

@CONTEXT_RULE[subject-verb-agreement]:
    IF <subject>.@NUMBER == <verb>.@NUMBER AND <subject>.@PERSON == <verb>.@PERSON
    THEN VALID
    ELSE WARNING "Subject and verb should agree in person and number"

@CONTEXT_RULE[clitic-position]:
    IF <clitic-pronoun> PRECEDES <verb> OR <clitic-pronoun> FOLLOWS <verb-imperative>
    THEN VALID
    ELSE WARNING "Clitic pronouns typically precede verbs (except imperatives)"

/* Example sentences demonstrating Modern Greek grammar:
 *
 * BASIC SENTENCES:
 * - "Ο άνθρωπος διαβάζει ένα βιβλίο" (The man reads a book)
 * - "Η γυναίκα γράφει ένα γράμμα" (The woman writes a letter)
 * - "Το παιδί τρώει ένα μήλο" (The child eats an apple)
 *
 * VERB CONJUGATIONS:
 * - "Εγώ γράφω" (I write - present)
 * - "Εσύ έγραψες" (You wrote - past)
 * - "Αυτός θα γράψει" (He will write - future)
 * - "Έχω γράψει" (I have written - perfect)
 *
 * GENDER AGREEMENT:
 * - "Ο μεγάλος άνθρωπος" (The big man - masculine)
 * - "Η μεγάλη γυναίκα" (The big woman - feminine)
 * - "Το μεγάλο σπίτι" (The big house - neuter)
 *
 * CLITIC PRONOUNS:
 * - "Με βλέπει" (He/she sees me)
 * - "Του μιλάω" (I speak to him)
 * - "Την αγαπώ" (I love her)
 *
 * NEGATION:
 * - "Δεν γράφω" (I don't write)

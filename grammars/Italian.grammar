/* Exclamative constructions */
<exclamative-construction> ::= "Che" <opt-whitespace> <noun> "!"
                            | "Come" <opt-whitespace> <verb-phrase> "!"
                            | "Quanto" <opt-whitespace> <adjective> "!"

/* Prepositional articles (contractions) */
<prepositional-article> ::= "al" | "allo" | "alla" | "ai" | "agli" | "alle"
                         | "del" | "dello" | "della" | "dei" | "degli" | "delle"
                         | "dal" | "dallo" | "dalla" | "dai" | "dagli" | "dalle"
                         | "nel" | "nello" | "nella" | "nei" | "negli" | "nelle"
                         | "sul" | "sullo" | "sulla" | "sui" | "sugli" | "sulle"

/* Negation */
<negation> ::= "non" | "non" <opt-whitespace> "mai" | "non" <opt-whitespace> "più" | "non" <opt-whitespace> "ancora" | "non" <opt-whitespace> "niente" | "non" <opt-whitespace> "nulla" | "non" <opt-whitespace> "nessuno"

/* Question words */
<question-word> ::= "chi" | "che" | "cosa" | "che" <opt-whitespace> "cosa" | "dove" | "quando" | "come" | "perché" | "quanto" | "quanta" | "quanti" | "quante" | "quale" | "quali"

/* Punctuation */
<punctuation> ::= "." | "?" | "!" | "," | ";" | ":" | "..." | "-"

/* Whitespace */
<whitespace> ::= /[ \t\n\r]+/

<opt-whitespace> ::= /[ \t\n\r]*/

/* Context-sensitive validation rules */

/* Article-noun gender agreement */
@CONTEXT_RULE[article-noun-agreement]:
    IF <article>.@GENDER == <noun>.@GENDER
    THEN VALID
    ELSE ERROR "Article and noun gender must agree"

/* Article-noun number agreement */
@CONTEXT_RULE[article-noun-number-agreement]:
    IF <article>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Article and noun number must agree"

/* Adjective-noun gender agreement */
@CONTEXT_RULE[adjective-noun-gender-agreement]:
    IF <adjective>.@AGREEMENT == <noun>.@GENDER OR <noun>.@NUMBER == "plural"
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in gender"

/* Adjective-noun number agreement */
@CONTEXT_RULE[adjective-noun-number-agreement]:
    IF <adjective>.@NUMBER == <noun>.@NUMBER
    THEN VALID
    ELSE ERROR "Adjective must agree with noun in number"

/* Subject-verb number agreement */
@CONTEXT_RULE[subject-verb-agreement]:
    IF <subject>.@NUMBER == <verb>.@NUMBER
    THEN VALID
    ELSE WARNING "Subject and verb number should agree"

/* Subject-verb person agreement */
@CONTEXT_RULE[subject-verb-person-agreement]:
    IF <subject>.@PERSON == <verb>.@PERSON
    THEN VALID
    ELSE WARNING "Subject and verb person should agree"

/* Past participle agreement with essere */
@CONTEXT_RULE[participle-essere-agreement]:
    IF <auxiliary-verb> == "essere" THEN <past-participle>.@GENDER == <subject>.@GENDER AND <past-participle>.@NUMBER == <subject>.@NUMBER
    ELSE VALID

/* Nested clause depth validation */
@CONTEXT_RULE[nested-clause-depth]:
    IF <nested-subordinate-clause> DEPTH <= 3
    THEN VALID
    ELSE WARNING "Deep nesting (>3 levels) may reduce readability"

/* Cleft sentence structure */
@CONTEXT_RULE[cleft-structure]:
    IF <cleft-sentence> HAS_VALID_STRUCTURE
    THEN VALID
    ELSE ERROR "Cleft sentences require proper è...che/chi structure"

/* Clause coherence */
@CONTEXT_RULE[clause-coherence]:
    IF <multi-embedded-sentence> HAS_COHERENT_REFERENCE_CHAIN
    THEN VALID
    ELSE WARNING "Complex sentences should maintain clear reference chains"

/* Reported speech tense concordance */
@CONTEXT_RULE[reported-speech-tense]:
    IF <reported-speech> TENSE_CONSISTENT_WITH <reporting-verb>
    THEN VALID
    ELSE WARNING "Tense in reported speech should follow concordance of tenses"

/* Subjunctive mood requirement */
@CONTEXT_RULE[subjunctive-requirement]:
    IF <subordinate-clause> AFTER_EXPRESSION_REQUIRING_SUBJUNCTIVE
    THEN <verb-phrase> CONTAINS <verb-subjunctive>
    ELSE WARNING "Expressions of desire, emotion, doubt require subjunctive"

/* Tag question structure */
@CONTEXT_RULE[tag-question-structure]:
    IF <tag-question> HAS_PROPER_TAG
    THEN VALID
    ELSE ERROR "Tag questions require proper tag structure (vero, non è vero, etc.)"

/* Example sentences demonstrating Italian grammar:
 *
 * SIMPLE SENTENCES:
 * - "Io parlo italiano" (I speak Italian)
 * - "Lei mangia una mela" (She eats an apple)
 * - "Noi abitiamo a Roma" (We live in Rome)
 *
 * VERB CONJUGATIONS:
 * - "Io parlo, tu parli, lui parla" (I speak, you speak, he speaks - 1st group)
 * - "Io credo, tu credi, lui crede" (I believe, you believe, he believes - 2nd group)
 * - "Io dormo, tu dormi, lui dorme" (I sleep, you sleep, he sleeps - 3rd group)
 * - "Io finisco, tu finisci, lui finisce" (I finish - 3rd group with -isc-)
 *
 * IRREGULAR VERBS:
 * - "Io sono, tu sei, lui è" (I am, you are, he is - essere)
 * - "Io ho, tu hai, lui ha" (I have, you have, he has - avere)
 * - "Io vado, tu vai, lui va" (I go, you go, he goes - andare)
 *
 * PASSATO PROSSIMO:
 * - "Ho parlato" (I spoke/have spoken - with avere)
 * - "Sono andato" (I went/have gone - with essere, masc.)
 * - "Sono andata" (I went/have gone - with essere, fem.)
 * - "Lei è venuta" (She came/has come - agreement)
 *
 * GENDER AGREEMENT:
 * - "Un uomo alto" (A tall man - masculine)
 * - "Una donna alta" (A tall woman - feminine)
 * - "Il libro rosso" (The red book - masculine)
 * - "La tavola rossa" (The red table - feminine)
 *
 * NEGATION:
 * - "Non parlo" (I don't speak)
 * - "Non viene mai" (He/she never comes)
 * - "Non ho niente" (I have nothing)
 *
 * OBJECT PRONOUNS:
 * - "Lo vedo" (I see him/it)
 * - "Gli parlo" (I speak to him)
 * - "Li amo" (I love them)
 *
 * INTERROGATIVE:
 * - "Parli italiano?" (Do you speak Italian?)
 * - "Dove abiti?" (Where do you live?)
 * - "Quando vieni?" (When are you coming?)
 *
 * SUBJUNCTIVE:
 * - "Voglio che tu venga" (I want you to come)
 * - "Penso che sia vero" (I think it is true)
 * - "Benché sia tardi" (Although it is late)
 *
 * COMPARATIVE/SUPERLATIVE:
 * - "Più alto di" (Taller than)
 * - "Il più alto" (The tallest)
 * - "Migliore di" (Better than)
 * - "Il migliore" (The best)
 * - "Bellissimo" (Very beautiful - absolute superlative)
 *
 * REFLEXIVE VERBS:
 * - "Mi lavo" (I wash myself)
 * - "Ci alziamo" (We get up)
 * - "Si parlano" (They speak to each other)
 *
 * NESTED SUBORDINATE CLAUSES:
 * - "Penso che tu creda che lui venga" (I think that you believe that he is coming - 2-level)
 * - "Dice che lei sa che noi partiamo domani" (He says that she knows that we're leaving tomorrow)
 *
 * CLEFT SENTENCES:
 * - "È Marco che è venuto" (It's Marco who came)
 * - "È la macchina che ho comprato" (It's the car that I bought)
 * - "Quello che mi interessa è la musica" (What interests me is music)
 *
 * DISCOURSE MARKERS:
 * - "Prima sono andato al negozio, poi sono tornato a casa" (First I went to the store, then I went home)
 * - "Piove, quindi resto a casa" (It's raining, so I'm staying home)
 * - "Lavora molto, tuttavia trova il tempo di leggere" (He/she works a lot, however finds time to read)
 *
 * REPORTED SPEECH:
 * - "Dice che verrà" (He/she says that he/she will come)
 * - "Ha detto che era stanca" (She said that she was tired - tense concordance)
 * - "Penso che abbia ragione" (I think that he/she is right)
 *
 * TAG QUESTIONS:
 * - "Vieni, vero?" (You're coming, aren't you?)
 * - "Fa bel tempo, non è vero?" (It's nice weather, isn't it?)
 *
 * ELLIPTICAL STRUCTURES:
 * - "Parto oggi, lui domani" (I'm leaving today, him tomorrow)
 * - "Anch'io" (Me too)
 *
 * MULTI-EMBEDDED SENTENCES:
 * - "Quando arrivi, se vuoi, possiamo andare al cinema" (When you arrive, if you want, we can go to the cinema)
 * - "L'uomo che parla dice che la donna che conosce verrà" (The man who is speaking says that the woman whom he knows will come - 3-level)
 */

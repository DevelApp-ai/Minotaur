Grammar: Italian
TokenSplitter: Space
FormatType: CEBNF
ContextSensitive: true
SymbolTableSharing: hierarchical

/*
 * Italian Natural Language Grammar - Comprehensive Edition
 * 
 * This grammar provides extensive coverage of Italian language structures including:
 * - Regular and irregular verb conjugations (all tenses and moods)
 * - Three verb groups (-are, -ere, -ire verbs)
 * - Reflexive and pronominal verbs
 * - Context-sensitive agreement rules (gender, number, person)
 * - Masculine and feminine gender agreement
 * - Definite and indefinite articles
 * - Multiple tenses (presente, passato prossimo, imperfetto, futuro, etc.)
 * - Conditional and subjunctive moods
 * - SVO word order with flexibility
 * - Relative clauses and subordinate structures
 * - Comparative and superlative adjectives
 * - Negation patterns
 * - Clitic pronouns and their placement
 * - Multi-embedded sentence structures
 * - Nested subordinate and relative clauses
 * - Discourse markers and connectives
 * - Parenthetical insertions
 * - Cleft sentences (è...che/chi)
 * - Elliptical structures
 * - Tag questions (vero? non è vero?)
 * - Reported speech with tense concordance
 */

Keywords: e, o, ma, però, dunque, quindi, perché, che, chi, quando, dove, come, se, mentre, perciò, con, senza, in, su, sotto, di, del, dello, della, dei, degli, delle, a, al, allo, alla, ai, agli, alle, il, lo, la, i, gli, le, un, uno, una, questo, questa, questi, queste, mio, mia, miei, mie, tuo, tua, tuoi, tue, suo, sua, suoi, sue, nostro, nostra, nostri, nostre, vostro, vostra, vostri, vostre, loro, non, mai, niente, nulla, nessuno, io, tu, lui, lei, noi, voi, loro, mi, ti, si, ci, vi, ne

/* Top-level sentence structure with advanced embedding */
<sentence> ::= <main-clause>
            | <subordinate-clause>
            | <compound-sentence>
            | <complex-sentence>
            | <multi-embedded-sentence>
            | <coordinated-complex-sentence>

/* Main clause with SVO word order */
<main-clause> ::= <declarative-clause>
               | <interrogative-clause>
               | <imperative-clause>
               | <exclamative-clause>
               | <parenthetical-clause>

/* SVO declarative: Subject + Verb + Object/Complement */
<declarative-clause> ::= <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> <object>? <opt-whitespace> <adverbial>* <opt-whitespace> <punctuation>?

/* Interrogative clauses */
<interrogative-clause> ::= <declarative-clause> "?"
                        | <question-word> <opt-whitespace> <verb> <opt-whitespace> <subject>? <opt-whitespace> <object>? "?"

/* Imperative mood */
<imperative-clause> ::= <verb-imperative> <opt-whitespace> <object-pronoun>* <opt-whitespace> <object>? <opt-whitespace> <adverbial>? <punctuation>?

/* Exclamative clause */
<exclamative-clause> ::= <exclamative-word> <opt-whitespace> <noun-phrase>? <opt-whitespace> <verb-phrase>? "!"

<exclamative-word> ::= "Che" | "Come" | "Quanto" | "Quanta" | "Quanti" | "Quante"

/* Parenthetical clause (inserted remark) */
<parenthetical-clause> ::= <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> "," <opt-whitespace> <parenthetical-insertion> <opt-whitespace> "," <opt-whitespace> <object>? <punctuation>?

<parenthetical-insertion> ::= <adverb>
                           | <comment-phrase>
                           | "penso"
                           | "credo"
                           | "secondo" <opt-whitespace> "me"
                           | "a" <opt-whitespace> "mio" <opt-whitespace> "parere"

<comment-phrase> ::= <adverb> ( <opt-whitespace> <adverb> )*

/* Subordinate clauses with nesting */
<subordinate-clause> ::= <simple-subordinate-clause>
                      | <nested-subordinate-clause>
                      | <coordinated-subordinate-clause>

<simple-subordinate-clause> ::= <subordinating-conjunction> <opt-whitespace> <subordinate-content>

/* Nested subordinate clause */
<nested-subordinate-clause> ::= <subordinating-conjunction> <opt-whitespace> <nested-subordinate-content>

<nested-subordinate-content> ::= <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> <object>? <opt-whitespace> <nested-final-field>?

<nested-final-field> ::= <subordinate-clause>
                      | <relative-clause>

/* Coordinated subordinate clauses */
<coordinated-subordinate-clause> ::= <subordinate-clause> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <subordinate-clause>

<subordinate-content> ::= <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> <object>?

<subordinating-conjunction> ::= <temporal-conjunction>
                             | <causal-conjunction>
                             | <conditional-conjunction>
                             | <concessive-conjunction>
                             | <purpose-conjunction>
                             | "che" | "perché" | "poiché" | "se" | "come"

<temporal-conjunction> ::= "quando" | "mentre" | "finché" | "fino" <opt-whitespace> "a" <opt-whitespace> "quando" | "prima" <opt-whitespace> "che" | "dopo" <opt-whitespace> "che" | "appena"

<causal-conjunction> ::= "perché" | "poiché" | "siccome" | "dato" <opt-whitespace> "che" | "visto" <opt-whitespace> "che"

<conditional-conjunction> ::= "se" | "qualora" | "a" <opt-whitespace> "condizione" <opt-whitespace> "che" | "purché"

<concessive-conjunction> ::= "benché" | "sebbene" | "anche" <opt-whitespace> "se" | "nonostante" | "malgrado"

<purpose-conjunction> ::= "perché" | "affinché" | "così" <opt-whitespace> "che" | "in" <opt-whitespace> "modo" <opt-whitespace> "che"

/* Relative clauses with nesting */
<relative-clause> ::= <simple-relative-clause>
                   | <nested-relative-clause>

<simple-relative-clause> ::= <relative-pronoun> <opt-whitespace> <subject>? <opt-whitespace> <verb-phrase> <opt-whitespace> <object>?

/* Nested relative clause (contains subordinate clause) */
<nested-relative-clause> ::= <relative-pronoun> <opt-whitespace> <subject>? <opt-whitespace> <verb-phrase> <opt-whitespace> <object>? <opt-whitespace> <subordinate-clause>

<relative-pronoun> ::= "che" | "cui" | "il" <opt-whitespace> "quale" | "la" <opt-whitespace> "quale" | "i" <opt-whitespace> "quali" | "le" <opt-whitespace> "quali" | "chi"

/* Compound and complex sentences with advanced patterns */
<compound-sentence> ::= <simple-compound-sentence>
                     | <multi-compound-sentence>

<simple-compound-sentence> ::= <main-clause> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <main-clause>

/* Multiple coordinated main clauses */
<multi-compound-sentence> ::= <main-clause> ( <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <main-clause> ){2,}

<coordinating-conjunction> ::= "e" | "ed" | "o" | "oppure" | "ma" | "però" | "anzi" | "dunque" | "quindi" | "perciò" | "infatti" | "cioè"

<complex-sentence> ::= <simple-complex-sentence>
                    | <fronted-subordinate-sentence>

<simple-complex-sentence> ::= <main-clause> <opt-whitespace> <subordinate-clause>

<fronted-subordinate-sentence> ::= <subordinate-clause> <opt-whitespace> "," <opt-whitespace> <main-clause>

/* Multi-embedded sentence (multiple levels of embedding) */
<multi-embedded-sentence> ::= <main-clause> <opt-whitespace> <subordinate-clause> ( <opt-whitespace> <subordinate-clause> )+
                           | <subordinate-clause> <opt-whitespace> "," <opt-whitespace> <main-clause> <opt-whitespace> <subordinate-clause>

/* Coordinated complex sentence */
<coordinated-complex-sentence> ::= <complex-sentence> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <complex-sentence>
                                | <main-clause> <opt-whitespace> <coordinated-subordinate-clause>

/* Discourse markers and connectives */
<discourse-marker> ::= <temporal-discourse>
                    | <causal-discourse>
                    | <contrastive-discourse>
                    | <additive-discourse>
                    | <conclusive-discourse>

<temporal-discourse> ::= "prima" | "poi" | "dopo" | "infine" | "alla" <opt-whitespace> "fine" | "nel" <opt-whitespace> "frattempo" | "intanto" | "mentre"

<causal-discourse> ::= "quindi" | "perciò" | "dunque" | "pertanto" | "di" <opt-whitespace> "conseguenza" | "per" <opt-whitespace> "questo"

<contrastive-discourse> ::= "ma" | "però" | "tuttavia" | "eppure" | "invece" | "al" <opt-whitespace> "contrario" | "d'altra" <opt-whitespace> "parte"

<additive-discourse> ::= "e" | "anche" | "inoltre" | "in" <opt-whitespace> "più" | "oltretutto" | "per" <opt-whitespace> "di" <opt-whitespace> "più" | "anzi"

<conclusive-discourse> ::= "infine" | "alla" <opt-whitespace> "fine" | "in" <opt-whitespace> "conclusione" | "insomma" | "in" <opt-whitespace> "breve"

/* Cleft sentences (è...che/chi) */
<cleft-sentence> ::= <it-cleft> | <pseudo-cleft>

<it-cleft> ::= "è" <opt-whitespace> <noun-phrase> <opt-whitespace> <cleft-relative-pronoun> <opt-whitespace> <verb-phrase> <opt-whitespace> <object>?

<cleft-relative-pronoun> ::= "che" | "chi" | "cui"

<pseudo-cleft> ::= "quello" <opt-whitespace> "che" <opt-whitespace> <verb-phrase> <opt-whitespace> "è" <opt-whitespace> <noun-phrase>
                | "ciò" <opt-whitespace> "che" <opt-whitespace> <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> "è" <opt-whitespace> <noun-phrase>

/* Reported speech (discorso indiretto) */
<reported-speech> ::= <reporting-verb> <opt-whitespace> "che" <opt-whitespace> <indirect-statement>

<reporting-verb> ::= "dice" | "ha" <opt-whitespace> "detto" | "pensa" | "crede" | "afferma" | "dichiara" | "risponde" | "chiede"

<indirect-statement> ::= <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> <object>?

/* Tag questions */
<tag-question> ::= <declarative-clause> <opt-whitespace> "," <opt-whitespace> <tag>

<tag> ::= "vero" "?"
       | "non" <opt-whitespace> "è" <opt-whitespace> "vero" "?"
       | "no" "?"
       | "giusto" "?"

/* Elliptical structures */
<elliptical-clause> ::= <elliptical-response>
                     | <elliptical-coordination>

<elliptical-response> ::= "sì" | "no" | <adverb>

<elliptical-coordination> ::= <main-clause> <opt-whitespace> "," <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <noun-phrase>
                           | <subject> <opt-whitespace> <verb-phrase> <opt-whitespace> <object> <opt-whitespace> "," <opt-whitespace> <subject> <opt-whitespace> <object>

/* Subject */
<subject> ::= <pronoun-subject>
           | <noun-phrase>
           | <proper-noun>
           | <infinitive-as-subject>

<infinitive-as-subject> ::= <verb-infinitive> ( <opt-whitespace> <object> )?

/* Pronouns */
<pronoun-subject> ::= <personal-pronoun-subject>
                   | <demonstrative-pronoun>
                   | <indefinite-pronoun>

<subject-pronoun> ::= "io" | "tu" | "lui" | "lei" | "Lei" | "noi" | "voi" | "loro" | "Loro"

<personal-pronoun-subject> ::= @CASE[nominative] ( "io" | "tu" | "lui" | "lei" | "Lei" | "noi" | "voi" | "loro" | "Loro" )

<personal-pronoun-object> ::= @CASE[accusative] ( "mi" | "ti" | "lo" | "la" | "La" | "ci" | "vi" | "li" | "le" | "Li" | "Le" )

<personal-pronoun-indirect> ::= @CASE[dative] ( "mi" | "ti" | "gli" | "le" | "Le" | "ci" | "vi" | "loro" | "Loro" )

<reflexive-pronoun> ::= @REFLEXIVE ( "mi" | "ti" | "si" | "ci" | "vi" | "si" )

<adverbial-pronoun> ::= "ne" | "ci"

<demonstrative-pronoun> ::= @GENDER[masculine] @NUMBER[singular] ( "questo" | "quello" | "codesto" )
                         | @GENDER[feminine] @NUMBER[singular] ( "questa" | "quella" | "codesta" )
                         | @GENDER[masculine] @NUMBER[plural] ( "questi" | "quelli" | "codesti" )
                         | @GENDER[feminine] @NUMBER[plural] ( "queste" | "quelle" | "codeste" )
                         | "ciò"

<possessive-pronoun> ::= @GENDER[masculine] @NUMBER[singular] ( "il" <opt-whitespace> "mio" | "il" <opt-whitespace> "tuo" | "il" <opt-whitespace> "suo" | "il" <opt-whitespace> "nostro" | "il" <opt-whitespace> "vostro" | "il" <opt-whitespace> "loro" )
                      | @GENDER[feminine] @NUMBER[singular] ( "la" <opt-whitespace> "mia" | "la" <opt-whitespace> "tua" | "la" <opt-whitespace> "sua" | "la" <opt-whitespace> "nostra" | "la" <opt-whitespace> "vostra" | "la" <opt-whitespace> "loro" )
                      | @GENDER[masculine] @NUMBER[plural] ( "i" <opt-whitespace> "miei" | "i" <opt-whitespace> "tuoi" | "i" <opt-whitespace> "suoi" | "i" <opt-whitespace> "nostri" | "i" <opt-whitespace> "vostri" | "i" <opt-whitespace> "loro" )
                      | @GENDER[feminine] @NUMBER[plural] ( "le" <opt-whitespace> "mie" | "le" <opt-whitespace> "tue" | "le" <opt-whitespace> "sue" | "le" <opt-whitespace> "nostre" | "le" <opt-whitespace> "vostre" | "le" <opt-whitespace> "loro" )

<indefinite-pronoun> ::= "qualcuno" | "qualcosa" | "nessuno" | "niente" | "nulla" | "tutto" | "tutti" | "tutte" | "ciascuno" | "ciascuna" | "ognuno" | "ognuna" | "alcuni" | "alcune" | "alcuno" | "alcuna"

<interrogative-pronoun> ::= "chi" | "che" | "cosa" | "che" <opt-whitespace> "cosa" | "quale" | "quali"

/* Noun phrases with gender agreement */
<noun-phrase> ::= <determiner>? <opt-whitespace> <quantifier>? <opt-whitespace> <adjective-phrase>* <opt-whitespace> <noun> <opt-whitespace> <adjective-phrase>* <opt-whitespace> <prepositional-phrase>? <opt-whitespace> <relative-clause>?

/* Quantifiers and numerals */
<quantifier> ::= <numeral>
              | <indefinite-quantifier>

<numeral> ::= <cardinal-number> | <ordinal-number>

<cardinal-number> ::= "uno" | "una" | "due" | "tre" | "quattro" | "cinque" | "sei" | "sette" | "otto" | "nove" | "dieci" | "undici" | "dodici" | "tredici" | "quattordici" | "quindici" | "sedici" | "diciassette" | "diciotto" | "diciannove" | "venti" | "trenta" | "quaranta" | "cinquanta" | "sessanta" | "settanta" | "ottanta" | "novanta" | "cento" | "mille" | "milione" | "miliardo" | /[0-9]+/

<ordinal-number> ::= "primo" | "prima" | "secondo" | "seconda" | "terzo" | "terza" | "quarto" | "quarta" | "quinto" | "quinta" | "sesto" | "settimo" | "ottavo" | "nono" | "decimo" | "undicesimo" | "ventesimo" | "trentesimo" | "centesimo" | "millesimo"

<indefinite-quantifier> ::= "molto" | "molta" | "molti" | "molte" | "poco" | "poca" | "pochi" | "poche" | "troppo" | "troppa" | "troppi" | "troppe" | "abbastanza" | "parecchio" | "parecchi" | "alcuni" | "alcune" | "diversi" | "diverse" | "vari" | "varie" | "tutto" | "tutta" | "tutti" | "tutte" | "ogni" | "qualche" | "nessuno" | "nessuna" | "ciascuno" | "ciascuna" | "la" <opt-whitespace> "maggior" <opt-whitespace> "parte" <opt-whitespace> "di"

<determiner> ::= <article>
              | <demonstrative-determiner>
              | <possessive-determiner>
              | <quantifying-determiner>

/* Articles with gender and number */
<article> ::= <definite-article> | <indefinite-article>

<definite-article> ::= @GENDER[masculine] @NUMBER[singular] ( "il" | "lo" | "l'" )
                    | @GENDER[feminine] @NUMBER[singular] ( "la" | "l'" )
                    | @GENDER[masculine] @NUMBER[plural] ( "i" | "gli" )
                    | @GENDER[feminine] @NUMBER[plural] "le"

<indefinite-article> ::= @GENDER[masculine] @NUMBER[singular] ( "un" | "uno" )
                      | @GENDER[feminine] @NUMBER[singular] ( "una" | "un'" )

<demonstrative-determiner> ::= @GENDER[masculine] @NUMBER[singular] ( "questo" | "quello" | "codesto" | "quel" | "quell'" )
                            | @GENDER[feminine] @NUMBER[singular] ( "questa" | "quella" | "codesta" | "quell'" )
                            | @GENDER[masculine] @NUMBER[plural] ( "questi" | "quelli" | "codesti" | "quei" | "quegli" )
                            | @GENDER[feminine] @NUMBER[plural] ( "queste" | "quelle" | "codeste" )

<possessive-determiner> ::= @GENDER[masculine] @NUMBER[singular] ( "mio" | "tuo" | "suo" | "nostro" | "vostro" | "loro" )
                         | @GENDER[feminine] @NUMBER[singular] ( "mia" | "tua" | "sua" | "nostra" | "vostra" | "loro" )
                         | @GENDER[masculine] @NUMBER[plural] ( "miei" | "tuoi" | "suoi" | "nostri" | "vostri" | "loro" )
                         | @GENDER[feminine] @NUMBER[plural] ( "mie" | "tue" | "sue" | "nostre" | "vostre" | "loro" )

<quantifying-determiner> ::= "tutto" | "tutta" | "tutti" | "tutte" | "ogni" | "qualche" | "alcuni" | "alcune" | "nessuno" | "nessuna"

/* Nouns with gender and number */
<noun> ::= <noun-masculine-singular>
        | <noun-feminine-singular>
        | <noun-plural>

<noun-masculine-singular> ::= @GENDER[masculine] @NUMBER[singular] ( <noun-stem> "o" | <noun-stem> "e" | <noun-stem> )

<noun-feminine-singular> ::= @GENDER[feminine] @NUMBER[singular] ( <noun-stem> "a" | <noun-stem> "e" | <noun-stem> )

<noun-plural> ::= @GENDER[masculine] @NUMBER[plural] ( <noun-stem> "i" | <noun-stem> )
               | @GENDER[feminine] @NUMBER[plural] ( <noun-stem> "e" | <noun-stem> )

<noun-stem> ::= /[a-zàèéìíîòóùú]+/

<proper-noun> ::= /[A-ZÀÈÉÌÍÎÒÓÙÚ][a-zàèéìíîòóùú]*/

/* Adjectives with agreement and comparison */
<adjective-phrase> ::= <degree-modifier>? <opt-whitespace> <adjective>

<degree-modifier> ::= "molto" | "troppo" | "poco" | "abbastanza" | "più" | "meno" | "tanto" | "così"

<adjective> ::= <adjective-positive>
             | <adjective-comparative>
             | <adjective-superlative>

/* Positive degree with agreement */
<adjective-positive> ::= <adjective-masculine-singular>
                      | <adjective-feminine-singular>
                      | <adjective-plural>

<adjective-masculine-singular> ::= @AGREEMENT[masculine] @NUMBER[singular] @DEGREE[positive] ( <adjective-stem> "o" | <adjective-stem> "e" | <adjective-stem> )

<adjective-feminine-singular> ::= @AGREEMENT[feminine] @NUMBER[singular] @DEGREE[positive] ( <adjective-stem> "a" | <adjective-stem> "e" | <adjective-stem> )

<adjective-plural> ::= @AGREEMENT[masculine] @NUMBER[plural] @DEGREE[positive] ( <adjective-stem> "i" | <adjective-stem> )
                    | @AGREEMENT[feminine] @NUMBER[plural] @DEGREE[positive] ( <adjective-stem> "e" | <adjective-stem> )

/* Comparative degree */
<adjective-comparative> ::= @DEGREE[comparative] ( <regular-comparative> | <irregular-comparative> )

<regular-comparative> ::= "più" <opt-whitespace> <adjective-stem> ( "o" | "a" | "i" | "e" )?
                       | "meno" <opt-whitespace> <adjective-stem> ( "o" | "a" | "i" | "e" )?
                       | "tanto" <opt-whitespace> <adjective-stem> ( "o" | "a" | "i" | "e" )? <opt-whitespace> "quanto"

<irregular-comparative> ::= "migliore" | "migliori" | "peggiore" | "peggiori" | "maggiore" | "maggiori" | "minore" | "minori"

/* Superlative degree */
<adjective-superlative> ::= @DEGREE[superlative] ( <regular-superlative> | <irregular-superlative> | <absolute-superlative> )

<regular-superlative> ::= <definite-article> <opt-whitespace> "più" <opt-whitespace> <adjective-stem> ( "o" | "a" | "i" | "e" )?
                       | <definite-article> <opt-whitespace> "meno" <opt-whitespace> <adjective-stem> ( "o" | "a" | "i" | "e" )?

<irregular-superlative> ::= <definite-article> <opt-whitespace> ( "migliore" | "migliori" | "peggiore" | "peggiori" | "ottimo" | "ottima" | "ottimi" | "ottime" | "pessimo" | "pessima" | "pessimi" | "pessime" )

<absolute-superlative> ::= <adjective-stem> ( "issimo" | "issima" | "issimi" | "issime" )

<adjective-stem> ::= /[a-zàèéìíîòóùú]+/

/* Verb phrases */
<verb-phrase> ::= <simple-verb-phrase>
               | <compound-verb-phrase>
               | <pronominal-verb-phrase>
               | <modal-verb-phrase>

<simple-verb-phrase> ::= <object-pronoun>* <opt-whitespace> <adverbial-pronoun>* <opt-whitespace> <verb> ( <opt-whitespace> <adverb> )?

<compound-verb-phrase> ::= <object-pronoun>* <opt-whitespace> <adverbial-pronoun>* <opt-whitespace> <auxiliary-verb> <opt-whitespace> <adverb>? <opt-whitespace> <past-participle>

<pronominal-verb-phrase> ::= <reflexive-pronoun> <opt-whitespace> <verb>

<modal-verb-phrase> ::= <modal-verb> <opt-whitespace> <verb-infinitive>

<modal-verb> ::= <potere> | <dovere> | <volere> | <sapere>

<potere> ::= "posso" | "puoi" | "può" | "possiamo" | "potete" | "possono" | "potevo" | "poteva" | "potrò" | "potrai" | "potrà" | "potuto"

<dovere> ::= "devo" | "devi" | "deve" | "dobbiamo" | "dovete" | "devono" | "dovevo" | "doveva" | "dovrò" | "dovrai" | "dovrà" | "dovuto"

<volere> ::= "voglio" | "vuoi" | "vuole" | "vogliamo" | "volete" | "vogliono" | "volevo" | "voleva" | "vorrò" | "vorrai" | "vorrà" | "voluto"


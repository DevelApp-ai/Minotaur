/* Extended context rules for dialectal features */
@CONTEXT_RULE[dialect-consistency]:
    IF <sentence> CONTAINS @DIALECT[bavarian]
    THEN ALL_DIALECT_ELEMENTS SHOULD_USE @DIALECT[bavarian]
    ELSE WARNING "Mixing dialects within a sentence may be confusing"

@CONTEXT_RULE[modal-particle-position]:
    IF <modal-particle> IN <middle-field>
    THEN VALID
    ELSE WARNING "Modal particles typically appear in middle field"

@CONTEXT_RULE[double-infinitive]:
    IF <modal-perfect> CONTAINS <double-infinitive>
    THEN AUXILIARY_MUST_BE "haben"
    ELSE ERROR "Double infinitive construction requires 'haben' as auxiliary"

@CONTEXT_RULE[topicalization-v2]:
    IF <topicalized-sentence> HAS_FRONTED_ELEMENT
    THEN <finite-verb> MUST_BE AT_POSITION 2
    ELSE ERROR "V2 constraint violated in topicalization"

@CONTEXT_RULE[subordinate-conjunction-agreement]:
    IF <subordinate-clause> USES <temporal-conjunction>
    THEN <verb-tense> SHOULD_AGREE_WITH_TEMPORAL_MEANING
    ELSE WARNING "Tense should align with temporal conjunction meaning"


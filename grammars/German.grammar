                         | <fronted-focus>
                         | <right-dislocation>

<fronted-focus> ::= <focused-constituent> <opt-whitespace> <finite-verb> <opt-whitespace> <subject> <opt-whitespace> <verb-complement>?

<right-dislocation> ::= <main-clause> <opt-whitespace> "," <opt-whitespace> <pronoun> <opt-whitespace> <noun-phrase>

/* Information structure */
<topic-comment-structure> ::= <topic> <opt-whitespace> "," <opt-whitespace> <comment>

<topic> ::= <noun-phrase>

<comment> ::= <predicate>

<focus-background-structure> ::= <background> <opt-whitespace> <focus>

<background> ::= <subordinate-clause>

<focus> ::= <main-clause>

/* Extended pronominal reference */
<anaphoric-reference> ::= <personal-pronoun>
                       | <demonstrative-pronoun>

<cataphoric-reference> ::= <demonstrative-pronoun> <opt-whitespace> <subordinate-clause>

/* Reciprocal constructions */
<reciprocal-construction> ::= <reciprocal-pronoun> <opt-whitespace> <verb-phrase>

<reciprocal-pronoun> ::= "einander"
                      | "gegenseitig"
                      | "sich" <opt-whitespace> "gegenseitig"

/* Intensive pronouns */
<intensive-pronoun> ::= <reflexive-pronoun> <opt-whitespace> "selbst"
                     | <reflexive-pronoun> <opt-whitespace> "selber"

/* Distributive constructions */
<distributive-construction> ::= "je" <opt-whitespace> <numeral>
                             | "jeweils" <opt-whitespace> <numeral>

/* Collective constructions */
<collective-construction> ::= <collective-noun> <opt-whitespace> <plural-verb>

<collective-noun> ::= "Familie" | "Gruppe" | "Team" | "Regierung" | "Volk"

<plural-verb> ::= <verb-present> /* plural form */

/* Extended aspect markers */
<progressive-aspect> ::= "gerade" <opt-whitespace> <verb-present>
                      | "dabei" <opt-whitespace> "sein" <opt-whitespace> "zu" <opt-whitespace> <verb-infinitive>

<habitual-aspect> ::= "pflegen" <opt-whitespace> "zu" <opt-whitespace> <verb-infinitive>
                   | <adverb-of-frequency> <opt-whitespace> <verb-present>

<adverb-of-frequency> ::= "immer" | "oft" | "manchmal" | "selten" | "nie" | "stets" | "regelmäßig"

<inchoative-aspect> ::= "anfangen" <opt-whitespace> "zu" <opt-whitespace> <verb-infinitive>
                     | "beginnen" <opt-whitespace> "zu" <opt-whitespace> <verb-infinitive>

<terminative-aspect> ::= "aufhören" <opt-whitespace> "zu" <opt-whitespace> <verb-infinitive>
                      | "beenden" <opt-whitespace> <verb-infinitive>

/* Causative constructions */
<causative-construction> ::= "lassen" <opt-whitespace> <verb-infinitive>
                          | "machen" <opt-whitespace> "dass" <opt-whitespace> <subordinate-content>

/* Permissive constructions */
<permissive-construction> ::= "lassen" <opt-whitespace> <object> <opt-whitespace> <verb-infinitive>

/* Extended dialectal expressions */
<dialect-expression> ::= @DIALECT[bavarian] ( <bavarian-expression> )
                      | @DIALECT[swabian] ( <swabian-expression> )
                      | @DIALECT[saxon] ( <saxon-expression> )
                      | @DIALECT[rhine_franconian] ( <rhine_franconian-expression> )
                      | @DIALECT[low_german] ( <low_german-expression> )
                      | @DIALECT[berlin] ( <berlin-expression> )

<bavarian-expression> ::= "basst" <opt-whitespace> "scho" | "pfiat" <opt-whitespace> "di" | "griaß" <opt-whitespace> "di"

<swabian-expression> ::= "passt" <opt-whitespace> "scho" | "läuft" | "no" <opt-whitespace> "guat"

<saxon-expression> ::= "nu" <opt-whitespace> "gudd" | "passt" <opt-whitespace> "scho"

<rhine_franconian-expression> ::= "geht" <opt-whitespace> "klar" | "alles" <opt-whitespace> "paletti"

<low_german-expression> ::= "moin" | "dat" <opt-whitespace> "geiht"

<berlin-expression> ::= "dit" <opt-whitespace> "is" <opt-whitespace> "dufte" | "keen" <opt-whitespace> "Problem"

/* Additional context-sensitive validation rules */
@CONTEXT_RULE[subject-verb-agreement]:
    IF <subject>.@NUMBER == <finite-verb>.@NUMBER
    THEN VALID
    ELSE ERROR "Subject and finite verb must agree in number"

@CONTEXT_RULE[gender-pronoun-antecedent]:
    IF <pronoun>.@GENDER == <antecedent>.@GENDER
    THEN VALID
    ELSE WARNING "Pronoun gender should match antecedent"

@CONTEXT_RULE[case-verb-governance]:
    IF <verb> GOVERNS <object>.@CASE
    THEN VALID
    ELSE ERROR "Verb case governance violated"

@CONTEXT_RULE[auxiliary-selection]:
    IF <perfect-auxiliary> MATCHES <main-verb> CHARACTERISTICS
    THEN VALID
    ELSE ERROR "Auxiliary selection must match verb characteristics (motion/change of state)"

@CONTEXT_RULE[separable-prefix-position]:
    IF <separable-prefix> IN <final-position>
    THEN VALID
    ELSE WARNING "Separable prefix should be in final position in main clauses"

@CONTEXT_RULE[modal-infinitive-agreement]:
    IF <modal-verb> REQUIRES <infinitive-without-zu>
    THEN VALID
    ELSE ERROR "Modal verbs require bare infinitive (without zu)"

@CONTEXT_RULE[passive-agent]:
    IF <passive-voice> HAS_AGENT
    THEN AGENT_MARKED_WITH "von" OR "durch"
    ELSE VALID

@CONTEXT_RULE[comparative-than]:
    IF <comparative-adjective> PRESENT
    THEN "als" REQUIRED_FOR_COMPARISON
    ELSE WARNING "Comparatives typically require 'als' to introduce comparison"

@CONTEXT_RULE[superlative-definiteness]:
    IF <superlative-adjective> PRESENT
    THEN REQUIRES <definite-article>
    ELSE WARNING "Superlatives typically require definite article"

@CONTEXT_RULE[genitive-preposition-case]:
    IF <genitive-preposition> PRESENT
    THEN <noun-phrase>.@CASE == genitive
    ELSE ERROR "Genitive prepositions require genitive case"

@CONTEXT_RULE[dative-verb-objects]:
    IF <verb> REQUIRES_DATIVE
    THEN <indirect-object>.@CASE == dative
    ELSE ERROR "Dative verbs require dative objects"

@CONTEXT_RULE[reflexive-verb-pronoun]:
    IF <verb> IS_REFLEXIVE
    THEN <reflexive-pronoun> REQUIRED
    ELSE VALID

@CONTEXT_RULE[question-inversion]:
    IF <yes-no-question> PRESENT
    THEN <finite-verb> AT_POSITION 1
    ELSE ERROR "Yes/no questions require verb-first position"

@CONTEXT_RULE[wh-question-word]:
    IF <wh-question> PRESENT
    THEN <question-word> AT_POSITION 1
    ELSE ERROR "Wh-questions require question word in first position"

@CONTEXT_RULE[conditional-subjunctive]:
    IF <unreal-conditional> PRESENT
    THEN <subjunctive-verb> REQUIRED
    ELSE WARNING "Unreal conditionals should use subjunctive mood"

/* Additional German language validation rules for comprehensive coverage */
@CONTEXT_RULE[dialect-consistency]:
    IF @DIALECT MARKER_PRESENT
    THEN CONSISTENT_DIALECT_USAGE_WITHIN_UTTERANCE
    ELSE VALID

@CONTEXT_RULE[compound-noun-length]:
    IF <compound-noun> LENGTH > 4_PARTS
    THEN WARNING "Very long compound nouns may reduce readability"
    ELSE VALID

@CONTEXT_RULE[modal-particle-stacking]:
    IF MULTIPLE_MODAL_PARTICLES IN_SEQUENCE
    THEN WARNING "Stacking modal particles (doch halt mal) may sound redundant"
    ELSE VALID

@CONTEXT_RULE[separable-prefix-placement]:
    IF <separable-verb> IN_MAIN_CLAUSE
    THEN <prefix> AT_CLAUSE_END
    ELSE ERROR "Separable prefix must be at end of main clause"

@CONTEXT_RULE[genitive-modern-usage]:
    IF <genitive-case> IN_SPOKEN_CONTEXT
    THEN WARNING "Genitive rare in spoken German, consider dative with 'von'"
    ELSE VALID

@CONTEXT_RULE[subjunctive-2-preference]:
    IF <unreal-wish> OR <polite-request>
    THEN PREFER_SUBJUNCTIVE_2_OVER_WÜRDE_CONSTRUCTION
    ELSE VALID

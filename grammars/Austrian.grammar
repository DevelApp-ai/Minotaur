/* Additional context rules for comprehensive coverage */
@CONTEXT_RULE[austrian-verb-regional-agreement]:
    IF @AUSTRIAN[viennese] <austrian-verb> PRESENT
    THEN OTHER_VIENNESE_FORMS_PREFERRED
    ELSE VALID

@CONTEXT_RULE[austrian-adjective-declension]:
    IF <austrian-adjective> PRESENT
    THEN CORRECT_DECLENSION_PATTERN
    ELSE VALID

@CONTEXT_RULE[austrian-compound-culinary]:
    IF <austrian-compound-culinary> PRESENT
    THEN BOTH_PARTS_CULINARY
    ELSE VALID

@CONTEXT_RULE[austrian-coffee-order]:
    IF <austrian-coffee-extended> PRESENT
    THEN COFFEE_HOUSE_CONTEXT
    ELSE VALID

@CONTEXT_RULE[austrian-pastry-article]:
    IF <austrian-pastry> PRESENT
    THEN CORRECT_GENDER_ARTICLE
    ELSE VALID

@CONTEXT_RULE[austrian-transport-context]:
    IF <austrian-transport> PRESENT
    THEN VIENNA_OR_AUSTRIA_CONTEXT
    ELSE VALID

@CONTEXT_RULE[austrian-weather-föhn]:
    IF "Föhn" PRESENT
    THEN ALPINE_CONTEXT
    ELSE VALID

@CONTEXT_RULE[austrian-holiday-context]:
    IF <austrian-holiday> PRESENT
    THEN TEMPORAL_CONTEXT_APPROPRIATE
    ELSE VALID

@CONTEXT_RULE[austrian-dialect-food-match]:
    IF <austrian-culinary-noun> AND @AUSTRIAN[regional]
    THEN REGIONAL_FOOD_TERMS_MATCH
    ELSE VALID

@CONTEXT_RULE[austrian-exclamation-register]:
    IF <austrian-exclamation> PRESENT
    THEN INFORMAL_REGISTER
    ELSE WARNING "Exclamations are informal"

@CONTEXT_RULE[austrian-intensifier-gradability]:
    IF <austrian-intensifier> MODIFIES <adjective>
    THEN <adjective> MUST_BE_GRADABLE
    ELSE ERROR "Cannot intensify non-gradable adjectives"

@CONTEXT_RULE[austrian-diminutive-affection]:
    IF <austrian-diminutive-extended> PRESENT
    THEN AFFECTIONATE_OR_DIMINUTIVE_MEANING
    ELSE VALID

@CONTEXT_RULE[austrian-negation-double]:
    IF <austrian-dialect-negation> PRESENT
    THEN AVOID_DOUBLE_NEGATION
    ELSE VALID

@CONTEXT_RULE[austrian-modal-particle-stacking]:
    IF MULTIPLE <austrian-modal-particle> IN_SEQUENCE
    THEN WARNING "Too many modal particles can be confusing"
    ELSE VALID

@CONTEXT_RULE[austrian-verb-perfect-motion]:
    IF <verb> INDICATES_MOTION
    THEN USE <sein-verb> AS_AUXILIARY
    ELSE USE <haben-verb>

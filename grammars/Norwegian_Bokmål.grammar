/*
 * Norwegian Bokmål Grammar - Comprehensive Edition
 * 
 * This grammar provides extensive coverage of Norwegian Bokmål language structures including:
 * - Regular and irregular verb conjugations (all tenses and moods)
 * - Full noun system (2 genders: common and neuter, 2 numbers)
 * - Strong and weak adjective declensions
 * - Context-sensitive agreement rules (gender, number, definiteness)
 * - V2 word order and topicalization
 * - Relative clauses and complex subordinate structures
 * - Multiple tenses (present, past, perfect, pluperfect, future)
 * - Conditional and imperative moods
 * - Variety distinctions (Conservative/Urban vs. Radical/Rural forms)
 * - Danish-influenced standard with some conservative features
 * 
 * Copyright (C) 2024 Minotaur Project
 * Licensed under GNU Affero General Public License v3.0 (AGPL-3.0)
 */

Grammar: Norwegian_Bokmål
TokenSplitter: Space
FormatType: CEBNF
ContextSensitive: true
SymbolTableSharing: hierarchical

Keywords: og, eller, men, hvis, når, fordi, at, som, der, det, den, de, jeg, du, han, hun, vi, dere, de, meg, deg, ham, henne, oss, dere, dem, min, din, hans, hennes, vår, deres, denne, dette, disse, en, et, ikke, kan, vil, skal, må, ha, være, bli, seg, hverandre, nei, ja, kanskje, altså, også, heller, jo, vel, nok, bare, nettopp, akkurat

/* Variety markers for Norwegian Bokmål forms */
@VARIETY[conservative]    /* Conservative Bokmål - more formal, Danish-influenced, urban usage */
@VARIETY[radical]         /* Radical Bokmål - more colloquial, closer to Nynorsk, rural influence */

/* Optional whitespace */
<opt-whitespace> ::= /[ \t\n\r]+/ | ""
<whitespace> ::= /[ \t\n\r]+/

/* Punctuation */
<punctuation> ::= "." | "!" | "?" | "," | ";" | ":"

/* Top-level sentence structure with V2 word order */
<sentence> ::= <main-clause>
            | <subordinate-clause-standalone>
            | <compound-sentence>
            | <complex-sentence>
            | <multi-embedded-sentence>

/* Main clause with V2 word order (verb-second) */
<main-clause> ::= <declarative-clause>
               | <interrogative-clause>
               | <imperative-clause>
               | <exclamative-clause>

/* V2 declarative: TopicField + FiniteVerb + MiddleField + MainVerb + FinalField */
<declarative-clause> ::= <topic-field> <opt-whitespace> <finite-verb> <opt-whitespace> <middle-field>? <opt-whitespace> <verb-complement>? <opt-whitespace> <final-field>? <punctuation>?

/* Topic field can contain various constituents */
<topic-field> ::= <subject>
               | <adverbial>
               | <object>
               | <prepositional-phrase>

/* Middle field contains subject (if not topicalized), objects, and adverbials */
<middle-field> ::= <middle-field-element> ( <opt-whitespace> <middle-field-element> )*

<middle-field-element> ::= <subject>
                        | <negation>
                        | <sentence-adverb>
                        | <object>
                        | <reflexive-pronoun>

/* Negation with variety variations */
<negation> ::= <standard-negation> | <variety-negation>

<standard-negation> ::= "ikke" | "aldri" | "ingenting" | "ingen" | "intet"

<variety-negation> ::= @VARIETY[conservative] ( "ikke" | "aldri" | "ingenting" )
                    | @VARIETY[radical] ( "ikkje" | "aldri" | "inkje" )

/* Sentence adverbs with variety forms */
<sentence-adverb> ::= <standard-sentence-adverb> | <variety-sentence-adverb>

<standard-sentence-adverb> ::= "alltid" | "ofte" | "sjelden" | "kanskje" | "nok" | "jo" | "vel" | "da" | "også" | "heller" | "bare" | "nettopp" | "akkurat" | "visst"

<variety-sentence-adverb> ::= @VARIETY[conservative] ( "alltid" | "kanskje" | "også" )
                           | @VARIETY[radical] ( "alltid" | "kann hende" | "òg" )

/* Verb complement */
<verb-complement> ::= <infinitive-phrase>
                   | <past-participle>
                   | <present-participle>
                   | <predicate-adjective>

<infinitive-phrase> ::= ( "å" <opt-whitespace> )? <verb-infinitive> ( <opt-whitespace> <object> )?

<predicate-adjective> ::= <adjective>

/* Final field */
<final-field> ::= <subordinate-clause>
               | <relative-clause>
               | <prepositional-phrase>

/* Interrogative clause */
<interrogative-clause> ::= <yes-no-question>
                        | <wh-question>

<yes-no-question> ::= <finite-verb> <opt-whitespace> <subject> <opt-whitespace> <middle-field>? <opt-whitespace> <verb-complement>? "?"

<wh-question> ::= <question-word> <opt-whitespace> <finite-verb> <opt-whitespace> <subject>? <opt-whitespace> <middle-field>? <opt-whitespace> <verb-complement>? "?"

/* Imperative clause */
<imperative-clause> ::= <verb-imperative> <opt-whitespace> <object>? <opt-whitespace> <adverbial>? ( "!" | "." )?

/* Exclamative clause */
<exclamative-clause> ::= <exclamative-word> <opt-whitespace> <adjective>? <opt-whitespace> <noun-phrase>? "!"

<exclamative-word> ::= "hvor" | "så" | "hvilken" | "hvilket"

/* Subordinate clauses */
<subordinate-clause> ::= <subordinating-conjunction> <opt-whitespace> <subordinate-content>

<subordinate-clause-standalone> ::= <subordinate-clause>

<subordinate-content> ::= <subject> <opt-whitespace> <middle-field>? <opt-whitespace> <verb-phrase>

/* Relative clause */
<relative-clause> ::= <relative-pronoun> <opt-whitespace> <subject>? <opt-whitespace> <finite-verb> <opt-whitespace> <verb-complement>?

<relative-pronoun> ::= "som" | "der" | "hvis" | "hvor" | "når"

/* Compound sentence */
<compound-sentence> ::= <main-clause> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <main-clause>

/* Complex sentence */
<complex-sentence> ::= <main-clause> <opt-whitespace> <subordinate-clause>
                    | <subordinate-clause> <opt-whitespace> "," <opt-whitespace> <main-clause>

/* Multi-embedded sentence */
<multi-embedded-sentence> ::= <main-clause> <opt-whitespace> <subordinate-clause> ( <opt-whitespace> <subordinate-clause> )+

/* Subject */
<subject> ::= <noun-phrase>
           | <pronoun-subject>
           | <infinitive-as-subject>

<subject-np> ::= <noun-phrase>

<pronoun-subject> ::= <personal-pronoun-nominative>
                   | <demonstrative-pronoun>

<infinitive-as-subject> ::= "å" <opt-whitespace> <verb-infinitive>

/* Object */
<object> ::= <noun-phrase>
          | <pronoun-object>

<object-np> ::= <noun-phrase>

<pronoun-object> ::= <personal-pronoun-accusative>

// ============================================================================
// NOUN PHRASES (2 genders: common and neuter)
// ============================================================================

<noun-phrase> ::= [ <article> ] [ <adjective> ] <noun>
               | <pronoun>
               | <proper-noun>

// Indefinite articles
<article-common-sg> ::= "en" @GENDER[common] @NUMBER[singular] @DEFINITENESS[indefinite]
<article-neuter-sg> ::= "et" | "ett" @GENDER[neuter] @NUMBER[singular] @DEFINITENESS[indefinite]

// Definite articles (suffixed)
<definite-suffix-common> ::= "en" | "a" @GENDER[common] @DEFINITENESS[definite]
<definite-suffix-neuter> ::= "et" @GENDER[neuter] @DEFINITENESS[definite]

<article> ::= <article-common-sg> | <article-neuter-sg> | "den" | "det" | "de"

// ============================================================================
// NOUNS (common and neuter gender)
// ============================================================================

// Common gender nouns (en-words)
<noun-common> ::= "mann" @GENDER[common] @NUMBER[singular]  // man
               | "mannen" @GENDER[common] @NUMBER[singular] @DEFINITENESS[definite]
               | "menn" @GENDER[common] @NUMBER[plural]
               | "mennene" @GENDER[common] @NUMBER[plural] @DEFINITENESS[definite]
               | "gutt" @GENDER[common] @NUMBER[singular]  // boy
               | "gutten" @GENDER[common] @NUMBER[singular] @DEFINITENESS[definite]
               | "gutter" @GENDER[common] @NUMBER[plural]
               | "guttene" @GENDER[common] @NUMBER[plural] @DEFINITENESS[definite]
               | "kvinne" @GENDER[common] @NUMBER[singular]  // woman
               | "kvinnen" @GENDER[common] @NUMBER[singular] @DEFINITENESS[definite]
               | "kvinner" @GENDER[common] @NUMBER[plural]
               | "kvinnene" @GENDER[common] @NUMBER[plural] @DEFINITENESS[definite]
               | "hund" @GENDER[common] @NUMBER[singular]  // dog
               | "hunden" @GENDER[common] @NUMBER[singular] @DEFINITENESS[definite]
               | "hunder" @GENDER[common] @NUMBER[plural]
               | "hundene" @GENDER[common] @NUMBER[plural] @DEFINITENESS[definite]
               | "bok" @GENDER[common] @NUMBER[singular]  // book
               | "boka" | "boken" @GENDER[common] @NUMBER[singular] @DEFINITENESS[definite]
               | "bøker" | "bøkene" @GENDER[common] @NUMBER[plural]
               | "bil" @GENDER[common] @NUMBER[singular]  // car
               | "bilen" @GENDER[common] @NUMBER[singular] @DEFINITENESS[definite]
               | "biler" @GENDER[common] @NUMBER[plural]
               | "bilene" @GENDER[common] @NUMBER[plural] @DEFINITENESS[definite]

// Neuter gender nouns (et-words)
<noun-neuter> ::= "hus" @GENDER[neuter] @NUMBER[singular]  // house
               | "huset" @GENDER[neuter] @NUMBER[singular] @DEFINITENESS[definite]
               | "hus" @GENDER[neuter] @NUMBER[plural]
               | "husene" @GENDER[neuter] @NUMBER[plural] @DEFINITENESS[definite]
               | "barn" @GENDER[neuter] @NUMBER[singular]  // child
               | "barnet" @GENDER[neuter] @NUMBER[singular] @DEFINITENESS[definite]
               | "barn" @GENDER[neuter] @NUMBER[plural]
               | "barna" @GENDER[neuter] @NUMBER[plural] @DEFINITENESS[definite]
               | "land" @GENDER[neuter] @NUMBER[singular]  // country
               | "landet" @GENDER[neuter] @NUMBER[singular] @DEFINITENESS[definite]
               | "land" @GENDER[neuter] @NUMBER[plural]
               | "landene" @GENDER[neuter] @NUMBER[plural] @DEFINITENESS[definite]

<noun> ::= <noun-common> | <noun-neuter>

// Genitive (possessive -s)
<genitive-noun> ::= <noun> "s" @CASE[genitive]

<proper-noun> ::= /[A-ZÆØÅ][a-zæøå]*/

// ============================================================================
// PRONOUNS
// ============================================================================

// Personal pronouns (no case distinction in modern Norwegian)
<pronoun-1sg> ::= "jeg" @NUMBER[singular] @PERSON[1]
<pronoun-2sg> ::= "du" @NUMBER[singular] @PERSON[2]
<pronoun-3sg-masc> ::= "han" @NUMBER[singular] @PERSON[3] @GENDER[common]
<pronoun-3sg-fem> ::= "hun" @NUMBER[singular] @PERSON[3] @GENDER[common]
<pronoun-3sg-neut> ::= "det" | "den" @NUMBER[singular] @PERSON[3] @GENDER[neuter]

<pronoun-1pl> ::= "vi" @NUMBER[plural] @PERSON[1]
<pronoun-2pl> ::= "dere" @NUMBER[plural] @PERSON[2]
<pronoun-3pl> ::= "de" @NUMBER[plural] @PERSON[3]

// Object forms
<pronoun-object-1sg> ::= "meg" @NUMBER[singular] @PERSON[1]
<pronoun-object-2sg> ::= "deg" @NUMBER[singular] @PERSON[2]
<pronoun-object-3sg-masc> ::= "ham" @NUMBER[singular] @PERSON[3] @GENDER[common]
<pronoun-object-3sg-fem> ::= "henne" @NUMBER[singular] @PERSON[3] @GENDER[common]
<pronoun-object-3sg-neut> ::= "det" | "den" @NUMBER[singular] @PERSON[3] @GENDER[neuter]

<pronoun-object-1pl> ::= "oss" @NUMBER[plural] @PERSON[1]
<pronoun-object-2pl> ::= "dere" @NUMBER[plural] @PERSON[2]
<pronoun-object-3pl> ::= "dem" @NUMBER[plural] @PERSON[3]

<pronoun> ::= <pronoun-1sg> | <pronoun-2sg> | <pronoun-3sg-masc> | <pronoun-3sg-fem> | <pronoun-3sg-neut>
           | <pronoun-1pl> | <pronoun-2pl> | <pronoun-3pl>
           | <pronoun-object-1sg> | <pronoun-object-2sg> | <pronoun-object-3sg-masc>
           | <pronoun-object-3sg-fem> | <pronoun-object-3sg-neut>
           | <pronoun-object-1pl> | <pronoun-object-2pl> | <pronoun-object-3pl>

// Reflexive pronouns
<reflexive-pronoun> ::= "meg" | "deg" | "seg" | "oss" | "dere"

// Possessive pronouns
<possessive-pronoun> ::= "min" | "mitt" | "mine" | "din" | "ditt" | "dine"
                      | "hans" | "hennes" | "sin" | "sitt" | "sine"
                      | "vår" | "vårt" | "våre" | "deres"

// ============================================================================
// ADJECTIVES (agree with noun in gender, number, definiteness)
// ============================================================================

<adjective> ::= "stor" | "stort" | "store"  // big
             | "liten" | "lite" | "små"  // small
             | "god" | "godt" | "gode"  // good
             | "gammel" | "gammelt" | "gamle"  // old
             | "ung" | "ungt" | "unge"  // young
             | "norsk" | "norsk" | "norske"  // Norwegian
             | "fin" | "fint" | "fine"  // nice

// Comparative and superlative
<adjective-comparative> ::= "større" | "mindre" | "bedre" | "eldre" | "yngre"
<adjective-superlative> ::= "størst" | "minst" | "best" | "eldst" | "yngst"

// ============================================================================
// VERB SYSTEM (simplified - same form for all persons)
// ============================================================================

<verb-phrase> ::= <verb> [ <adverb> ]*
               | <auxiliary-verb> <past-participle>
               | <modal-verb> <infinitive>

// Present tense (same for all persons)
<verb-present> ::= <verb-stem> "er" @TENSE[present]
                | <verb-stem> "r" @TENSE[present]

// Past tense (weak verbs)
<verb-past-weak> ::= <verb-stem> "et" | <verb-stem> "te" | <verb-stem> "a" | <verb-stem> "de" @TENSE[past]

// Irregular verbs (common)
<irregular-verb-være> ::= "er" @TENSE[present] | "var" @TENSE[past] | "vært" @TENSE[perfect]  // to be
<irregular-verb-ha> ::= "har" @TENSE[present] | "hadde" @TENSE[past] | "hatt" @TENSE[perfect]  // to have
<irregular-verb-bli> ::= "blir" @TENSE[present] | "ble" @TENSE[past] | "blitt" @TENSE[perfect]  // to become
<irregular-verb-gå> ::= "går" @TENSE[present] | "gikk" @TENSE[past] | "gått" @TENSE[perfect]  // to go
<irregular-verb-komme> ::= "kommer" @TENSE[present] | "kom" @TENSE[past] | "kommet" @TENSE[perfect]  // to come
<irregular-verb-se> ::= "ser" @TENSE[present] | "så" @TENSE[past] | "sett" @TENSE[perfect]  // to see
<irregular-verb-gjøre> ::= "gjør" @TENSE[present] | "gjorde" @TENSE[past] | "gjort" @TENSE[perfect]  // to do
<irregular-verb-si> ::= "sier" @TENSE[present] | "sa" @TENSE[past] | "sagt" @TENSE[perfect]  // to say
<irregular-verb-ta> ::= "tar" @TENSE[present] | "tok" @TENSE[past] | "tatt" @TENSE[perfect]  // to take
<irregular-verb-vite> ::= "vet" @TENSE[present] | "visste" @TENSE[past] | "visst" @TENSE[perfect]  // to know

<verb> ::= <verb-present> | <verb-past-weak>
        | <irregular-verb-være> | <irregular-verb-ha> | <irregular-verb-bli>
        | <irregular-verb-gå> | <irregular-verb-komme> | <irregular-verb-se>
        | <irregular-verb-gjøre> | <irregular-verb-si> | <irregular-verb-ta> | <irregular-verb-vite>

<verb-stem> ::= /[a-zæøå]+/

// Auxiliary verbs
<auxiliary-verb> ::= "har" | "hadde" | "er" | "var"  // have, be (for perfect tenses)

// Modal verbs
<modal-verb> ::= "kan" | "kunne"  // can
              | "må" | "måtte"  // must
              | "vil" | "ville"  // will
              | "skal" | "skulle"  // shall
              | "bør" | "burde"  // should

<past-participle> ::= <verb-stem> "t" | <verb-stem> "et" | <verb-stem> "dd" | <verb-stem> "tt"

<infinitive> ::= "å" <verb-stem> "e"

<imperative-verb> ::= <verb-stem> | <verb-stem> "e"

// ============================================================================
// ADVERBS
// ============================================================================

<adverb> ::= <time-adverb> | <place-adverb> | <manner-adverb> | <degree-adverb>

<time-adverb> ::= "nå" | "da" | "før" | "siden" | "alltid" | "aldri"
               | "i dag" | "i går" | "i morgen" | "i kveld"

<place-adverb> ::= "her" | "der" | "hjemme" | "ute" | "inne"
                | "ned" | "opp" | "fram" | "tilbake"

<manner-adverb> ::= "godt" | "dårlig" | "fort" | "sakte" | "riktig" | "galt"

<degree-adverb> ::= "veldig" | "så" | "for" | "ganske" | "litt"

// ============================================================================
// PREPOSITIONS
// ============================================================================

<preposition> ::= "i" | "på" | "til" | "fra" | "med" | "av" | "for"
               | "om" | "over" | "under" | "ved" | "hos" | "etter"
               | "mot" | "gjennom" | "rundt" | "mellom"

<prepositional-phrase> ::= <preposition> <noun-phrase>

// ============================================================================
// CONJUNCTIONS
// ============================================================================

<coordinating-conjunction> ::= "og" | "eller" | "men" | "for" | "så"

<subordinating-conjunction> ::= "at" | "hvis" | "når" | "fordi" | "siden"
                             | "selv om" | "før" | "etter" | "mens"

// ============================================================================
// QUESTION WORDS
// ============================================================================

<question-word> ::= "hvem" | "hva" | "når" | "hvor" | "hvordan" | "hvorfor"
                 | "hvilken" | "hvilket" | "hvilke" | "hva slags"

// ============================================================================
// PRONOUNS (complete paradigm)
// ============================================================================

/* Personal pronouns - nominative case */
<personal-pronoun-nominative> ::= "jeg" | "du" | "han" | "hun" | "den" | "det" | "vi" | "dere" | "de" | "man"

/* Personal pronouns - accusative/object case */
<personal-pronoun-accusative> ::= "meg" | "deg" | "ham" | "henne" | "den" | "det" | "oss" | "dere" | "dem"

/* Reflexive pronouns */
<reflexive-pronoun> ::= "meg" | "deg" | "seg" | "oss" | "dere" | "seg"

/* Possessive pronouns */
<possessive-pronoun> ::= <possessive-1sg>
                      | <possessive-2sg>
                      | <possessive-3sg>
                      | <possessive-1pl>
                      | <possessive-2pl>
                      | <possessive-3pl>

<possessive-1sg> ::= @NUMBER[singular] @PERSON[1] ( "min" | "mi" | "mitt" | "mine" )

<possessive-2sg> ::= @NUMBER[singular] @PERSON[2] ( "din" | "di" | "ditt" | "dine" )

<possessive-3sg> ::= @NUMBER[singular] @PERSON[3] ( "hans" | "hennes" | "dens" | "dets" | "sin" | "si" | "sitt" | "sine" )

<possessive-1pl> ::= @NUMBER[plural] @PERSON[1] ( "vår" | "vårt" | "våre" )

<possessive-2pl> ::= @NUMBER[plural] @PERSON[2] ( "deres" )

<possessive-3pl> ::= @NUMBER[plural] @PERSON[3] ( "deres" | "sin" | "si" | "sitt" | "sine" )

/* Demonstrative pronouns */
<demonstrative-pronoun> ::= @GENDER[common] @NUMBER[singular] ( "denne" | "den" )
                         | @GENDER[neuter] @NUMBER[singular] ( "dette" | "det" )
                         | @NUMBER[plural] ( "disse" | "de" )

/* Indefinite pronouns */
<indefinite-pronoun> ::= "noen" | "noe" | "ingen" | "intet" | "all" | "alle" | "hver" | "hvert" | "enhver" | "begge" | "annen" | "annet" | "andre"

/* Reciprocal pronoun */
<reciprocal-pronoun> ::= "hverandre"

// ============================================================================
// EXPANDED VERB SYSTEM
// ============================================================================

<verb-phrase> ::= <simple-verb-phrase>
               | <compound-verb-phrase>
               | <modal-verb-phrase>

<simple-verb-phrase> ::= <finite-verb> ( <opt-whitespace> <adverb> )?

<finite-verb> ::= <verb-present>
               | <verb-past>

<compound-verb-phrase> ::= <auxiliary-verb> <opt-whitespace> <verb-complement>

/* Modal verb phrases */
<modal-verb-phrase> ::= <modal-verb> <opt-whitespace> <infinitive-phrase>

<modal-verb> ::= <modal-present> | <modal-past>

<modal-present> ::= "kan" | "vil" | "skal" | "må" | "bør" | "tør"

<modal-past> ::= "kunne" | "ville" | "skulle" | "måtte" | "burde" | "torde"

/* Main verb with tense */
<main-verb> ::= <verb-present>
             | <verb-past>
             | <verb-perfect>
             | <verb-pluperfect>
             | <verb-future>

/* Auxiliary verbs */
<auxiliary-verb> ::= <modal-verb>
                  | <temporal-auxiliary>
                  | <aspectual-auxiliary>

<temporal-auxiliary> ::= "har" | "hadde" | "er" | "var"

<aspectual-auxiliary> ::= "blir" | "ble"

/* Present tense */
<verb-present> ::= @TENSE[present] ( <regular-verb-present> | <irregular-verb-present> | <variety-verb-present> )

<regular-verb-present> ::= <verb-stem> "er"

<verb-stem> ::= /[a-zæøå]+/

/* Irregular verbs in present tense */
<irregular-verb-present> ::= @IRREGULAR ( "er" | "har" | "blir" | "går" | "kommer" | "ser" | "gir" | "sier" | "tar" | "gjør" | "får" | "vet" | "står" | "sitter" | "ligger" )

/* Variety differences in verb forms */
<variety-verb-present> ::= @VARIETY[conservative] <verb-stem> "er"
                        | @VARIETY[radical] <verb-stem> "ar"

/* Past tense */
<verb-past> ::= @TENSE[past] ( <regular-verb-past> | <irregular-verb-past> | <variety-verb-past> )

<regular-verb-past> ::= <verb-stem> ( "et" | "te" | "de" | "dde" )

/* Irregular past tense verbs */
<irregular-verb-past> ::= @IRREGULAR ( "var" | "hadde" | "ble" | "gikk" | "kom" | "så" | "ga" | "sa" | "tok" | "gjorde" | "fikk" | "visste" | "stod" | "satt" | "lå" )

<variety-verb-past> ::= @VARIETY[conservative] <verb-stem> "et"
                     | @VARIETY[radical] <verb-stem> "a"

/* Perfect tense - har/er + past participle */
<verb-perfect> ::= @TENSE[perfect] <perfect-auxiliary> <opt-whitespace> <past-participle>

<perfect-auxiliary> ::= "har" | "er"

<past-participle> ::= <verb-stem> ( "t" | "et" | "dd" | "tt" )

/* Pluperfect tense - hadde/var + past participle */
<verb-pluperfect> ::= @TENSE[pluperfect] <pluperfect-auxiliary> <opt-whitespace> <past-participle>

<pluperfect-auxiliary> ::= "hadde" | "var"

/* Future tense - skal/vil + infinitive */
<verb-future> ::= @TENSE[future] <future-auxiliary> <opt-whitespace> <verb-infinitive>

<future-auxiliary> ::= "skal" | "vil"

<verb-infinitive> ::= ( "å" <opt-whitespace> )? <verb-stem>

/* Present participle */
<present-participle> ::= <verb-stem> "ende"

/* Imperative */
<verb-imperative> ::= <imperative-verb>

<imperative-verb> ::= <verb-stem> | <irregular-imperative>

<irregular-imperative> ::= "vær" | "ha" | "gå" | "kom" | "la" | "ta" | "gi"

// ============================================================================
// ADJECTIVES (strong and weak declensions)
// ============================================================================

<adjective-phrase> ::= <degree-modifier>? <opt-whitespace> <adjective>

<degree-modifier> ::= "veldig" | "svært" | "ganske" | "litt" | "så" | "for"

<adjective> ::= <adjective-positive>
             | <adjective-comparative>
             | <adjective-superlative>

/* Positive degree with agreement */
<adjective-positive> ::= <adjective-common>
                      | <adjective-neuter>
                      | <adjective-plural>
                      | <adjective-definite>

<adjective-common> ::= @AGREEMENT[common] @DEGREE[positive] <adjective-stem>

<adjective-neuter> ::= @AGREEMENT[neuter] @DEGREE[positive] <adjective-stem> "t"?

<adjective-plural> ::= @AGREEMENT[plural] @DEGREE[positive] <adjective-stem> "e"?

<adjective-definite> ::= @AGREEMENT[definite] @DEGREE[positive] <adjective-stem> "e"

<adjective-stem> ::= /[a-zæøå]+/

/* Comparative degree */
<adjective-comparative> ::= @DEGREE[comparative] ( <regular-comparative> | <irregular-comparative> )

<regular-comparative> ::= <adjective-stem> "ere"

<irregular-comparative> ::= "bedre" | "verre" | "større" | "mindre" | "eldre" | "yngre" | "mer" <opt-whitespace> <adjective-stem>

/* Superlative degree */
<adjective-superlative> ::= @DEGREE[superlative] ( <regular-superlative> | <irregular-superlative> )

<regular-superlative> ::= <adjective-stem> "est" | <adjective-stem> "st"

<irregular-superlative> ::= "best" | "verst" | "størst" | "minst" | "eldst" | "yngst" | "mest" <opt-whitespace> <adjective-stem>

// ============================================================================
// ADVERBS (expanded)
// ============================================================================

<adverb> ::= <time-adverb>
         | <place-adverb>
         | <manner-adverb>
         | <degree-adverb>

<adverbial> ::= <adverb>
             | <prepositional-phrase>
             | <adverbial-clause>

<adverbial-clause> ::= <subordinate-clause>

<time-adverb> ::= "nå" | "da" | "før" | "siden" | "alltid" | "aldri" | "ofte" | "sjelden" | "snart" | "straks"
               | "i dag" | "i går" | "i morgen" | "i kveld" | "i natt" | "i fjor" | "neste år"

<place-adverb> ::= "her" | "der" | "hvor" | "hjemme" | "ute" | "inne" | "oppe" | "nede" | "borte" | "fram" | "tilbake"
                | "nord" | "sør" | "øst" | "vest" | "hit" | "dit"

<manner-adverb> ::= "godt" | "dårlig" | "fort" | "sakte" | "rett" | "galt" | "pent" | "stygt"
                 | "sånn" | "slik" | "hvordan"

<degree-adverb> ::= "veldig" | "svært" | "ganske" | "litt" | "for" | "så" | "altfor" | "ekstra"

// ============================================================================
// PREPOSITIONS (with variety differences)
// ============================================================================

<preposition> ::= <common-preposition> | <variety-preposition>

<common-preposition> ::= "i" | "på" | "med" | "til" | "fra" | "av" | "for" | "over" | "under" | "ved" | "hos" | "blant" | "mellom" | "mot" | "om" | "rundt" | "uten" | "gjennom"

<variety-preposition> ::= @VARIETY[conservative] ( "i" | "på" | "til" )
                       | @VARIETY[radical] ( "i" | "på" | "til" )

<prepositional-phrase> ::= <preposition> <opt-whitespace> <noun-phrase>

// ============================================================================
// CONJUNCTIONS (coordinating and subordinating)
// ============================================================================

<coordinating-conjunction> ::= "og" | "eller" | "men" | "for" | "så" | "samt" | "eller også" | "både" <opt-whitespace> "og" | "verken" <opt-whitespace> "eller"

<subordinating-conjunction> ::= "at" | "hvis" | "når" | "fordi" | "siden" | "selv om" | "før" | "etter" | "mens"
                             | "så" <opt-whitespace> "at" | "til" <opt-whitespace> "tross" <opt-whitespace> "for" <opt-whitespace> "at"
                             | "enten" | "eller" | "som" <opt-whitespace> "om" | "inntil"

// ============================================================================
// PROPER NOUNS AND NAMES
// ============================================================================

<proper-noun> ::= <norwegian-name>
               | <place-name>
               | <foreign-name>

<norwegian-name> ::= /[A-ZÆØÅ][a-zæøå]+/

<place-name> ::= "Oslo" | "Bergen" | "Trondheim" | "Stavanger" | "Kristiansand" | "Tromsø" | "Drammen" | "Fredrikstad" | "Sandnes"

// ============================================================================
// VARIETY-SPECIFIC FORMS AND EXPRESSIONS
// ============================================================================

/* Conservative Bokmål forms (more formal, Danish-influenced) */
<conservative-forms> ::= @VARIETY[conservative] ( <conservative-verb> | <conservative-noun> | <conservative-pronoun> )

<conservative-verb> ::= @VARIETY[conservative] ( <verb-stem> "er" | <verb-stem> "et" )

<conservative-noun> ::= @VARIETY[conservative] @GENDER[common] @DEFINITENESS[definite] ( <noun-stem> "en" )

<conservative-pronoun> ::= @VARIETY[conservative] ( "jeg" | "vi" | "de" | "dem" )

/* Radical Bokmål forms (more colloquial, closer to Nynorsk) */
<radical-forms> ::= @VARIETY[radical] ( <radical-verb> | <radical-noun> | <radical-pronoun> )

<radical-verb> ::= @VARIETY[radical] ( <verb-stem> "ar" | <verb-stem> "a" )

<radical-noun> ::= @VARIETY[radical] @GENDER[common] @DEFINITENESS[definite] ( <noun-stem> "a" )

<radical-pronoun> ::= @VARIETY[radical] ( "jeg" | "vi" | "dei" | "deim" )

// ============================================================================
// COMPOUND NOUNS AND GENITIVE CONSTRUCTIONS
// ============================================================================

<compound-noun> ::= <noun-stem> <linking-element>? <noun>

<linking-element> ::= "s" | "e"

/* Common compound nouns */
<common-compound> ::= "barnehage" | "kjøkkenbenk" | "soverom" | "arbeidsplass" | "ferieuke" | "skoledag" | "togstasjon" | "bilnøkkel" | "matpakke"

/* Genitive constructions */
<genitive-construction> ::= <noun-phrase> "s" <opt-whitespace> <noun-phrase>

// ============================================================================
// TEMPORAL AND CONDITIONAL EXPRESSIONS
// ============================================================================

<temporal-clause> ::= <temporal-conjunction> <opt-whitespace> <subordinate-content>

<temporal-conjunction> ::= "når" | "før" | "etter" | "mens" | "inntil" | "så lenge som" | "så snart"

<conditional-clause> ::= <conditional-conjunction> <opt-whitespace> <subordinate-content>

<conditional-conjunction> ::= "hvis" | "dersom" | "om" | "så fremt" | "med mindre"

<causal-clause> ::= <causal-conjunction> <opt-whitespace> <subordinate-content>

<causal-conjunction> ::= "fordi" | "siden" | "ettersom" | "da"

/* Purpose clauses */
<purpose-clause> ::= <purpose-conjunction> <opt-whitespace> <subordinate-content>

<purpose-conjunction> ::= "for å" | "så" <opt-whitespace> "at" | "til" <opt-whitespace> "å"

/* Comparative constructions */
<comparative-construction> ::= <comparative-word> <opt-whitespace> <noun-phrase>

<comparative-word> ::= "som" | "enn" | "mer enn" | "mindre enn" | "like" <opt-whitespace> "som"

// ============================================================================
// MODAL AND EVIDENTIAL EXPRESSIONS
// ============================================================================

<modal-expression> ::= <modal-adverb> <opt-whitespace> <verb-phrase>

<modal-adverb> ::= "kanskje" | "sikkert" | "sannsynligvis" | "visstnok" | "helst" | "neppe" | "knapt"

<evidential-expression> ::= <evidential-marker> <opt-whitespace> <subordinate-clause>

<evidential-marker> ::= "jeg hører at" | "jeg ser at" | "det sies at" | "det ser ut til at"

/* Negation patterns */
<negation-pattern> ::= <negation> <opt-whitespace> <negation-scope>

<negation-scope> ::= <verb-phrase> | <noun-phrase> | <adjective-phrase>

<double-negation> ::= <negation> <opt-whitespace> ( "noe" | "noen" | "noensinne" )

// ============================================================================
// FOCUS AND TOPICALIZATION
// ============================================================================

<focused-constituent> ::= <focus-particle> <opt-whitespace> <constituent>

<focus-particle> ::= "bare" | "også" | "til og med" | "ikke engang" | "selv" | "nettopp" | "akkurat"

<constituent> ::= <noun-phrase> | <verb-phrase> | <adjective-phrase> | <adverbial>

/* Topicalization patterns */
<topicalized-sentence> ::= <fronted-element> <opt-whitespace> <finite-verb> <opt-whitespace> <subject>? <opt-whitespace> <remainder>

<fronted-element> ::= <object> | <adverbial> | <prepositional-phrase> | <predicate-adjective>

<remainder> ::= <middle-field>? <opt-whitespace> <verb-complement>? <opt-whitespace> <final-field>?

// ============================================================================

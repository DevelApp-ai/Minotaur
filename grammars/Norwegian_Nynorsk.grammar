@CONTEXT_RULE[discourse-marker-position]:
    IF <discourse-marker> PRESENT
    THEN VERIFY_APPROPRIATE_CLAUSE_BOUNDARY ELSE VALID

@CONTEXT_RULE[reported-speech-tense]:
    IF <reported-speech> WITH_PAST_REPORTING_VERB
    THEN VERIFY_TENSE_CONCORDANCE ELSE VALID


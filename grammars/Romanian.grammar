/* Temporal Expressions - Extensive */
<temporal-expression> ::= <time-point> | <duration> | <frequency> | <time-of-day>

<time-point> ::= "ieri" | "azi" | "astăzi" | "mâine" | "alaltăieri" | "poimâine"
              | "acum" | "atunci" | "atunci când" | "când" | "cândva"
              | "mai devreme" | "mai târziu" | "curând" | "în curând"
              | "recent" | "de curând" | "demult" | "de mult timp"
              | "înainte" | "după" | "în timpul" | "în timpul acesta"
              | "deja" | "încă" | "încă nu" | "nu încă"

<duration> ::= "pentru" <opt-whitespace> <numeral> <opt-whitespace> <time-unit>
            | "de" <opt-whitespace> <numeral> <opt-whitespace> <time-unit>
            | "timp de" <opt-whitespace> <numeral> <opt-whitespace> <time-unit>

<time-unit> ::= "secundă" | "secunde" | "minut" | "minute" | "oră" | "ore"
             | "zi" | "zile" | "săptămână" | "săptămâni"
             | "lună" | "luni" | "an" | "ani"

<frequency> ::= "întotdeauna" | "totdeauna" | "mereu"
             | "des" | "adesea" | "frecvent"
             | "rar" | "rareori" | "din când în când"
             | "uneori" | "câteodată" | "ocazional"
             | "niciodată" | "nu niciodată"
             | "în fiecare zi" | "zilnic" | "cotidian"
             | "în fiecare săptămână" | "săptămânal"
             | "în fiecare lună" | "lunar" | "mensual"
             | "în fiecare an" | "anual"
             | "o dată" | "de două ori" | "de trei ori"
             | "de mai multe ori" | "de multe ori"

<time-of-day> ::= "dimineața" | "dimineața devreme" | "dis-de-dimineață"
               | "la amiază" | "la prânz" | "după-amiază"
               | "seara" | "seara târziu"
               | "noaptea" | "la miezul nopții" | "peste noapte"
               | "la ora" <opt-whitespace> <numeral>
               | "pe la ora" <opt-whitespace> <numeral>

/* Spatial Expressions - Extensive */
<spatial-expression> ::= <location> | <direction> | <distance>

<location> ::= "aici" | "acolo" | "colo" | "dincolo"
            | "pretutindeni" | "peste tot" | "oriunde"

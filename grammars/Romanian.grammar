             | "dinspre" | "spre" | "înspre" | "către"
             | "de la" | "până la" | "de la...la"

<distance> ::= <numeral> <opt-whitespace> <distance-unit> <opt-whitespace> "de aici"
            | <numeral> <opt-whitespace> <distance-unit> <opt-whitespace> "de acolo"
            | "la" <opt-whitespace> <numeral> <opt-whitespace> <distance-unit> <opt-whitespace> "distanță"
            | "aproape" | "departe" | "nu departe" | "foarte aproape" | "foarte departe"

<distance-unit> ::= "metru" | "metri" | "kilometru" | "kilometri"
                 | "pas" | "pași" | "stânjeni"

/* Comparative Constructions */
<comparative-construction> ::= <comparative-clause> | <equality-clause> | <superlative-clause> | <proportional-clause>

<comparative-clause> ::= <adjective-comparative> <opt-whitespace> "decât" <opt-whitespace> <noun-phrase>
                      | <adverb-comparative> <opt-whitespace> "decât" <opt-whitespace> <adverbial>
                      | "mai" <opt-whitespace> <adjective> <opt-whitespace> "decât"

<equality-clause> ::= "la fel de" <opt-whitespace> <adjective> <opt-whitespace> "ca" <opt-whitespace> <noun-phrase>
                   | "tot atât de" <opt-whitespace> <adjective> <opt-whitespace> "ca"
                   | "tot așa de" <opt-whitespace> <adjective> <opt-whitespace> "ca"

<superlative-clause> ::= "cel mai" <opt-whitespace> <adjective>
                      | "cea mai" <opt-whitespace> <adjective>
                      | "cei mai" <opt-whitespace> <adjective>
                      | "cele mai" <opt-whitespace> <adjective>

<proportional-clause> ::= "cu cât" <opt-whitespace> <comparative-clause> <opt-whitespace> "," <opt-whitespace> "cu atât" <opt-whitespace> <comparative-clause>

/* Enhanced Sentence Structures */
<parenthetical-clause> ::= <main-clause> <opt-whitespace> "(" <opt-whitespace> <main-clause> <opt-whitespace> ")" <opt-whitespace> <main-clause>?
                        | <main-clause> <opt-whitespace> "," <opt-whitespace> <adverbial> <opt-whitespace> "," <opt-whitespace> <main-clause>

<fronted-subordinate-sentence> ::= <subordinate-clause> <opt-whitespace> "," <opt-whitespace> <main-clause>

<coordinated-complex-sentence> ::= <complex-sentence> <opt-whitespace> <coordinating-conjunction> <opt-whitespace> <complex-sentence>

<extraposed-clause> ::= <correlative-pronoun> <opt-whitespace> <subordinate-clause> <opt-whitespace> "," <opt-whitespace> <main-clause>

<correlative-pronoun> ::= "cel care" | "cea care" | "cei care" | "cele care"
                       | "ceea ce" | "cel ce" | "cea ce"

<infinitive-as-subject> ::= "a" <opt-whitespace> <verb-infinitive> <opt-whitespace> <copula> <opt-whitespace> <adjective>
                         | <article> <opt-whitespace> <verb-infinitive> <opt-whitespace> <copula> <opt-whitespace> <adjective>

<clause-as-subject> ::= "că" <opt-whitespace> <declarative-clause> <opt-whitespace> <copula> <opt-whitespace> <adjective>
                     | "dacă" <opt-whitespace> <declarative-clause> <opt-whitespace> <copula> <opt-whitespace> <adjective>


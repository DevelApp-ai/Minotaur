                   | "al sutălea" | "a suta" | "al miilea" | "a mia"
                   | "al milionulea" | "a miliona"

<fraction> ::= "jumătate" | "o jumătate" | "o treime" | "două treimi"
            | "o pătrime" | "un sfert" | "trei pătrimi" | "trei sferturi"
            | "o cincime" | "două cincimi" | "o zecime" | "două zecimi"

/* Quantifier Systems */
<quantifier> ::= <indefinite-quantifier> | <universal-quantifier> | <negative-quantifier>

<indefinite-quantifier> ::= "mult" | "multă" | "mulți" | "multe" | "multor"
                         | "puțin" | "puțină" | "puțini" | "puține" | "puținor"
                         | "câțiva" | "câteva" | "câtorva"
                         | "destul" | "destulă" | "destui" | "destule"
                         | "mai mult" | "mai puțin" | "mai mulți" | "mai multe"
